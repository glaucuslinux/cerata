ceras_prepare() {
  rsync $RADULA_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

ceras_configure() {
  ./configure \
    --prefix=/usr \
    --bindir=/usr/bin \
    --mandir=/usr/share/man \
    --enable-lto
}

ceras_build() {
  # netbsd-curses compatibility
  LIBS=-lterminfo \
  make
}

ceras_check() {
  :
}

ceras_install() {
  make \
    DESTDIR=$SACD \
    install

  cp -afv $CERD/$nom/ksh.kshrc $SACD/etc

  ln -sfnv $nom $SACD/usr/bin/ksh
  ln -sfnv $nom $SACD/usr/bin/rksh

  ln -sfnv $nom.1 $SACD/usr/share/man/man1/ksh.1
  ln -sfnv $nom.1 $SACD/usr/share/man/man1/rksh.1
}
