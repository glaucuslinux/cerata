prepare() {
  $RSYNC $SRCD/$nom/XML-Parser-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom
}

configure() {
  perl Makefile.PL INSTALLDIRS=vendor
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SACD \
    install

  $RM $SACD/usr/lib/perl5/5.38/core_perl/perllocal.pod
  $RM $SACD/usr/lib/perl5/5.38/vendor_perl/auto/XML/Parser/.packlist
}
