ceras_prepare() {
  rsync $RADULA_RSYNC_FLAGS $SRCD/$nom/XML-Parser-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

ceras_configure() {
  perl Makefile.PL INSTALLDIRS=vendor
}

ceras_build() {
  make
}

ceras_check() {
  :
}

ceras_install() {
  make \
    DESTDIR=$SACD \
    install

  rm -frv \
    $SACD/usr/lib/perl5/5.38/core_perl/perllocal.pod \
    $SACD/usr/lib/perl5/5.38/vendor_perl/auto/XML/Parser/.packlist
}
