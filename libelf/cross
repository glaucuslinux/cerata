prepare() {
  $RSYNC $SRCD/elfutils/elfutils-$ver/ $XSRC/elfutils --delete
  cd $XSRC/elfutils

  $RSYNC $CERD/binutils/config.guess config
  $RSYNC $CERD/binutils/config.rpath config
  $RSYNC $CERD/binutils/config.sub config

  $RSYNC $CERD/musl/error.h lib
  $RSYNC $CERD/musl/error.h src

  $PATCH -p1 -i $CERD/elfutils/patches/alpine/fix-aarch64_fregs.patch
  $PATCH -p1 -i $CERD/elfutils/patches/alpine/fix-uninitialized.patch
  $PATCH -p1 -i $CERD/elfutils/patches/alpine/musl-macros.patch
}

configure() {
  CFLAGS="$CFLAGS -Wno-error" \
  ./configure \
    --build=$BLD \
    --host=$TGT \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/elfutils \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/elfutils \
    --enable-deterministic-archives \
    --enable-install-elfh \
    --disable-symbol-versioning \
    --disable-nls \
    --disable-rpath \
    --disable-libdebuginfod \
    --disable-debuginfod \
    --with-zlib \
    --with-bzlib \
    --with-lzma \
    --with-zstd
}

build() {
  $MAKE \
    -C lib

  $MAKE \
    -C $nom
}

check() {
  :
}

install() {
  $MAKE \
    -C $nom \
    DESTDIR=$CRSD \
    install-strip

  $RM $CRSD/usr/lib/$nom.a

  $RSYNC config/$nom.pc $PKG_CONFIG_LIBDIR
}
