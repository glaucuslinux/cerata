prepare() {
  $MKDIR $TBLD/$nom

  cd $SRCD/$nom/$nom-$ver
}

configure() {
  # Use `meson` provided by the host system
  $CERD/meson/glaucus-meson \
    --cross-file $CERD/meson/meson.cross \
    -Dlibcurl=disabled \
    -Dlibarchive=enabled \
    -Dlibpkgconf=enabled \
    -Dsamurai=disabled \
    -Dbestline=enabled \
    -Ddocs=disabled \
    -Dtracy=disabled \
    $TBLD/$nom
}

build() {
  samu \
    -C $TBLD/$nom
}

check() {
  :
}

install() {
  DESTDIR=$CRSD \
  samu \
    -C $TBLD/$nom \
    install

  $RSYNC $CERD/$nom/glaucus-$nom $CRSD/usr/bin
}
