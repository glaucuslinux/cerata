exec meson setup \
  -Dprefix=/usr \
  -Dsharedstatedir=/var/lib \
  -Dauto_features=enabled \
  -Dbackend=ninja \
  -Dbuildtype=release \
  -Dstrip=true \
  -Dwrap_mode=nodownload \
  -Db_lto=true \
  -Db_pie=true \
  "$@"
