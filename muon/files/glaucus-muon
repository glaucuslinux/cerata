#!/bin/sh

# Copyright (c) 2018-2025, Firas Khalil Khana
# Distributed under the terms of the ISC License

exec muon setup \
  -Dprefix=/usr \
  -Dlibdir=/usr/lib \
  -Dlibexecdir=/usr/lib \
  -Dlocalstatedir=/var \
  -Dsbindir=/usr/bin \
  -Dsharedstatedir=/var/lib \
  -Dsysconfdir=/etc \
  -Dauto_features=disabled \
  -Ddebug=false \
  -Ddefault_library=shared \
  -Doptimization=2 \
  -Dstrip=true \
  -Dwrap_mode=nodownload \
  -Db_lto=true \
  -Db_pie=true \
  "$@"
