prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom
}

configure() {
  # Use `samurai` provided by the host system
  $CERD/$nom/glaucus-$nom \
    -Dlibcurl=disabled \
    -Dlibarchive=enabled \
    -Dlibpkgconf=enabled \
    -Dsamurai=disabled \
    -Dbestline=enabled \
    -Ddocs=disabled \
    -Dtracy=disabled \
    build
}

build() {
  samu \
    -C build
}

check() {
  :
}

install() {
  DESTDIR=$VNMD/$nom/sac \
  $nom \
    -C build \
    install
}
