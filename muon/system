ceras_prepare() {
  install -dv $TBLD/$nom

  cd $SRCD/$nom/$nom-$ver
}

ceras_configure() {
  $CERD/$nom/glaucus-$nom \
    -Dlibcurl=disabled \
    -Dlibarchive=enabled \
    -Dlibpkgconf=enabled \
    -Dsamurai=disabled \
    -Dbestline=enabled \
    -Ddocs=disabled \
    -Dtracy=disabled \
    $TBLD/$nom
}

ceras_build() {
  samu \
    -C $TBLD/$nom
}

ceras_check() {
  :
}

ceras_install() {
  DESTDIR=$SACD \
  $nom \
    -C $TBLD/$nom \
    install

  rsync $RADULA_RSYNC_FLAGS $CERD/$nom/glaucus-$nom $SACD/usr/bin
}
