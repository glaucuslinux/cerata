prepare() {
  $MKDIR $SBLD/$nom

  cd $SRCD/$nom/$nom-$ver
}

configure() {
  $CERD/$nom/glaucus-$nom \
    -Dlibcurl=disabled \
    -Dlibarchive=enabled \
    -Dlibpkgconf=enabled \
    -Dsamurai=disabled \
    -Dbestline=enabled \
    -Ddocs=disabled \
    -Dtracy=disabled \
    $SBLD/$nom
}

build() {
  samu \
    -C $SBLD/$nom
}

check() {
  :
}

install() {
  DESTDIR=$SACD \
  $nom \
    -C $SBLD/$nom \
    install

  $RSYNC $CERD/$nom/glaucus-$nom $SACD/usr/bin
}
