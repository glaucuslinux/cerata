prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom
}

configure() {
  # Use `samurai` provided by the host system
  muon setup \
    --prefix=/usr \
    --bindir=/usr/bin \
    --datadir=/usr/share \
    --includedir=/usr/include \
    --infodir=/usr/share/info \
    --libdir=/usr/lib \
    --libexecdir=/usr/lib/$nom \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --sbindir=/usr/bin \
    --sharedstatedir=/var/lib \
    --sysconfdir=/etc \
    --backend=ninja \
    --buildtype=release \
    --stdsplit \
    --strip \
    --wrap-mode=nodownload \
    -Db_lto=true \
    -Db_lto_mode=thin \
    -Db_pie=true \
    -Dlibcurl=disabled \
    -Dlibarchive=enabled \
    -Dlibpkgconf=enabled \
    -Dsamurai=disabled \
    -Dbestline=enabled \
    -Ddocs=disabled \
    -Dtracy=disabled \
    build
}

build() {
  samu \
    -C build
}

check() {
  :
}

install() {
  DESTDIR=$VNMD/$nom/sac \
  muon \
    -C build \
    install
}
