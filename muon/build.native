prepare() {
  install -dv $TBLD/$nom

  cd $SRCD/$nom/$nom-$ver
}

configure() {
  $CERD/$nom/glaucus-$nom \
    -Dlibcurl=disabled \
    -Dlibarchive=enabled \
    -Dlibpkgconf=enabled \
    -Dsamurai=disabled \
    -Dbestline=enabled \
    -Ddocs=disabled \
    -Dtracy=disabled \
    $TBLD/$nom
}

build() {
  samu \
    -C $TBLD/$nom
}

check() {
  :
}

package() {
  DESTDIR=$SACD \
  muon \
    -C $TBLD/$nom \
    install

  cp -afv $CERD/$nom/glaucus-$nom $SACD/usr/bin
}
