prepare() {
  mkdir -pv build

  if [ $BOOTSTRAP = yes ]; then
    ./bootstrap.sh build
  fi
}

configure() {
  if [ $BOOTSTRAP = yes ]; then
    PATH="build:$PATH"
  fi

  glaucus-$nom \
    -Dlibcurl=disabled \
    -Dlibarchive=enabled \
    -Dlibpkgconf=enabled \
    -Dsamurai=disabled \
    -Dbestline=enabled \
    -Ddocs=disabled \
    -Dtracy=disabled \
    build
}

build() {
  samu \
    -C build
}

check() {
  :
}

package() {
  DESTDIR="$SACD" \
  $nom \
    -C build \
    install

  cp -afv "$CERD"/$nom/glaucus-$nom "$SACD"/usr/bin
}
