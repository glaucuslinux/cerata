prepare() {
  patch -p0 -i "$CERD"/$nom/patches/glaucus/0001-use-gnu-hash-style.patch
}

configure() {
  ./configure \
    --host=$TGT \
    --prefix=/usr \
    --exec-prefix=/usr \
    --dynlibdir=/usr/lib \
    --bindir=/usr/bin \
    --libexecdir=/usr/bin \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --skeldir=/etc/s6/skel \
    --tmpfsdir=/run \
    --scandir=service \
    --with-sysdeps="$CRSD"/usr/lib/skalibs/sysdeps \
    --with-include="$CRSD"/usr/include \
    --with-lib="$CRSD"/usr/lib \
    --with-dynlib="$CRSD"/usr/lib \
    --enable-shared \
    --disable-static \
    --disable-allstatic \
    --enable-utmps
}

build() {
  make \
    strip
}

package() {
  make \
    DESTDIR="$CRSD" \
    install
}
