prepare() {
  patch -p0 -i "$CERD"/$nom/patches/glaucus/0001-use-gnu-hash-style.patch
}

configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --dynlibdir=/usr/lib \
    --bindir=/usr/bin \
    --libexecdir=/usr/bin \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --skeldir=/etc/s6/skel \
    --tmpfsdir=/run \
    --scandir=service \
    --enable-shared \
    --disable-static \
    --disable-allstatic \
    --enable-utmps
}

build() {
  make \
    strip
}

package() {
  make \
    DESTDIR="$SACD" \
    install
}
