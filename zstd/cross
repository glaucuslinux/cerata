ceras_prepare() {
  $RADULA_RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  patch --no-backup-if-mismatch -p0 -i $CERD/$nom/patches/clear/multi-thread-default.patch

  patch --no-backup-if-mismatch -p0 -i $CERD/$nom/patches/opensuse/p${nom}.1.patch
}

ceras_configure() {
  :
}

ceras_build() {
  $MAKE \
    HAVE_PTHREAD=1 \
    ZSTD_LEGACY_SUPPORT=0 \
    HAVE_ZLIB=1 \
    HAVE_LZMA=1 \
    HAVE_LZ4=1 \
    BACKTRACE=0

  $MAKE \
    lib-mt

  $MAKE \
    -C contrib/p$nom
}

ceras_check() {
  :
}

ceras_install() {
  $MAKE \
    DESTDIR=$CRSD \
    PREFIX=/usr \
    install

  # Install parallel zstd as well
  $MAKE \
    DESTDIR=$CRSD \
    PREFIX=/usr \
    -C contrib/p$nom \
    install

  # Manually remove the static library
  rm -frv $CRSD/usr/lib/lib$nom.a

  ln -sfnv $nom.1 $CRSD/usr/share/man/man1/p${nom}.1
}
