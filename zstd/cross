prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom

  $PATCH -p1 -i $CERD/$nom/patches/clear/multi-thread-default.patch

  $PATCH -p1 -i $CERD/$nom/patches/opensuse/p${nom}.1.patch
}

configure() {
  :
}

build() {
  $MAKE \
    HAVE_PTHREAD=1 \
    ZSTD_LEGACY_SUPPORT=0 \
    HAVE_ZLIB=1 \
    HAVE_LZMA=1 \
    HAVE_LZ4=1 \
    BACKTRACE=0

  $MAKE \
    lib-mt

  # Build parallel zstd as well (requires `-fexceptions`)
  CXXFLAGS="$(echo $CXXFLAGS | sed 's/-fno-exceptions //')" \
  $MAKE \
    -C contrib/p$nom
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    PREFIX=/usr \
    install

  # Install parallel zstd as well
  $MAKE \
    DESTDIR=$CRSD \
    PREFIX=/usr \
    -C contrib/p$nom \
    install

  # Compressor only
  $RSYNC $XBLD/$nom/programs/$nom-frugal $CRSD/usr/bin

  # Manually remove the static library
  $RM $CRSD/usr/lib/lib$nom.a

  $LN $nom.1 $CRSD/usr/share/man/man1/p${nom}.1
}
