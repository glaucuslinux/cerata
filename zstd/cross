prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom

  $PATCH -p1 -i $CERD/$nom/patches/clear/multi-thread-default.patch

  $MKDIR $XBLD/$nom
}

configure() {
  cmake \
    -S build/cmake \
    -B $XBLD/$nom \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DZSTD_BUILD_CONTRIB=ON \
    -DZSTD_BUILD_STATIC=OFF \
    -DZSTD_LZ4_SUPPORT=ON \
    -DZSTD_LZMA_SUPPORT=ON \
    -DZSTD_PROGRAMS_LINK_SHARED=ON \
    -DZSTD_ZLIB_SUPPORT=ON \
    -G Ninja
}

build() {
  samu \
    -C $XBLD/$nom
}

check() {
  :
}

install() {
  DESTDIR=$CRSD \
  samu \
    -C $XBLD/$nom \
    install

  $RSYNC $XBLD/$nom/programs/$nom-frugal $CRSD/usr/bin
}
