prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  rad_behave_patch 0 $nom glaucus 0001-multi-thread-default
}

configure() {
  :
}

build() {
  $MAKE \
    HAVE_PTHREAD=1 \
    ZSTD_LEGACY_SUPPORT=0 \
    HAVE_ZLIB=0 \
    HAVE_LZMA=0 \
    HAVE_LZ4=0 \
    BACKTRACE=0
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    PREFIX=/usr \
    install

  $RM $SCER/$nom/sac/usr/lib/lib$nom.a
}
