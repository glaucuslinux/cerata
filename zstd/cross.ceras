prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom

  radula_behave_patch 0 $nom glaucus 0001-multi-thread-default
}

configure() {
  :
}

build() {
  $MAKE \
    HAVE_PTHREAD=1 \
    ZSTD_LEGACY_SUPPORT=0 \
    HAVE_ZLIB=1 \
    HAVE_LZMA=1 \
    HAVE_LZ4=1 \
    BACKTRACE=0
}

test() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    PREFIX=/usr \
    install

  $RM $CRSD/usr/lib/lib$nom.a
}
