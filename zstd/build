prepare() {
  patch -p0 -i "$CERD"/$nom/patches/clear/multi-thread-default.patch

  patch -p0 -i "$CERD"/$nom/patches/opensuse/p$nom.1.patch

  patch -p1 -i "$CERD"/$nom/patches/void/dynamic-p$nom.patch
}

configure() {
  :
}

build() {
  make \
    HAVE_PTHREAD=1 \
    ZSTD_LEGACY_SUPPORT=0 \
    HAVE_ZLIB=1 \
    HAVE_LZMA=1 \
    HAVE_LZ4=1 \
    BACKTRACE=0

  make \
    lib-mt

  make \
    -C contrib/p$nom
}

check() {
  make \
    shortest
}

package() {
  make \
    DESTDIR="$SACD" \
    PREFIX=/usr \
    install

  # Install parallel zstd as well
  make \
    DESTDIR="$SACD" \
    PREFIX=/usr \
    -C contrib/p$nom \
    install

  # Remove static library
  rm -fv "$SACD"/usr/lib/lib$nom.a
}
