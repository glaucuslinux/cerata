build() {
  make \
    HAVE_PTHREAD=1 \
    ZSTD_LEGACY_SUPPORT=0 \
    HAVE_ZLIB=0 \
    HAVE_LZMA=0 \
    HAVE_LZ4=0 \
    BACKTRACE=0

  make \
    lib-mt
}

check() {
  make \
    shortest
}

package() {
  make \
    DESTDIR="$SACD" \
    prefix=/usr \
    exec_prefix=/usr \
    bindir=/usr/bin \
    libdir=/usr/lib \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    install

  # Remove static library
  rm -fv "$SACD"/usr/lib/lib$nom.a
}
