prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  $PATCH -p1 -i $CERD/$nom/patches/clear/multi-thread-default.patch

  $PATCH -p1 -i $CERD/$nom/patches/opensuse/p${nom}.1.patch
}

configure() {
  :
}

build() {
  $MAKE \
    HAVE_PTHREAD=1 \
    ZSTD_LEGACY_SUPPORT=0 \
    HAVE_ZLIB=1 \
    HAVE_LZMA=1 \
    HAVE_LZ4=1 \
    BACKTRACE=0

  $MAKE \
    lib-mt

  $MAKE \
    -C contrib/p$nom
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SACD \
    PREFIX=/usr \
    install

  # Install parallel zstd as well
  $MAKE \
    DESTDIR=$SACD \
    PREFIX=/usr \
    -C contrib/p$nom \
    install

  # Manually remove the static library
  rm -frv $SACD/usr/lib/lib$nom.a

  ln -sfnv $nom.1 $SACD/usr/share/man/man1/p${nom}.1
}
