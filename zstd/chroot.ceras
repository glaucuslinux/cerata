prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $CSRC/$nom --delete
  cd $CSRC/$nom

  $SCRD/patch 1 $nom clear multi-thread-default
}

configure() {
  :
}

build() {
  $MAKE \
    HAVE_PTHREAD=1 \
    ZSTD_LEGACY_SUPPORT=0 \
    HAVE_ZLIB=0 \
    HAVE_LZMA=0 \
    HAVE_LZ4=0 \
    BACKTRACE=0
}

install() {
  $MAKE \
    PREFIX=$TLCD \
    install

  $RM $TLCD/lib/lib$nom.a
}
