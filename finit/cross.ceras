prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom

  radula_behave_gnu guess .
  radula_behave_gnu sub .

  radula_behave_patch 0 $nom troglobit 0001-skip-unknown-signals
}

configure() {
  ./configure \
    --build=$BLD \
    --host=$TGT \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --libexecdir=/usr/bin \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --runstatedir=/run \
    --enable-auto-reload \
    --enable-progress \
    --disable-doc \
    --disable-contrib \
    --with-heading="glaucus $species $ARCH" \
    --with-fifo=/var/run/initctl \
    --with-hostname=glaucus \
    --with-random-seed=/var/lib/urandom/seed
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    install-strip

  $LN $nom $CRSD/usr/bin/init

  $RSYNC $CERD/$nom/$nom.conf $CRSD/etc
}
