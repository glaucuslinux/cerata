prepare() {
  patch -p1 -i "$CERD"/$nom/patches/alpine/conf.patch
}

configure() {
  :
}

build() {
  make \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS"
}

check() {
  ./test.sh
}

package() {
  mkdir -pv \
    "$SACD"/usr/bin \
    "$SACD"/usr/share/$nom

  mv -fv vi "$SACD"/usr/bin
  ln -fnsv vi "$SACD"/usr/bin/ex

  mv -fv ecmd.sh "$SACD"/usr/share/$nom
}
