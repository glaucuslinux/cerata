prepare() {
  :
}

configure() {
  :
}

build() {
  make \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS"
}

check() {
  ./test.sh
}

package() {
  mkdir -pv "$SACD"/usr/bin
  mv -fv vi "$SACD"/usr/bin

  ln -fnsv vi "$SACD"/usr/bin/ex
}
