configure() {
  glaucus-configure \
    --disable-static \
    --disable-docs \
    --disable-exec-static-tramp \
    --disable-multi-os-directory \
    --disable-symvers \
    --with-pic \
    --with-gcc-arch=$CARCH
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
