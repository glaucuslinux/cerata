ceras_prepare() {
  rsync $RADULA_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

ceras_configure() {
  patch --no-backup-if-mismatch -p0 -i $CERD/$nom/patches/glaucus/0001-use-gnu-hash-style.patch

  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --dynlibdir=/usr/lib \
    --bindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --enable-shared \
    --disable-static \
    --disable-allstatic \
    --enable-nsss
}

ceras_build() {
  $MAKE \
    strip
}

ceras_check() {
  :
}

ceras_install() {
  $MAKE \
    DESTDIR=$SACD \
    install

  install -dv $SACD/etc
  rsync $RADULA_RSYNC_FLAGS $CERD/$nom/mdev.conf $SACD/etc
}
