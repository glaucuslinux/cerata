prepare() {
  patch \
    -i "$CERD"/$nom/patches/glaucus/0001-use-gnu-hash-style.patch \
    -p 0
}

configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --dynlibdir=/usr/lib \
    --bindir=/usr/bin \
    --libexecdir=/usr/lib \
    --libdir=/usr/lib \
    --enable-shared \
    --disable-static \
    --disable-allstatic
}

build() {
  make \
    strip
}

package() {
  make \
    DESTDIR="$SACD" \
    install

  mkdir -p "$SACD"/etc
  cp -fPp "$CERD"/$nom/files/mdev.conf "$SACD"/etc
}
