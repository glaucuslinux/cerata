prepare() {
  cd $TBLD/gcc

  make \
    -C $TGT/$nom \
    distclean
}

configure() {
  :
}

build() {
  make \
    all-target-$nom
}

check() {
  :
}

package() {
  make \
    install-strip-target-$nom

  # Remove static libraries
  rm -fv \
    $TLCD/usr/lib/gcc/$TGT/$ver/${nom}_eh.a \
    $TLCD/usr/lib/gcc/$TGT/$ver/libgcov.a
}
