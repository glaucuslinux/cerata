prepare() {
  cd $TBLD/gcc

  $MAKE \
    -C $TGT/$nom \
    distclean
}

configure() {
  :
}

build() {
  $MAKE \
    all-target-$nom
}

check() {
  :
}

install() {
  $MAKE \
    install-strip-target-$nom

  # Manually remove the static libraries
  rm -frv \
    $TLCD/usr/lib/gcc/$TGT/$ver/${nom}_eh.a \
    $TLCD/usr/lib/gcc/$TGT/$ver/libgcov.a
}
