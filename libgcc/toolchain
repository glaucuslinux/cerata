ceras_prepare() {
  cd $TBLD/gcc

  make \
    -C $TGT/$nom \
    distclean
}

ceras_configure() {
  :
}

ceras_build() {
  make \
    all-target-$nom
}

ceras_check() {
  :
}

ceras_install() {
  make \
    install-strip-target-$nom

  # Remove static libraries
  rm -frv \
    $TLCD/usr/lib/gcc/$TGT/$ver/${nom}_eh.a \
    $TLCD/usr/lib/gcc/$TGT/$ver/libgcov.a
}
