prepare() {
  $MKDIR $XBLD/$nom
  cd $XBLD/$nom
}

configure() {
  # `CC`, `CFLAGS` and `LDFLAGS` have to be specified, otherwise they won't be
  # read!
  $SRCD/$nom/$nom-$ver/configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --includedir=/usr/include \
    --disable-static \
    --enable-shared \
    CC=$CC \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS"
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    install-strip
}
