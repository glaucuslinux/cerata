prepare() {
  patch \
    -i "$CERD"/$nom/patches/glaucus/0001-pure64.patch \
    -p 0
}

configure() {
  ./bootstrap \
    --prefix=/usr \
    --bindir=bin \
    --datadir=share/$nom \
    --docdir=share/doc/$nom \
    --parallel=4 \
    --system-libs \
    --no-system-cppdap \
    --system-curl \
    --system-expat \
    --no-system-jsoncpp \
    --system-zlib \
    --system-bzip2 \
    --system-liblzma \
    --no-system-nghttp2 \
    --system-zstd \
    --system-libarchive \
    --no-system-librhash \
    --no-system-libuv \
    --no-debugger
}

build() {
  make
}

check() {
  bin/ctest
}

package() {
  make \
    DESTDIR="$SACD" \
    install

  cp -fPp "$CERD"/$nom/files/glaucus-$nom "$SACD"/usr/bin
}
