prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom
}

configure() {
  ./bootstrap \
    --prefix=/usr \
    --bindir=/bin \
    --datadir=/share/$nom \
    --docdir=/share/doc/$nom \
    --mandir=/share/man \
    --parallel=2 \
    --generator=Ninja \
    --system-libs
}

build() {
  samu
}

check() {
  :
}

install() {
  DESTDIR=$CRSD \
  samu \
    install/strip
}
