prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom
}

configure() {
  ./bootstrap \
    --prefix=/usr \
    --bindir=/usr/bin \
    --parallel=2 \
    --generator=Ninja \
    --enable-ccache \
    --system-libs
}

build() {
  samu
}

check() {
  :
}

install() {
  DESTDIR=$CRSD \
  samu \
    install/strip
}
