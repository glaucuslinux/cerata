prepare() {
  mkdir -pv "$TBLD"/$nom
}

configure() {
  glaucus-muon \
    -Dbuild-testsuite=false \
    -Dbuild-examples=false \
    -Dlibthai=disabled \
    -Dxft=disabled \
    "$TBLD"/$nom
}

build() {
  samu \
    -C "$TBLD"/$nom
}

check() {
  :
}

package() {
  DESTDIR="$SACD" \
  muon \
    -C "$TBLD"/$nom \
    install
}
