prepare() {
  ./autogen.sh
}

configure() {
  glaucus-configure \
    --disable-static \
    --enable-pic \
    --enable-multithreading \
    --enable-lz4 \
    --enable-lzma \
    --with-zlib \
    --with-libzstd \
    --with-xxhash
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
