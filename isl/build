prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --disable-static \
    --enable-pic \
    --with-gcc-arch=$CARCH
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  rm -fv "$SACD"/usr/lib/lib$nom.so.23.3.0-gdb.py
}
