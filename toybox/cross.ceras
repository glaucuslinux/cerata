prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom

  rad_behave_patch 0 $nom glaucus 0001-extend-long-iso-format
}

configure() {
  $RSYNC $CERD/$nom/system.config .config

  CROSS_COMPILE= \
  scripts/genconfig.sh
}

build() {
  CROSS_COMPILE= \
  CFLAGS="$CFLAGSNOCOMMONNOLTO" \
  LDFLAGS="$LDFLAGSNORELRO" \
  $MAKE
}

