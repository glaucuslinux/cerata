prepare() {
  patch \
    -i "$CERD"/$nom/patches/glaucus/0001-extend-long-iso-format.patch \
    -p 0
}

configure() {
  cp -fPp "$CERD"/$nom/files/glaucus.config .config
}

build() {
  make \
    LDFLAGS="$LDFLAGS -lutmps"
}

package() {
  mkdir -p "$SACD"/usr/bin

  for i in $(./$nom); do
    ln -fs $nom "$SACD"/usr/bin/$i
  done

  mv -f $nom "$SACD"/usr/bin
}
