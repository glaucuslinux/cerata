prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-extend-long-iso-format.patch
}

configure() {
  $RSYNC $CERD/$nom/glaucus.config .config
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MKDIR $SACD/usr/bin
  $RSYNC $nom $SACD/usr/bin

  $LN $nom $SACD/usr/bin/[
  $LN $nom $SACD/usr/bin/base32
  $LN $nom $SACD/usr/bin/base64
  $LN $nom $SACD/usr/bin/basename
  $LN $nom $SACD/usr/bin/cat
  $LN $nom $SACD/usr/bin/chgrp
  $LN $nom $SACD/usr/bin/chmod
  $LN $nom $SACD/usr/bin/chown
  $LN $nom $SACD/usr/bin/chroot
  $LN $nom $SACD/usr/bin/cksum
  $LN $nom $SACD/usr/bin/comm
  $LN $nom $SACD/usr/bin/cp
  $LN $nom $SACD/usr/bin/cut
  $LN $nom $SACD/usr/bin/date
  $LN $nom $SACD/usr/bin/dd
  $LN $nom $SACD/usr/bin/df
  $LN $nom $SACD/usr/bin/dirname
  $LN $nom $SACD/usr/bin/du
  $LN $nom $SACD/usr/bin/echo
  $LN $nom $SACD/usr/bin/env
  $LN $nom $SACD/usr/bin/expand
  $LN $nom $SACD/usr/bin/expr
  $LN $nom $SACD/usr/bin/factor
  $LN $nom $SACD/usr/bin/false
  $LN $nom $SACD/usr/bin/fmt
  $LN $nom $SACD/usr/bin/fold
  $LN $nom $SACD/usr/bin/getconf
  $LN $nom $SACD/usr/bin/head
  $LN $nom $SACD/usr/bin/hostid
  $LN $nom $SACD/usr/bin/hostname
  $LN $nom $SACD/usr/bin/iconv
  $LN $nom $SACD/usr/bin/id
  $LN $nom $SACD/usr/bin/install
  $LN $nom $SACD/usr/bin/link
  $LN $nom $SACD/usr/bin/ln
  $LN $nom $SACD/usr/bin/logname
  $LN $nom $SACD/usr/bin/ls
  $LN $nom $SACD/usr/bin/md5sum
  $LN $nom $SACD/usr/bin/mkdir
  $LN $nom $SACD/usr/bin/mkfifo
  $LN $nom $SACD/usr/bin/mknod
  $LN $nom $SACD/usr/bin/mktemp
  $LN $nom $SACD/usr/bin/mv
  $LN $nom $SACD/usr/bin/nice
  $LN $nom $SACD/usr/bin/nl
  $LN $nom $SACD/usr/bin/nohup
  $LN $nom $SACD/usr/bin/nproc
  $LN $nom $SACD/usr/bin/od
  $LN $nom $SACD/usr/bin/paste
  $LN $nom $SACD/usr/bin/printenv
  $LN $nom $SACD/usr/bin/printf
  $LN $nom $SACD/usr/bin/pwd
  $LN $nom $SACD/usr/bin/readlink
  $LN $nom $SACD/usr/bin/realpath
  $LN $nom $SACD/usr/bin/rm
  $LN $nom $SACD/usr/bin/rmdir
  $LN $nom $SACD/usr/bin/seq
  $LN $nom $SACD/usr/bin/sha1sum
  $LN $nom $SACD/usr/bin/sha224sum
  $LN $nom $SACD/usr/bin/sha256sum
  $LN $nom $SACD/usr/bin/sha384sum
  $LN $nom $SACD/usr/bin/sha512sum
  $LN $nom $SACD/usr/bin/shred
  $LN $nom $SACD/usr/bin/shuf
  $LN $nom $SACD/usr/bin/sleep
  $LN $nom $SACD/usr/bin/sort
  $LN $nom $SACD/usr/bin/split
  $LN $nom $SACD/usr/bin/stat
  $LN $nom $SACD/usr/bin/stty
  $LN $nom $SACD/usr/bin/sync
  $LN $nom $SACD/usr/bin/tac
  $LN $nom $SACD/usr/bin/tail
  $LN $nom $SACD/usr/bin/tee
  $LN $nom $SACD/usr/bin/test
  $LN $nom $SACD/usr/bin/time
  $LN $nom $SACD/usr/bin/timeout
  $LN $nom $SACD/usr/bin/touch
  $LN $nom $SACD/usr/bin/tr
  $LN $nom $SACD/usr/bin/true
  $LN $nom $SACD/usr/bin/truncate
  $LN $nom $SACD/usr/bin/tty
  $LN $nom $SACD/usr/bin/uname
  $LN $nom $SACD/usr/bin/uniq
  $LN $nom $SACD/usr/bin/unlink
  $LN $nom $SACD/usr/bin/wc
  $LN $nom $SACD/usr/bin/which
