prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom
}

configure() {
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-optimize-more.patch

  # Remove upstream patch in following release
  $PATCH -p1 -i $CERD/$nom/patches/upstream/0001-explicitly-add-required-CPPFLAGS-for-tic.patch
}

build() {
  $MAKE \
    PREFIX=/usr \
    all-dynamic
}

check() {
  :
}

install() {
  $MAKE \
    PREFIX=/usr \
    DESTDIR=$VNMD/$nom/sac \
    install-dynamic

  $LN tic $VNMD/$nom/sac/usr/bin/captoinfo
  $LN tic $VNMD/$nom/sac/usr/bin/infotocap

  $CHMOD 0755 $VNMD/$nom/sac/usr/lib/libcurses.so
  $CHMOD 0755 $VNMD/$nom/sac/usr/lib/libform.so
  $CHMOD 0755 $VNMD/$nom/sac/usr/lib/libmenu.so
  $CHMOD 0755 $VNMD/$nom/sac/usr/lib/libpanel.so
  $CHMOD 0755 $VNMD/$nom/sac/usr/lib/libterminfo.so

  # Some cerata (e.g. `util-linux` and `yash`) link against this symlink
  $LN libterminfo.so $VNMD/$nom/sac/usr/lib/libtinfo.so
}
