prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $CSRC/$nom --delete
  cd $CSRC/$nom

  rad_behave_patch 1 $nom sabotage 0001-mac-compat-don-t-redefine-__dead
}

configure() {
  $RSYNC $CERD/$nom/config.mak.chroot config.mak

  rad_behave_patch 0 $nom glaucus 0001-optimize-more
}

build() {
  $MAKE \
    all-dynamic
}

install() {
  $MAKE \
    install-dynamic

  $LN tic $TLCD/bin/captoinfo
  $LN tic $TLCD/bin/infotocap
}
