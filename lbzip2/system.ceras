prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  rad_behave_gnu guess build-aux
  rad_behave_gnu sub build-aux

  $MKDIR $SBLD/$nom
  cd $SBLD/$nom
}

configure() {
  $SSRC/$nom/configure \
    --prefix=/usr
}

build() {
  $MAKE
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install-strip

  $LN $nom $SCER/$nom/sac/usr/bin/bunzip2
  $LN $nom $SCER/$nom/sac/usr/bin/bzcat
  $LN $nom $SCER/$nom/sac/usr/bin/bzip2
}
