ceras_install() {
  install -dv $SACD/boot
  $RADULA_RSYNC /boot/vmlinuz $SACD/boot

  install -dv $SACD/usr/lib
  $RADULA_RSYNC /usr/lib/modules $SACD/usr/lib
}
