configure() {
  $MAKE \
    O=$SBLD/$nom \
    ARCH=$LARCH \
    CROSS_COMPILE=$XTGT- \
    ${LCARCH}defconfig
}

build() {
  $MAKE \
    O=$SBLD/$nom \
    ARCH=$LARCH \
    CROSS_COMPILE=$XTGT-
}

install() {
  $MAKE \
    O=$SBLD/$nom \
    ARCH=$LARCH \
    CROSS_COMPILE=$XTGT- \
    INSTALL_MOD_PATH=$SCER/$nom/sac/usr \
    modules_install

  $MKDIR $SCER/$nom/sac/boot

  $RSYNC $SBLD/$nom/$LIARCH $SCER/$nom/sac/boot/vmlinuz
  $RSYNC $SBLD/$nom/System.map $SCER/$nom/sac/boot
}
