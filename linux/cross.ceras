prepare() {
  $MKDIR $XBLD/$nom

  cd $SRCD/$nom/$nom-$ver

  $MAKE \
    ARCH=$LARCH \
    mrproper
}

configure() {
  $MAKE \
    O=$XBLD/$nom \
    ARCH=$LARCH \
    ${LCARCH}defconfig
}

build() {
  $MAKE \
    O=$XBLD/$nom \
    ARCH=$LARCH
}

install() {
  $MAKE \
    O=$XBLD/$nom \
    ARCH=$LARCH \
    INSTALL_MOD_PATH=$XCER/$nom/sac/usr \
    modules_install

  $MKDIR $XCER/$nom/sac/boot

  $RSYNC $XBLD/$nom/$LIARCH $XCER/$nom/sac/boot/vmlinuz
  $RSYNC $XBLD/$nom/System.map $XCER/$nom/sac/boot
}
