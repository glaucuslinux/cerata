prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom

  $RSYNC $CERD/binutils/config.guess .
  $RSYNC $CERD/binutils/config.rpath .
  $RSYNC $CERD/binutils/config.sub .

  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-use-utmpx.patch
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0002-fix-utmp-file-path.patch
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0003-fix-wrong-ncursesw-header.patch
}

configure() {
  $AUTORECONF

  # `ncurses` support is enabled by default
  # `systemd` support is disabled by default
  LIBS='-lutmps -lskarnet' \
  ac_cv_func_malloc_0_nonnull=yes \
  ac_cv_func_realloc_0_nonnull=yes \
  ./configure \
    --build=$BLD \
    --host=$TGT \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --disable-nls \
    --disable-static \
    --disable-rpath \
    --enable-watch8bit \
    --disable-kill \
    --enable-sigwinch \
    --enable-wide-percent \
    --enable-wide-memory \
    --disable-modern-top \
    --enable-w-from \
    --disable-whining
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    install-strip

  # `pidwait` and `pkill` are identical to `pgrep`
  $LN pgrep $CRSD/usr/bin/pidwait
  $LN pgrep $CRSD/usr/bin/pkill

  $RM $CRSD/usr/lib/libproc-2.la
}
