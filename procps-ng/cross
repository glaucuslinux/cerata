prepare() {
  $RSYNC $SRCD/$nom/procps-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom

  $RSYNC $CERD/binutils/config.guess .
  $RSYNC $CERD/binutils/config.rpath .
  $RSYNC $CERD/binutils/config.sub .

  $PATCH -p0 -i $CERD/$nom/patches/alpine/0001-musl-fixes.patch

  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-use-utmpx.patch
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0002-fix-utmp-file-path.patch
}

configure() {
  $AUTORECONF

  LIBS='-lutmps -lskarnet' \
  ac_cv_func_malloc_0_nonnull=yes \
  ac_cv_func_realloc_0_nonnull=yes \
  ./configure \
    --build=$BLD \
    --host=$TGT \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --disable-static \
    --disable-nls \
    --disable-rpath \
    --disable-kill \
    --disable-whining
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    install-strip

  # `pkill` and `pwait` are identical to `pgrep`
  $LN pgrep $CRSD/usr/bin/pkill
  $LN pgrep $CRSD/usr/bin/pwait

  $RM $CRSD/usr/lib/libprocps.la
}
