prepare() {
  $RSYNC $SRCD/$nom/procps-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  $RSYNC $CERD/binutils/config.guess .
  $RSYNC $CERD/binutils/config.rpath .
  $RSYNC $CERD/binutils/config.sub .

  $PATCH -p0 -i $CERD/$nom/patches/alpine/0001-musl-fixes.patch

  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-use-utmpx.patch
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0002-fix-utmp-file-path.patch
}

configure() {
  $AUTORECONF

  LIBS='-lutmps -lskarnet' \
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --disable-static \
    --disable-nls \
    --disable-rpath \
    --disable-kill \
    --disable-whining
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install-strip

  $LN pgrep $SCER/$nom/sac/usr/bin/pkill
}
