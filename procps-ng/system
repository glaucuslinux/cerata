prepare() {
  $RSYNC $SRCD/$nom/procps-v$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-netbsd-curses-compatibility.patch

  ./autogen.sh

  $RSYNC $CERD/binutils/config.guess .
  $RSYNC $CERD/binutils/config.rpath .
  $RSYNC $CERD/binutils/config.sub .
}

configure() {
  # `ncurses` support is enabled by default
  # `systemd` support is disabled by default
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --disable-nls \
    --disable-static \
    --disable-rpath \
    --enable-watch8bit \
    --disable-kill \
    --disable-w \
    --enable-sigwinch \
    --enable-wide-percent \
    --enable-wide-memory \
    --disable-modern-top \
    --disable-whining
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$VNMD/$nom/sac \
    install-strip

  # `pidwait` and `pkill` are identical to `pgrep`
  $LN pgrep $VNMD/$nom/sac/usr/bin/pidwait
  $LN pgrep $VNMD/$nom/sac/usr/bin/pkill

  # Remove libtool archive (.la) file
  $RM $VNMD/$nom/sac/usr/lib/libproc2.la
}
