ceras_prepare() {
  $RADULA_RSYNC $SRCD/$nom/procps-v$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  $RADULA_PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-use-utmpx.patch
  $RADULA_PATCH -p0 -i $CERD/$nom/patches/glaucus/0002-fix-utmp-file-path.patch
  $RADULA_PATCH -p0 -i $CERD/$nom/patches/glaucus/0003-netbsd-curses-compatibility.patch

  ./autogen.sh

  $RADULA_RSYNC $CERD/binutils/config.guess .
  $RADULA_RSYNC $CERD/binutils/config.rpath .
  $RADULA_RSYNC $CERD/binutils/config.sub .
}

ceras_configure() {
  # `ncurses` support is enabled by default
  # `systemd` support is disabled by default
  LIBS='-lutmps -lskarnet' \
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --disable-nls \
    --disable-static \
    --disable-rpath \
    --enable-watch8bit \
    --disable-kill \
    --enable-sigwinch \
    --enable-wide-percent \
    --enable-wide-memory \
    --disable-modern-top \
    --disable-whining
}

ceras_build() {
  $MAKE
}

ceras_check() {
  :
}

ceras_install() {
  $MAKE \
    DESTDIR=$SACD \
    install-strip

  # `pidwait` and `pkill` are identical to `pgrep`
  ln -sfnv pgrep $SACD/usr/bin/pidwait
  ln -sfnv pgrep $SACD/usr/bin/pkill

  # Remove libtool archive (.la) file
  rm -frv $SACD/usr/lib/libproc2.la
}
