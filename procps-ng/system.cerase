prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete &&
  cd $SSRC/$nom &&

  rad_behave_gnu guess . &&
  rad_behave_gnu rpath . &&
  rad_behave_gnu sub . &&

  $SCRD/patch 1 $nom adelie use-utmpx
} &&

configure() {
  $AUTORECONF &&

  LIBS='-lutmps -lskarnet' \
  ac_cv_func_malloc_0_nonnull=yes \
  ac_cv_func_realloc_0_nonnull=yes \
  ./configure \
    --build=$XBLD \
    --host=$XTGT \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --sysconfdir=/etc \
    --disable-static \
    --disable-nls \
    --disable-rpath \
    --disable-kill \
    --disable-modern-top \
    --disable-whining \
    --without-systemd
} &&

build() {
  $MAKE
} &&

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install-strip
}
