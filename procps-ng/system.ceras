prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  radula_behave_gnu guess .
  radula_behave_gnu rpath .
  radula_behave_gnu sub .
}

configure() {
  #ac_cv_func_malloc_0_nonnull=yes \
  #ac_cv_func_realloc_0_nonnull=yes \
  ./configure \
    --build=$XBLD \
    --host=$XTGT \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --sysconfdir=/etc \
    --disable-static \
    --disable-nls \
    --disable-rpath \
    --disable-kill \
    --disable-modern-top \
    --disable-whining \
    --without-systemd
}

build() {
  $MAKE
}

test() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install-strip
}
