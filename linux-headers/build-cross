prepare() {
  cd "$TMPD"/$nom/linux-$ver

  make \
    ARCH=x86_64 \
    mrproper
}

build() {
  make \
    ARCH=x86_64 \
    headers
}

package() {
  find usr/include ! -name '*.h' -type f -delete

  cp -afv usr/include "$CRSD"/usr
  rm -frv "$CRSD"/usr/include/drm
}
