prepare() {
  $MKDIR $XBLD/$nom

  cd $SRCD/linux/linux-$ver

  $MAKE \
    ARCH=$LARCH \
    mrproper
}

configure() {
  :
}

build() {
  :
}

check() {
  :
}

install() {
  $MAKE \
    O=$XBLD/$nom \
    ARCH=$LARCH \
    INSTALL_HDR_PATH=$CRSD/usr \
    headers_install
}
