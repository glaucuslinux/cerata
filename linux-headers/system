prepare() {
  install -dv $TBLD/$nom

  cd $SRCD/linux/linux-$ver

  $MAKE \
    ARCH=x86_64 \
    mrproper
}

configure() {
  :
}

build() {
  :
}

check() {
  :
}

install() {
  $MAKE \
    O=$TBLD/$nom \
    ARCH=x86_64 \
    INSTALL_HDR_PATH=$SACD/usr \
    headers_install
}
