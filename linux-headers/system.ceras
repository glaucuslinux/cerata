  $MKDIR $SBLD/$nom

  cd $SRCD/linux/linux-$ver

  $MAKE \
    ARCH=$LARCH \
    mrproper

  $MAKE \
    O=$SBLD/$nom \
    ARCH=$LARCH \
    headers_check
}

