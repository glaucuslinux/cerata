prepare() {
  cd "$TMPD"/$nom/linux-$ver

  make \
    ARCH=x86_64 \
    mrproper
}

build() {
  make \
    ARCH=x86_64 \
    headers
}

package() {
  find usr/include ! -name '*.h' -type f -delete

  mkdir -p "$SACD"/usr
  mv -f usr/include "$SACD"/usr
  rm -fRv "$SACD"/usr/include/drm
}
