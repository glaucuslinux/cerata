prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom

  $RSYNC $CERD/binutils/config.guess .
  $RSYNC $CERD/binutils/config.sub .
}

configure() {
  ./configure \
    --build=$BLD \
    --host=$TGT \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --disable-static \
    --disable-examples
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    install-strip

  $RSYNC $CERD/$nom/inputrc $CRSD/etc

  # Use libedit as a readline drop-in replacement
  $MKDIR $CRSD/usr/include/readline
  touch $CRSD/usr/include/readline/history.h
  touch $CRSD/usr/include/readline/tilde.h
  $LN ../editline/readline.h $CRSD/usr/include/readline/readline.h

  $RM $CRSD/usr/lib/$nom.la

  $LN $nom.so $CRSD/usr/lib/libreadline.so

  $LN $nom.pc $PKG_CONFIG_LIBDIR/readline.pc

  $LN editline.3 $CRSD/usr/share/man/man3/el.3
  $LN editline.3 $CRSD/usr/share/man/man3/$nom.3
}
