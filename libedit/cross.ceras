prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom

  radula_behave_gnu guess .
  radula_behave_gnu sub .
}

configure() {
  CFLAGS="$CFLAGS -D__STDC_ISO_10646__" \
  ./configure \
    --build=$BLD \
    --host=$TGT \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --disable-static \
    --disable-examples
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    install-strip

  $MKDIR $CRSD/usr/include/readline
  touch $CRSD/usr/include/readline/history.h
  touch $CRSD/usr/include/readline/tilde.h
  $LN ../editline/readline.h $CRSD/usr/include/readline/readline.h

  $LN $nom.so $CRSD/usr/lib/libreadline.so
}
