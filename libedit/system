prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  $RSYNC $CERD/binutils/config.guess .
  $RSYNC $CERD/binutils/config.sub .
}

configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --disable-static \
    --disable-examples \
    --with-pic
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SACD \
    install-strip

  $RSYNC $CERD/$nom/editrc $SACD/etc
  $RSYNC $CERD/$nom/inputrc $SACD/etc

  # Use libedit as a drop-in replacement for `readline`
  $MKDIR $SACD/usr/include/readline
  touch $SACD/usr/include/readline/history.h
  touch $SACD/usr/include/readline/tilde.h
  $LN ../editline/readline.h $SACD/usr/include/readline/readline.h

  # Remove libtool archive (.la) file
  rm -frv $SACD/usr/lib/$nom.la

  $LN $nom.so $SACD/usr/lib/libreadline.so

  $LN $nom.pc $SACD/usr/lib/pkgconfig/readline.pc

  $LN editline.3 $SACD/usr/share/man/man3/el.3
  $LN editline.3 $SACD/usr/share/man/man3/$nom.3
}
