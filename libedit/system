prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  $RSYNC $CERD/binutils/config.guess .
  $RSYNC $CERD/binutils/config.sub .
}

configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --disable-static \
    --disable-examples
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install-strip

  $RSYNC $CERD/$nom/inputrc $SCER/$nom/sac/etc

  # Use libedit as a drop-in replacement for `readline`
  $MKDIR $SCER/$nom/sac/usr/include/readline
  touch $SCER/$nom/sac/usr/include/readline/history.h
  touch $SCER/$nom/sac/usr/include/readline/tilde.h
  $LN ../editline/readline.h $SCER/$nom/sac/usr/include/readline/readline.h

  $RM $SCER/$nom/sac/usr/lib/$nom.la

  $LN $nom.so $SCER/$nom/sac/usr/lib/libreadline.so

  $LN $nom.pc $SCER/$nom/sac/usr/lib/pkgconfig/readline.pc

  $LN editline.3 $SCER/$nom/sac/usr/share/man/man3/el.3
  $LN editline.3 $SCER/$nom/sac/usr/share/man/man3/$nom.3
}
