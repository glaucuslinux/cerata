configure() {
  glaucus-cmake \
    -B build \
    -DMI_BUILD_OBJECT=OFF \
    -DMI_BUILD_STATIC=OFF \
    -DMI_BUILD_TESTS=OFF \
    -DMI_INSTALL_TOPLEVEL=ON \
    -DMI_LIBC_MUSL=ON \
    -DMI_OPT_ARCH=ON
}

build() {
  make \
    -C build
}

package() {
  DESTDIR="$SACD" \
  make \
    -C build \
    install/strip
}
