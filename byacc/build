prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --program-prefix=b
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  if [ $BOOTSTRAP = yes ]; then
    make \
      install

    ln -fnsv $nom /usr/bin/bison
    ln -fnsv $nom /usr/bin/yacc
  fi

  make \
    DESTDIR="$SACD" \
    install

  ln -fnsv $nom "$SACD"/usr/bin/bison
  ln -fnsv $nom "$SACD"/usr/bin/yacc
}
