ceras_prepare() {
  rsync $RADULA_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  cp -afv $CERD/binutils/config.guess support
  cp -afv $CERD/binutils/config.rpath support
  cp -afv $CERD/binutils/config.sub support
}

ceras_configure() {
  patch --no-backup-if-mismatch -p1 -i $CERD/$nom/patches/alpine/$nom-noinfo.patch

  LIBS='-lnsss -lskarnet' \
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --enable-extended-glob \
    --enable-history \
    --enable-job-control \
    --enable-readline \
    --disable-nls \
    --enable-threads=posix \
    --disable-rpath \
    --without-bash-malloc \
    --with-installed-readline \
    --without-included-gettext
}

ceras_build() {
  # parallel build workarounds
  make \
    y.tab.c

  make \
    builtins/libbuiltins.a

  make
}

ceras_check() {
  :
}

ceras_install() {
  make \
    DESTDIR=$SACD \
    install-strip

  ln -sfnv $nom $SACD/usr/bin/r$nom
  ln -sfnv $nom $SACD/usr/bin/sh
}
