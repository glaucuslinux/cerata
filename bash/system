prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  $RSYNC $CERD/binutils/config.guess support
  $RSYNC $CERD/binutils/config.rpath support
  $RSYNC $CERD/binutils/config.sub support
}

configure() {
  $PATCH -p1 -i $CERD/$nom/patches/alpine/$nom-noinfo.patch

  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --enable-extended-glob \
    --enable-history \
    --enable-job-control \
    --enable-readline \
    --disable-nls \
    --enable-threads=posix \
    --disable-rpath \
    --without-bash-malloc \
    --with-installed-readline \
    --without-included-gettext
}

build() {
  # parallel build workarounds
  $MAKE \
    y.tab.c

  $MAKE \
    builtins/libbuiltins.a

  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SACD \
    install-strip

  $LN $nom $SACD/usr/bin/r$nom
  $LN $nom $SACD/usr/bin/sh
}
