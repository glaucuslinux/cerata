prepare() {
  patch \
    -i "$CERD"/$nom/patches/upstream/0001-PR-579-net147-Fix-stack-overrun.patch \
    -p 1
  patch \
    -i "$CERD"/$nom/patches/upstream/0002-PR-571-jschleus-Some-zip-files-are-misclassified-as-data.patch \
    -p 1

  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --enable-zlib \
    --enable-bzlib \
    --enable-xzlib \
    --enable-zstdlib \
    --disable-lzlib \
    --disable-lrziplib \
    --disable-libseccomp \
    --enable-fsect-man5 \
    --enable-pic
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
