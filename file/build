prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --enable-zlib \
    --enable-bzlib \
    --enable-xzlib \
    --enable-zstdlib \
    --disable-libseccomp \
    --enable-fsect-man5 \
    --enable-pic
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
