prepare() {
  NOCONFIGURE=yes \
  ./autogen.sh

}

configure() {
  glaucus-configure \
    --enable-pic \
    --disable-nls \
    --disable-rpath \
    --disable-docs
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
