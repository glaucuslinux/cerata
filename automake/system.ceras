prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete &&
  cd $SSRC/$nom &&

  rad_behave_gnu guess lib &&
  rad_behave_gnu sub lib &&

  $MKDIR $SBLD/$nom &&
  cd $SBLD/$nom
} &&

configure() {
  $SSRC/$nom/configure \
    --prefix=/usr
} &&

build() {
  $MAKE
} &&

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install-strip &&

  $LN aclocal-1.16 $SCER/$nom/sac/usr/bin/aclocal &&

  $LN $nom-1.16 $SCER/$nom/sac/usr/bin/$nom
}
