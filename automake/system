ceras_prepare() {
  $RADULA_RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  $RADULA_RSYNC $CERD/binutils/config.guess lib
  $RADULA_RSYNC $CERD/binutils/config.sub lib
}

ceras_configure() {
  patch --no-backup-if-mismatch --verbose -p1 -i $CERD/$nom/patches/alpine/$nom-python3.10.patch

  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom
}

ceras_build() {
  $MAKE
}

ceras_check() {
  :
}

ceras_install() {
  $MAKE \
    DESTDIR=$SACD \
    install-strip

  # Replace hard links with symbolic links
  ln -sfnv aclocal $SACD/usr/bin/aclocal-1.16
  ln -sfnv $nom $SACD/usr/bin/$nom-1.16
}
