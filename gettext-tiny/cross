prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom
}

configure() {
  :
}

build() {
  $MAKE \
    prefix=/usr \
    sysconfdir=/etc \
    LIBINTL=MUSL \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS"
}

check() {
  :
}

install() {
  $MAKE \
    prefix=/usr \
    sysconfdir=/etc \
    LIBINTL=MUSL \
    DESTDIR=$CRSD \
    install

  # Use dragora's autopoint
  $RSYNC $CERD/$nom/autopoint $CRSD/usr/bin
}
