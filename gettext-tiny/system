prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom
}

configure() {
  :
}

build() {
  $MAKE \
    prefix=/usr \
    sysconfdir=/etc \
    LIBINTL=MUSL \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS"
}

check() {
  :
}

install() {
  $MAKE \
    prefix=/usr \
    sysconfdir=/etc \
    LIBINTL=MUSL \
    DESTDIR=$SCER/$nom/sac \
    install

  # Use dragora's autopoint for now
  $RSYNC $CERD/$nom/autopoint $SCER/$nom/sac/usr/bin
}
