build() {
  make \
    prefix=/usr \
    sysconfdir=/etc \
    LIBINTL=MUSL \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS"
}

package() {
  make \
    prefix=/usr \
    sysconfdir=/etc \
    LIBINTL=MUSL \
    DESTDIR="$SACD" \
    install

  cp -afv "$CERD"/$nom/files/config.rpath "$SACD"/usr/share/$nom

  ln -fnsv $nom "$SACD"/usr/share/gettext
}
