prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --disable-static \
    --disable-tests \
    --enable-nc \
    --with-pic \
    --with-openssldir=/etc/ssl
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  ln -fnsv ../../cert.pem "$SACD"/etc/ssl/certs/ca-certificates.crt

  chmod -v 755 \
    "$SACD"/usr/lib/libcrypto.so.53.0.0 \
    "$SACD"/usr/lib/libssl.so.56.0.0 \
    "$SACD"/usr/lib/libtls.so.29.0.0
}
