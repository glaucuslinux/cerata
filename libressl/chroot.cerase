prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $CSRC/$nom --delete &&
  cd $CSRC/$nom &&

  rad_behave_gnu guess . &&
  rad_behave_gnu sub . &&
  
  rad_behave_gnu guess scripts &&
  rad_behave_gnu sub scripts &&

  $MKDIR $CBLD/$nom &&
  cd $CBLD/$nom
} &&

configure() {
  $CSRC/$nom/configure \
    --prefix=$TLCD \
    --sysconfdir=$TLCD/etc \
    --localstatedir=$TLCD/var \
    --disable-static \
    --enable-nc &&

  sed 's/tests //' \
    -i Makefile
} &&

build() {
  $MAKE
} &&

install() {
  $MAKE \
    install-strip &&

  $CHMOD 0755 $TLCD/lib/libcrypto.so.46.0.1 &&
  $CHMOD 0755 $TLCD/lib/libssl.so.48.0.1 &&
  $CHMOD 0755 $TLCD/lib/libtls.so.20.0.1
}
