prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom

  rad_behave_gnu guess .
  rad_behave_gnu sub .
  
  rad_behave_gnu guess scripts
  rad_behave_gnu sub scripts

  $MKDIR $XBLD/$nom
  cd $XBLD/$nom
}

configure() {
  $XSRC/$nom/configure \
    --build=$BLD \
    --host=$TGT \
    --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --disable-static \
    --enable-nc \
    --disable-tests \
    --with-openssldir=/etc/ssl
}

build() {
  $MAKE
}

install() {
  $MAKE \
    DESTDIR=$XCER/$nom/sac \
    install-strip

  $CHMOD 0755 $XCER/$nom/sac/usr/lib/libcrypto.so.46.0.1
  $CHMOD 0755 $XCER/$nom/sac/usr/lib/libssl.so.48.0.1
  $CHMOD 0755 $XCER/$nom/sac/usr/lib/libtls.so.20.0.1
}
