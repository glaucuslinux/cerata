ceras_prepare() {
  rsync $RADULA_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  rsync $RADULA_RSYNC_FLAGS $CERD/binutils/config.guess .
  rsync $RADULA_RSYNC_FLAGS $CERD/binutils/config.sub .

  rsync $RADULA_RSYNC_FLAGS $CERD/binutils/config.guess scripts
  rsync $RADULA_RSYNC_FLAGS $CERD/binutils/config.sub scripts
}

ceras_configure() {
  ./configure \
    --build=$BLD \
    --host=$TGT \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --disable-static \
    --disable-tests \
    --enable-nc \
    --with-pic \
    --with-openssldir=/etc/ssl
}

ceras_build() {
  make
}

ceras_check() {
  :
}

ceras_install() {
  make \
    DESTDIR=$CRSD \
    install-strip

  # Remove libtool archive (.la) files
  rm -frv \
    $CRSD/usr/lib/libcrypto.la \
    $CRSD/usr/lib/libssl.la \
    $CRSD/usr/lib/libtls.la

  chmod -Rv 0755 \
    $CRSD/usr/lib/libcrypto.so.53.0.0 \
    $CRSD/usr/lib/libssl.so.56.0.0 \
    $CRSD/usr/lib/libtls.so.29.0.0
}
