prepare() {
  autoreconf -vfis
}

configure() {
  "$CERD"/autoconf/glaucus-configure \
    --build=$BLD \
    --host=$TGT \
    --enable-pic \
    --disable-static \
    --disable-tests \
    --enable-nc \
    --with-openssldir=/etc/ssl
}

build() {
  make
}

package() {
  make \
    DESTDIR="$CRSD" \
    install-strip

  ln -fnsv ../../cert.pem "$CRSD"/etc/ssl/certs/ca-certificates.crt

  # Remove libtool archives
  rm -fv \
    "$CRSD"/usr/lib/libcrypto.la \
    "$CRSD"/usr/lib/libssl.la \
    "$CRSD"/usr/lib/libtls.la
}
