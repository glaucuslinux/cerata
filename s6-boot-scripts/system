ceras_prepare() {
  :
}

ceras_configure() {
  :
}

ceras_build() {
  :
}

ceras_check() {
  :
}

ceras_install() {
  $RADULA_RSYNC $SRCD/$nom/etc $SACD --delete
  $RADULA_RSYNC $SRCD/$nom/usr $SACD --delete

  install -dv $SACD/etc/s6/current/env

  mkfifo -m 0600 \
    $SACD/etc/s6/current/run-image/service/s6-linux-init-shutdownd/fifo \
    $SACD/etc/s6/current/run-image/service/s6-svscan-log/fifo

  install -dv -m 02750 $SACD/etc/s6/current/run-image/uncaught-logs

  $RADULA_RSYNC $SRCD/$nom/etc/s6/current/scripts/rc.init $SACD/etc/s6/skel
  $RADULA_RSYNC $SRCD/$nom/etc/s6/current/scripts/rc.shutdown $SACD/etc/s6/skel
  $RADULA_RSYNC $SRCD/$nom/etc/s6/current/scripts/rc.shutdown.final $SACD/etc/s6/skel
  $RADULA_RSYNC $SRCD/$nom/etc/s6/current/scripts/runlevel $SACD/etc/s6/skel

  s6-rc-compile $SACD/etc/s6/rc/compiled $SACD/etc/s6/sv

  $RADULA_RSYNC $CERD/$nom/modules-load $SACD/usr/bin

  install -dv $SACD/usr/share/man/man8
  $RADULA_RSYNC $CERD/$nom/modules-load.8 $SACD/usr/share/man/man8

  install -dv $SACD/var/log/wtmpd
  ln -sfnv wtmpd/btmp $SACD/var/log/btmp
  ln -sfnv wtmpd/wtmp $SACD/var/log/wtmp
  chown 20:20 $SACD/var/log/wtmpd
}
