prepare() {
  cd "$TMPD"/$nom/iwd-$ver

  patch -p1 -i "$CERD"/$nom/patches/alpine/fix-crash-in-the-RSSI-polling-fallback-workaround.patch

  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --enable-pic \
    --enable-pie \
    --disable-dbus \
    --enable-client \
    --disable-dbus-policy \
    --disable-systemd-service \
    --disable-manual-pages \
    --enable-libedit \
    --enable-wired \
    --enable-hwsim \
    --enable-tools \
    --enable-ofono
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  mkdir -pv "$SACD"/etc/iwd
  cp -afv "$CERD"/$nom/files/main.conf "$SACD"/etc/iwd

  cp -afv "$CERD"/$nom/files/iwd_passphrase "$SACD"/usr/bin
}
