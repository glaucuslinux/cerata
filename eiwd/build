prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --enable-pie \
    --disable-dbus \
    --disable-dbus-policy \
    --disable-systemd-service \
    --disable-manual-pages \
    --enable-libedit \
    --enable-wired \
    --enable-hwsim \
    --enable-tools \
    --enable-ofono \
    --with-pic
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  mkdir -pv "$SACD"/etc/$nom
  cp -afv "$CERD"/$nom/main.conf "$SACD"/etc/$nom
}
