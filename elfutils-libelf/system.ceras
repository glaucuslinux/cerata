prepare() {
  $RSYNC $SRCD/elfutils/elfutils-$ver/ $SSRC/elfutils --delete
  cd $SSRC/elfutils

  rad_behave_gnu guess config
  rad_behave_gnu sub config

  $RSYNC $CERD/elfutils/error.h lib
  $RSYNC $CERD/elfutils/error.h src

  rad_behave_patch 0 elfutils void musl-cdefs
}

configure() {
  $AUTORECONF

  CFLAGS="$CFLAGS -Wno-error" \
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --enable-deterministic-archives \
    --disable-symbol-versioning \
    --disable-nls \
    --disable-debuginfod
}

build() {
  $MAKE \
    -C lib

  $MAKE \
    -C libelf
}

install() {
  $MAKE \
    -C libelf \
    DESTDIR=$SCER/$nom/sac \
    install
}
