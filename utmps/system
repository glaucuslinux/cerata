ceras_prepare() {
  $RADULA_RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

ceras_configure() {
  $RADULA_PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-use-gnu-hash-style.patch

  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --dynlibdir=/usr/lib \
    --bindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --with-sysdeps=/usr/lib/skalibs/sysdeps \
    --with-include=/usr/include \
    --with-lib=/usr/lib \
    --with-dynlib=/usr/lib \
    --enable-shared \
    --disable-static \
    --disable-allstatic \
    --enable-nsss \
    --enable-libc-includes
}

ceras_build() {
  $MAKE \
    strip
}

ceras_check() {
  :
}

ceras_install() {
  $MAKE \
    DESTDIR=$SACD \
    install

  install -dv $SACD/usr/lib/pkgconfig
  $RADULA_RSYNC $CERD/$nom/$nom.pc $SACD/usr/lib/pkgconfig
}
