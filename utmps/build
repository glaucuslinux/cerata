prepare() {
  patch \
    -i "$CERD"/$nom/patches/glaucus/0001-use-gnu-hash-style.patch \
    -p 0
}

configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --dynlibdir=/usr/lib \
    --bindir=/usr/bin \
    --libexecdir=/usr/bin \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --enable-shared \
    --disable-static \
    --disable-allstatic \
    --enable-libc-includes
}

build() {
  make \
    strip
}

package() {
  make \
    DESTDIR="$SACD" \
    install

  mkdir -p "$SACD"/usr/lib/pkgconfig
  cp -fPp "$CERD"/$nom/files/$nom.pc "$SACD"/usr/lib/pkgconfig
}
