prepare() {
  for i in pcf-family-names subpixel table-validation-modules; do
    patch \
      -i "$CERD"/$nom/patches/alpine/$i.patch \
      -p 1
  done

  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --disable-static \
    --enable-pic \
    --enable-freetype-config \
    --with-zlib \
    --with-bzip2 \
    --with-png \
    --without-harfbuzz \
    --without-brotli \
    --without-librsvg \
    --without-old-mac-fonts \
    --without-fsspec \
    --without-fsref \
    --without-quickdraw-toolbox \
    --without-quickdraw-carbon \
    --without-ats
}

build() {
  make
}

package() {
  make \
    DESTDIR="$SACD" \
    install
}
