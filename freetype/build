prepare() {
  for i in pcf-family-names subpixel table-validation-modules; do
    patch -p1 -i "$CERD"/$nom/patches/alpine/$i.patch
  done
}

configure() {
  glaucus-configure \
    --disable-static \
    --with-pic \
    --with-zlib \
    --with-bzip2 \
    --with-png \
    --without-harfbuzz \
    --without-brotli \
    --without-librsvg \
    --without-old-mac-fonts \
    --without-fsspec \
    --without-fsref \
    --without-quickdraw-toolbox \
    --without-quickdraw-carbon \
    --without-ats
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install
}
