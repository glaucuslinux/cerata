prepare() {
  patch -p1 -i $CERD/$nom/patches/upstream/0001-libressl-compatibility.patch

  autoreconf -vfis
}

configure() {
  # `--with-openssl` doesn't work with `libressl`
  glaucus-configure \
    --enable-threads=posix \
    --disable-rpath \
    --disable-static \
    --disable-nls \
    --disable-doc \
    --with-linux-crypto \
    --with-openssl \
    --without-included-regex \
    --with-pic \
    --with-ssl=openssl \
    --without-libdane \
    --without-libpsl \
    --without-libhsts \
    --without-libnghttp2 \
    --without-gpgme \
    --with-bzip2 \
    --with-lzma \
    --without-brotlidec \
    --without-lzip \
    --without-libidn2 \
    --without-libidn \
    --without-libpcre \
    --without-libmicrohttpd
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  ln -fnsv $nom "$SACD"/usr/bin/wget
  rm -fv "$SACD"/usr/bin/${nom}_noinstall
}
