ceras_prepare() {
  $RADULA_RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  $RADULA_RSYNC $CERD/binutils/config.guess .
  $RADULA_RSYNC $CERD/binutils/config.rpath .
  $RADULA_RSYNC $CERD/binutils/config.sub .

  $RADULA_RSYNC $CERD/binutils/config.guess build-aux
  $RADULA_RSYNC $CERD/binutils/config.rpath build-aux
  $RADULA_RSYNC $CERD/binutils/config.sub build-aux

  patch --no-backup-if-mismatch --verbose -p1 -i $CERD/$nom/patches/upstream/0001-libressl-compatibility.patch
}

ceras_configure() {
  # `--with-openssl` doesn't work with `libressl`
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --enable-threads=posix \
    --disable-rpath \
    --disable-static \
    --disable-nls \
    --disable-doc \
    --with-linux-crypto \
    --without-included-regex \
    --with-pic \
    --with-ssl=openssl \
    --without-libpsl \
    --without-libhsts \
    --without-libnghttp2 \
    --without-gpgme \
    --with-bzip2 \
    --with-lzma \
    --without-brotlidec \
    --without-libidn2 \
    --without-libidn \
    --without-libmicrohttpd
}

ceras_build() {
  $MAKE
}

ceras_check() {
  :
}

ceras_install() {
  $MAKE \
    DESTDIR=$SACD \
    install-strip

  ln -sfnv $nom $SACD/usr/bin/wget
  rm -frv $SACD/usr/bin/${nom}_noinstall

  # Remove libtool archive (.la) file
  rm -frv $SACD/usr/lib/libwget.la
}
