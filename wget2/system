prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  $RSYNC $CERD/binutils/config.guess .
  $RSYNC $CERD/binutils/config.rpath .
  $RSYNC $CERD/binutils/config.sub .

  $RSYNC $CERD/binutils/config.guess build-aux
  $RSYNC $CERD/binutils/config.rpath build-aux
  $RSYNC $CERD/binutils/config.sub build-aux

  $PATCH -p0 -i $CERD/$nom/patches/dragora/lzlib-link.patch
}

configure() {
  # `--with-openssl` doesn't work with `libressl`
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --enable-threads=posix \
    --disable-rpath \
    --disable-static \
    --disable-nls \
    --disable-doc \
    --with-linux-crypto \
    --without-included-regex \
    --with-ssl=openssl \
    --without-libpsl \
    --without-libhsts \
    --without-libnghttp2 \
    --without-gpgme \
    --with-bzip2 \
    --with-lzma \
    --without-brotlidec \
    --without-libidn2 \
    --without-libidn \
    --without-libmicrohttpd
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install-strip

  $LN $nom $SCER/$nom/sac/usr/bin/wget
  $RM $SCER/$nom/sac/usr/bin/${nom}_noinstall
}
