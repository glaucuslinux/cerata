prepare() {
  patch \
    -i "$CERD"/$nom/patches/glaucus/0001-fix-pkg-config-directory.patch \
    -p 0
}

configure() {
  ./configure \
    --prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib \
    --sysconfdir=/etc \
    --libdir=/usr/lib \
    --disable-blacklist
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install
}
