prepare() {
  patch \
    -i "$CERD"/$nom/patches/glaucus/0001-fix-pkg-config-directory.patch \
    -p 0
}

configure() {
  ./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --sysconfdir=/etc \
    --disable-blacklist
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install
}
