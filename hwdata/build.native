prepare() {
  rsync $RAD_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

configure() {
  ./configure \
    --prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --sysconfdir=/etc \
    --libdir=/usr/lib \
    --mandir=/usr/share/man \
    --disable-blacklist

  patch -p0 -i $CERD/$nom/patches/glaucus/0001-fix-pkg-config-directory.patch
}

build() {
  :
}

check() {
  :
}

package() {
  make \
    DESTDIR=$SACD \
    install

  cp -afv $CERD/$nom/sdio.ids $SACD/usr/share/$nom
}
