prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom
}

configure() {
  ./configure \
    --prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --libdir=/usr/lib

  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-fix-pkg-config-directory.patch
}

build() {
  :
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    install

  $RSYNC $CERD/$nom/sdio.ids $CRSD/usr/share/hwdata
}
