prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom
}

configure() {
  ./configure \
    --prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --libdir=/usr/lib
}

build() {
  :
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    install

  $MV $CRSD/usr/share/pkgconfig/$nom.pc $PKG_CONFIG_LIBDIR

  $RSYNC $CERD/$nom/sdio.ids $CRSD/usr/share/hwdata

  # The only allowed directory for pkg-config files is `$PKG_CONFIG_LIBDIR`
  $RM $CRSD/usr/share/pkgconfig
}
