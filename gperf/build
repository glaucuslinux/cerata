prepare() {
  patch \
    -i "$CERD"/$nom/patches/upstream/0001-c++17-compliant.patch \
    -p 1
}

configure() {
  ./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install
}
