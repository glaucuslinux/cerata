prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom

  $RSYNC $CERD/binutils/config.sub tools
}

configure() {
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-remove-bash-dependency.patch
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0002-disable-static.patch

  CHOST="$TGT" \
  ./configure \
    --prefix=/usr \
    --eprefix=/usr \
    --libdir=/usr/lib \
    --sharedlibdir=/usr/lib \
    --includedir=/usr/include \
    --zlib-compat
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    install
}
