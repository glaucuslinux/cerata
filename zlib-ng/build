prepare() {
  patch -p0 -i "$CERD"/$nom/patches/glaucus/0001-disable-static.patch
}

configure() {
  ./configure \
    --prefix=/usr \
    --eprefix=/usr \
    --libdir=/usr/lib \
    --sharedlibdir=/usr/lib \
    --includedir=/usr/include \
    --zlib-compat \
    --force-sse2
}

build() {
  make
}

check() {
  make \
    test
}

package() {
  make \
    DESTDIR="$SACD" \
    install
}
