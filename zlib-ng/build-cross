prepare() {
  patch \
    -i "$CERD"/$nom/patches/glaucus/0001-disable-static.patch \
    -p 0
}

configure() {
  CHOST="$TGT" \
  ./configure \
    --prefix=/usr \
    --eprefix=/usr \
    --libdir=/usr/lib \
    --sharedlibdir=/usr/lib \
    --zlib-compat \
    --force-sse2
}

build() {
  make
}

package() {
  make \
    DESTDIR="$CRSD" \
    install
}
