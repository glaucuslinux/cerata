prepare() {
  $MKDIR $XBLD/$nom
  cd $XBLD/$nom
}

configure() {
  CFLAGS="$([ $species = atlanticus ] && printf -- "$CFLAGSNOCOMMON" || printf -- "$CFLAGS")" \
  $SRCD/$nom/configure \
    --prefix=/usr \
    --zlib-compat
}

build() {
  $MAKE
}

install() {
  $MAKE \
    DESTDIR=$XCER/$nom/sac \
    install
}
