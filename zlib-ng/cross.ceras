prepare() {
  $MKDIR $XBLD/$nom
  cd $XBLD/$nom
}

configure() {
  CFLAGS="$(if [ $species = atlanticus ]; then printf -- "$CFLAGSNOCOMMON"; else printf -- "$CFLAGS"; fi)" \
  $SRCD/$nom/configure \
    --prefix=/usr \
    --zlib-compat
}

build() {
  $MAKE
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    install
}
