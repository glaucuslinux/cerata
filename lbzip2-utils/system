prepare() {
  $RSYNC $SRCD/$nom $TSRC --delete
  cd $TSRC/$nom

  $AUTORECONF
}

configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SACD \
    install-strip

  # Compatibility symlinks
  $LN lbzcmp $SACD/usr/bin/bzcmp
  $LN lbzdiff $SACD/usr/bin/bzdiff
  $LN lbzegrep $SACD/usr/bin/bzegrep
  $LN lbzexe $SACD/usr/bin/bzexe
  $LN lbzfgrep $SACD/usr/bin/bzfgrep
  $LN lbzforce $SACD/usr/bin/bzforce
  $LN lbzgrep $SACD/usr/bin/bzgrep
  $LN lbzrecover $SACD/usr/bin/bzip2recover
  $LN lbzless $SACD/usr/bin/bzless
  $LN lbzmerge $SACD/usr/bin/bzmerge
  $LN lbzmore $SACD/usr/bin/bzmore

  $LN lbzcmp.1 $SACD/usr/share/man/man1/bzcmp.1
  $LN lbzdiff.1 $SACD/usr/share/man/man1/bzdiff.1
  $LN lbzegrep.1 $SACD/usr/share/man/man1/bzegrep.1
  $LN lbzexe.1 $SACD/usr/share/man/man1/bzexe.1
  $LN lbzfgrep.1 $SACD/usr/share/man/man1/bzfgrep.1
  $LN lbzforce.1 $SACD/usr/share/man/man1/bzforce.1
  $LN lbzgrep.1 $SACD/usr/share/man/man1/bzgrep.1
  $LN lbzrecover.1 $SACD/usr/share/man/man1/bzip2recover.1
  $LN lbzless.1 $SACD/usr/share/man/man1/bzless.1
  $LN lbzmerge.1 $SACD/usr/share/man/man1/bzmerge.1
  $LN lbzmore.1 $SACD/usr/share/man/man1/bzmore.1
  $LN lbzdiff.1 $SACD/usr/share/man/man1/lbzcmp.1
  $LN lbzgrep.1 $SACD/usr/share/man/man1/lbzegrep.1
  $LN lbzgrep.1 $SACD/usr/share/man/man1/lbzfgrep.1
}
