configure() {
  glaucus-muon \
    -Ddistconfdir=/usr/lib \
    -Dmoduledir=/usr/lib/modules \
    -Dbashcompletiondir=no \
    -Dfishcompletiondir=no \
    -Dzshcompletiondir=no \
    -Dmanpages=false \
    build
}

build() {
  samu \
    -C build
}

package() {
  DESTDIR="$SACD" \
  muon \
    -C build \
    install

  cp -fPp "$CERD"/$nom/files/search.conf "$SACD"/usr/lib/depmod.d
}
