configure() {
  glaucus-configure \
    --enable-pic \
    --disable-manpages \
    --disable-gtk-doc-html \
    --with-module-directory=/usr/lib/modules \
    --with-zstd \
    --with-xz \
    --with-zlib \
    --with-openssl
}

build() {
  make
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  mkdir -pv \
    "$SACD"/etc/depmod.d \
    "$SACD"/etc/modprobe.d \
    "$SACD"/usr/lib/depmod.d \
    "$SACD"/usr/lib/modprobe.d

  cp -afv "$CERD"/$nom/files/search.conf "$SACD"/usr/lib/depmod.d
}
