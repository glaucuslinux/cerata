prepare() {
  patch -p0 -i "$CERD"/$nom/patches/glaucus/0001-fix-muon.patch

  mkdir -pv build
}

configure() {
  glaucus-muon \
    -Ddistconfdir=/usr/lib \
    -Dmoduledir=/usr/lib/modules \
    -Dbashcompletiondir=no \
    -Dfishcompletiondir=no \
    -Dzshcompletiondir=no \
    -Dmanpages=false \
    build
}

build() {
  samu \
    -C build
}

package() {
  DESTDIR="$SACD" \
  muon \
    -C build \
    install

  cp -afv "$CERD"/$nom/files/search.conf "$SACD"/usr/lib/depmod.d
}
