prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  $RSYNC $CERD/binutils/config.guess build-aux
  $RSYNC $CERD/binutils/config.sub build-aux

  $PATCH -p0 -i $CERD/$nom/patches/alpine/strndupa.patch

  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-remove-sbin.patch

  $PATCH -p1 -i $CERD/$nom/patches/void/stdout.patch
}

configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --disable-manpages \
    --disable-test-modules \
    --with-rootlibdir=/usr/lib \
    --with-zstd \
    --with-xz \
    --with-zlib \
    --with-openssl
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install-strip

  $MKDIR $SCER/$nom/sac/etc/depmod.d
  $MKDIR $SCER/$nom/sac/etc/modprobe.d

  $LN $nom $SCER/$nom/sac/usr/bin/depmod
  $LN $nom $SCER/$nom/sac/usr/bin/insmod
  $LN $nom $SCER/$nom/sac/usr/bin/lsmod
  $LN $nom $SCER/$nom/sac/usr/bin/modinfo
  $LN $nom $SCER/$nom/sac/usr/bin/modprobe
  $LN $nom $SCER/$nom/sac/usr/bin/rmmod

  $MKDIR $SCER/$nom/sac/usr/lib/depmod.d
  $RSYNC $CERD/$nom/search.conf $SCER/$nom/sac/usr/lib/depmod.d

  $MKDIR $SCER/$nom/sac/usr/lib/modprobe.d
}
