prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  $RSYNC $CERD/binutils/config.guess build-aux
  $RSYNC $CERD/binutils/config.sub build-aux

  $PATCH -p0 -i $CERD/$nom/patches/alpine/strndupa.patch

  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-remove-sbin.patch

  $PATCH -p0 -i $CERD/$nom/patches/void/stdout.patch
}

configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --disable-static \
    --disable-manpages \
    --disable-test-modules \
    --with-pic \
    --with-rootlibdir=/usr/lib \
    --with-module-directory=/usr/lib/modules \
    --with-zstd \
    --with-xz \
    --with-zlib \
    --with-openssl
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SACD \
    install-strip

  $MKDIR $SACD/etc/depmod.d
  $MKDIR $SACD/etc/modprobe.d

  $LN $nom $SACD/usr/bin/depmod
  $LN $nom $SACD/usr/bin/insmod
  $LN $nom $SACD/usr/bin/lsmod
  $LN $nom $SACD/usr/bin/modinfo
  $LN $nom $SACD/usr/bin/modprobe
  $LN $nom $SACD/usr/bin/rmmod

  $MKDIR $SACD/usr/lib/depmod.d
  $RSYNC $CERD/$nom/search.conf $SACD/usr/lib/depmod.d

  # Remove libtool archive (.la) file
  $RM $SACD/usr/lib/lib$nom.la

  $MKDIR $SACD/usr/lib/modprobe.d
}
