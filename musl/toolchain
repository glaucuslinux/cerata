prepare() {
  cd $TSRC/$nom
}

configure() {
  # Hardcoded `gcc` version number
  ARCH=$MARCH \
  CROSS_COMPILE=$TGT- \
  LIBCC="$TLCD/lib/gcc/$TGT/12.1.0/libgcc.a" \
  ./configure \
    --host=$TGT \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --disable-wrapper \
    --disable-static

  # Provide minimal libssp_nonshared.a so we don't require libssp from gcc
  $TGT-gcc -c $CERD/$nom/__stack_chk_fail_local.c
  $TGT-gcc-ar rsS libssp_nonshared.a __stack_chk_fail_local.o
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    install-libs \
    install-tools

  $MKDIR $CRSD/etc
  $RSYNC $CERD/$nom/ld-$nom.path $CRSD/etc/ld-$nom-$MLARCH.path

  # glibc compatibility symlink
  $LN ld-$nom-$MLARCH.path $CRSD/etc/ld.so.conf

  $RM $CRSD/lib

  $MKDIR $CRSD/usr/bin
  $LN ../lib/ld-$nom-$MLARCH.so.1 $CRSD/usr/bin/ldd

  # glibc compatibility loader symlink
  $LN ld-$nom-$MLARCH.so.1 $CRSD/usr/lib/ld-linux$GARCH

  $LN libc.so $CRSD/usr/lib/ld-$nom-$MLARCH.so.1

  # glibc compatibility libraries symlinks
  $LN libc.so $CRSD/usr/lib/libc.so.6
  $LN libc.so $CRSD/usr/lib/libcrypt.so.1
  $LN libc.so $CRSD/usr/lib/libdl.so.2
  $LN libc.so $CRSD/usr/lib/libm.so.6
  $LN libc.so $CRSD/usr/lib/libpthread.so.0
  $LN libc.so $CRSD/usr/lib/libresolv.so.2
  $LN libc.so $CRSD/usr/lib/librt.so.1
  $LN libc.so $CRSD/usr/lib/libutil.so.1

  $RSYNC libssp_nonshared.a $CRSD/usr/lib
  $TGT-strip -gv $CRSD/usr/lib/libssp_nonshared.a
}
