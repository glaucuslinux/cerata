prepare() {
  cd $TSRC/$nom
} &&

configure() {
  ARCH=$MARCH \
  CROSS_COMPILE=$TGT- \
  LIBCC="$TLCD/lib/gcc/$TGT/10.2.0/libgcc.a" \
  ./configure \
    --host=$TGT \
    --prefix=/usr \
    --disable-wrapper \
    --disable-static
} &&

build() {
  $MAKE
} &&

install() {
  $MAKE \
    DESTDIR=$CRSD \
    install-libs install-tools &&

  $LN libc.so $CRSD/usr/lib/ld-$nom-$MARCH.so.1
}
