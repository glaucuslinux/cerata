configure() {
  # Hardcoded `gcc` version number
  ARCH=x86_64 \
  CROSS_COMPILE=$TGT- \
  LIBCC="$TLCD"/usr/lib/gcc/$TGT/14.2.0/libgcc.a \
  ./configure \
    --host=$TGT \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --libdir=/usr/lib \
    --syslibdir=/usr/lib \
    --disable-wrapper \
    --disable-static
}

build() {
  make
}

package() {
  make \
    DESTDIR="$CRSD" \
    install-libs

  mkdir -p \
    "$CRSD"/etc \
    "$CRSD"/usr/bin

  cp -fPp "$CERD"/$nom/files/ld-$nom-x86_64.path "$CRSD"/etc

  cp -fPp "$CERD"/$nom/files/ldd "$CRSD"/usr/bin

  ln -fs libc.so "$CRSD"/usr/lib/ld-$nom-x86_64.so.1
}
