prepare() {
  patch -p0 -i "$CERD"/$nom/patches/glaucus/0001-fix-utmp-file-path.patch
  patch -p1 -i "$CERD"/$nom/patches/upstream/CVE-2025-26519.patch
}

configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --syslibdir=/usr/lib \
    --disable-wrapper \
    --disable-static
}

build() {
  make

  $CC $CFLAGS $LDFLAGS "$CERD"/$nom/gencat.c -o gencat
  $CC $CFLAGS $LDFLAGS "$CERD"/$nom/getent.c -o getent
}

package() {
  make \
    DESTDIR="$SACD" \
    install

  mkdir -pv \
    "$SACD"/etc \
    "$SACD"/usr/bin

  cp -afv "$CERD"/$nom/files/ld-$nom-x86_64.path "$SACD"/etc

  mv -fv \
    gencat \
    getent \
    "$SACD"/usr/bin
  cp -afv "$CERD"/$nom/files/true "$SACD"/usr/bin/ldconfig
  cp -afv "$CERD"/$nom/files/ldd "$SACD"/usr/bin

  # BSD compatibility header
  cp -afv "$CERD"/$nom/files/queue.h "$SACD"/usr/include/sys

  # `utmps` provides `utmpx.h`
  rm -fv "$SACD"/usr/include/utmpx.h

  ln -fnsv libc.so "$SACD"/usr/lib/ld-$nom-x86_64.so.1
}
