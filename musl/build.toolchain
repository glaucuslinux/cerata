prepare() {
  :
}

configure() {
  # Hardcoded `gcc` version number
  ARCH=x86_64 \
  CROSS_COMPILE=$TGT- \
  LIBCC="$TLCD"/usr/lib/gcc/$TGT/14.2.0/libgcc.a \
  ./configure \
    --host=$TGT \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --syslibdir=/usr/lib \
    --disable-wrapper \
    --disable-static
}

build() {
  make
}

check() {
  :
}

package() {
  make \
    DESTDIR="$CRSD" \
    install-libs

  mkdir -pv \
    "$CRSD"/etc \
    "$CRSD"/usr/bin

  cp -afv "$CERD"/$nom/ld-$nom-x86_64.path "$CRSD"/etc

  ln -fnsv ../lib/libc.so "$CRSD"/usr/bin/ldd

  ln -fnsv libc.so "$CRSD"/usr/lib/ld-$nom-x86_64.so.1
}
