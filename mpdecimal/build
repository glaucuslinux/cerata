prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --disable-static \
    --disable-doc
}

build() {
  make
}

check() {
  make \
    check_local
}

package() {
  make \
    DESTDIR="$SACD" \
    install
}
