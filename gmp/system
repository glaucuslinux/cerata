ceras_prepare() {
  rsync $RADULA_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  cp -afv $CERD/binutils/config.guess configfsf.guess
  cp -afv $CERD/binutils/config.sub configfsf.sub
}

ceras_configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --enable-cxx \
    --disable-static \
    --with-pic
}

ceras_build() {
  make
}

ceras_check() {
  :
}

ceras_install() {
  if [ $BOOTSTRAP = yes ]; then
    make \
      install-strip

    # Remove libtool archives
    rm -fv \
      /usr/lib/lib$nom.la \
      /usr/lib/lib${nom}xx.la
  fi

  make \
    DESTDIR=$SACD \
    install-strip

  # Remove libtool archives
  rm -fv \
    $SACD/usr/lib/lib$nom.la \
    $SACD/usr/lib/lib${nom}xx.la
}
