prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  $RSYNC $CERD/binutils/config.guess configfsf.guess
  $RSYNC $CERD/binutils/config.sub configfsf.sub
}

configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --enable-cxx \
    --disable-static \
    --with-pic
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  if [ $BOOTSTRAP = yes ]; then
    $MAKE \
      install-strip

    # Remove libtool archive (.la) files
    $RM /usr/lib/lib$nom.la
    $RM /usr/lib/lib${nom}xx.la
  fi

  $MAKE \
    DESTDIR=$SACD \
    install-strip

  # Remove libtool archive (.la) files
  $RM $SACD/usr/lib/lib$nom.la
  $RM $SACD/usr/lib/lib${nom}xx.la
}
