prepare() {
  ./autogen.sh
}

configure() {
  glaucus-configure \
    --disable-static \
    --enable-pic \
    --disable-nls \
    --disable-rpath \
    --disable-libfl
}

build() {
  make
}

check() {
  :
}

package() {
  touch doc/$nom.1

  make \
    DESTDIR="$SACD" \
    install-strip

  ln -fnsv $nom "$SACD"/usr/bin/lex
}
