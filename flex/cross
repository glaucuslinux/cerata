ceras_prepare() {
  $RADULA_RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  $RADULA_RSYNC $CERD/binutils/config.guess build-aux
  $RADULA_RSYNC $CERD/binutils/config.rpath build-aux
  $RADULA_RSYNC $CERD/binutils/config.sub build-aux
}

ceras_configure() {
  # This patch will be part of flex-2.6.5 release
  patch --no-backup-if-mismatch --verbose -p1 -i $CERD/$nom/patches/gentoo/$nom-$ver-libobjdir.patch

  ac_cv_func_malloc_0_nonnull=yes \
  ac_cv_func_realloc_0_nonnull=yes \
  ./configure \
    --build=$BLD \
    --host=$TGT \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --disable-static \
    --disable-nls \
    --disable-rpath \
    --with-pic
}

ceras_build() {
  $MAKE
}

ceras_check() {
  :
}

ceras_install() {
  $MAKE \
    DESTDIR=$CRSD \
    install-strip

  ln -sfnv $nom $CRSD/usr/bin/lex

  # Remove libtool archive (.la) file
  rm -frv $CRSD/usr/lib/libfl.la

  ln -sfnv $nom.1 $CRSD/usr/share/man/man1/lex.1
}
