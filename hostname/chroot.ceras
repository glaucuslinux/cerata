prepare() {
  $RSYNC $SRCD/$nom/$nom/ $CSRC/$nom --delete
  cd $CSRC/$nom
}

configure() {
  rad_behave_patch 0 $nom glaucus remove-O2
}

build() {
  $MAKE
}

install() {
  $MAKE \
    BINDIR=/bin \
    MANDIR=/share/man \
    BASEDIR=$TLCD \
    install
}
