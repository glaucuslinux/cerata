prepare() {
  $RSYNC $SRCD/$nom/$nom/ $XSRC/$nom --delete
  cd $XSRC/$nom
}

configure() {
  radula_behave_patch 0 $nom glaucus 0001-remove-O2
  radula_behave_patch 0 $nom glaucus 0002-remove-ownership-change
}

build() {
  $MAKE
}

install() {
  $MAKE \
    BINDIR=/usr/bin \
    BASEDIR=$CRSD \
    install
}
