prepare() {
  $RSYNC $SRCD/$nom/$nom/ $XSRC/$nom --delete &&
  cd $XSRC/$nom
} &&

configure() {
  $SCRD/patch 0 $nom glaucus remove-O2
} &&

build() {
  $MAKE
} &&

install() {
  $MAKE \
    BINDIR=/usr/bin \
    BASEDIR=$XCER/$nom/sac \
    install
}
