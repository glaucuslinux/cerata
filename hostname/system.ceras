prepare() {
  $RSYNC $SRCD/$nom/$nom $SSRC --delete
  cd $SSRC/$nom
}

configure() {
  radula_behave_patch 0 $nom glaucus 0001-remove-O2
  radula_behave_patch 0 $nom glaucus 0002-remove-ownership-change
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    BINDIR=/usr/bin \
    BASEDIR=$SCER/$nom/sac \
    install
}
