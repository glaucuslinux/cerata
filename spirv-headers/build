prepare() {
  cd "$TMPD"/$nom/SPIRV-Headers-vulkan-sdk-$ver

  mkdir -p build
}

configure() {
  glaucus-cmake \
    -B build \
    -DSPIRV_HEADERS_ENABLE_TESTS=OFF
}

build() {
  make \
    -C build
}

package() {
  DESTDIR="$SACD" \
  make \
    -C build \
    install/strip
}
