prepare() {
  cd "$TMPD"/$nom/SPIRV-Headers-vulkan-sdk-$ver

  mkdir -p build
}

configure() {
  glaucus-cmake \
    -B build \
    -DSPIRV_HEADERS_ENABLE_TESTS=OFF
}

build() {
  samu \
    -C build
}

package() {
  DESTDIR="$SACD" \
  samu \
    -C build \
    install/strip
}
