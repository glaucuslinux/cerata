prepare() {
  install -dv $TBLD/$nom

  cd $SRCD/$nom/$nom-$ver
}

configure() {
  glaucus-muon \
    -Dintel=enabled \
    -Dradeon=enabled \
    -Damdgpu=enabled \
    -Dnouveau=enabled \
    -Dvmwgfx=enabled \
    -Dfreedreno=disabled \
    -Dvc4=disabled \
    -Detnaviv=disabled \
    -Dcairo-tests=disabled \
    -Dman-pages=disabled \
    -Dvalgrind=disabled \
    -Dudev=true \
    $TBLD/$nom
}

build() {
  samu \
    -C $TBLD/$nom
}

check() {
  :
}

install() {
  DESTDIR=$SACD \
  muon \
    -C $TBLD/$nom \
    install
}
