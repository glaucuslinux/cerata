prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  $RSYNC $CERD/binutils/config.guess config
  $RSYNC $CERD/binutils/config.rpath config
  $RSYNC $CERD/binutils/config.sub config

  $PATCH -p1 -i $CERD/$nom/patches/lfs/$nom-$ver-backspace-1.patch
}

configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --disable-static \
    --disable-nls \
    --disable-rpath \
    --disable-vlock \
    --disable-tests
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install-strip

  $LN openvt $SCER/$nom/sac/usr/bin/open

  $RM $SCER/$nom/sac/usr/share/keymaps/amiga
  $RM $SCER/$nom/sac/usr/share/keymaps/atari
  $MV $SCER/$nom/sac/usr/share/keymaps/i386/azerty/fr.map.gz \
    $SCER/$nom/sac/usr/share/keymaps/i386/azerty/fr-old.map.gz
  $LN fr-latin9.map.gz $SCER/$nom/sac/usr/share/keymaps/i386/azerty/fr.map.gz
  $LN fr-latin9.map.gz $SCER/$nom/sac/usr/share/keymaps/i386/azerty/fr-latin0.map.gz
  $MV $SCER/$nom/sac/usr/share/keymaps/i386/colemak/en-latin9.map.gz \
    $SCER/$nom/sac/usr/share/keymaps/i386/colemak/colemak.map.gz
  $MV $SCER/$nom/sac/usr/share/keymaps/i386/fgGIod/trf.map.gz \
    $SCER/$nom/sac/usr/share/keymaps/i386/fgGIod/trf-fgGIod.map.gz
  $MV $SCER/$nom/sac/usr/share/keymaps/i386/olpc/es.map.gz \
    $SCER/$nom/usr/share/keymaps/i386/olpc/es-olpc.map.gz
  $MV $SCER/$nom/sac/usr/share/keymaps/i386/olpc/pt.map.gz \
    $SCER/$nom/usr/share/keymaps/i386/olpc/pt-olpc.map.gz
  $MV $SCER/$nom/sac/usr/share/keymaps/i386/qwerty/cz.map.gz \
    $SCER/$nom/usr/share/keymaps/i386/qwerty/cz-qwerty.map.gz
  $MV $SCER/$nom/sac/usr/share/keymaps/i386/qwerty/fi.map.gz \
    $SCER/$nom/usr/share/keymaps/i386/qwerty/fi-kotoistus.map.gz
  $LN pt-latin9.map.gz $SCER/$nom/sac/usr/share/keymaps/i386/qwerty/pt.map.gz
  $RM $SCER/$nom/sac/usr/share/keymaps/i386/qwerty/ro_win.map.gz
  $LN sv-latin1.map.gz $SCER/$nom/sac/usr/share/keymaps/i386/qwerty/se-latin1.map
  $LN sr-cy.map.gz $SCER/$nom/sac/usr/share/keymaps/i386/qwerty/sr-latin.map.gz
  $RM $SCER/$nom/sac/usr/share/keymaps/sun
}
