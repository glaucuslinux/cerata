ceras_prepare() {
  rsync $RAD_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  cp -afv $CERD/binutils/config.guess config
  cp -afv $CERD/binutils/config.rpath config
  cp -afv $CERD/binutils/config.sub config
}

ceras_configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --disable-static \
    --disable-nls \
    --disable-rpath \
    --enable-optional-progs \
    --disable-vlock \
    --disable-tests \
    --with-pic
}

ceras_build() {
  make
}

ceras_check() {
  :
}

ceras_install() {
  make \
    DESTDIR=$SACD \
    install-strip

  ln -sfnv openvt $SACD/usr/bin/open

  rm -frv \
    $SACD/usr/share/keymaps/amiga \
    $SACD/usr/share/keymaps/atari \
    $SACD/usr/share/keymaps/i386/qwerty/ro_win.map.gz \
    $SACD/usr/share/keymaps/sun
}
