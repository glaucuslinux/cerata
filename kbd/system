prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  $RSYNC $CERD/binutils/config.guess config
  $RSYNC $CERD/binutils/config.rpath config
  $RSYNC $CERD/binutils/config.sub config

  $PATCH -p1 -i $CERD/$nom/patches/lfs/$nom-$ver-backspace-1.patch
}

configure() {
  $AUTORECONF

  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --disable-static \
    --disable-nls \
    --disable-rpath \
    --disable-vlock \
    --disable-tests
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install-strip
}
