prepare() {
  patch \
    -i "$CERD"/$nom/patches/alpine/detect_init-remove-irrelevant.patch \
    -p 1
}

configure() {
  ./configure \
    --disable-debug \
    --prefix=/usr \
    --sysconfdir=/etc \
    --bindir=/usr/bin \
    --libexecdir=/usr/lib/resolvconf \
    --statedir=/var \
    --rundir=/run \
    --libdir=/usr/lib
}

build() {
  make
}

package() {
  make \
    DESTDIR="$SACD" \
    install
}
