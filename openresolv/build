prepare() {
  patch -p1 -i "$CERD"/$nom/patches/alpine/detect_init-remove-irrelevant.patch
}

configure() {
  ./configure \
    --disable-debug \
    --prefix=/usr \
    --sysconfdir=/etc \
    --bindir=/usr/bin \
    --libexecdir=/usr/lib/resolvconf \
    --statedir=/var \
    --rundir=/run \
    --mandir=/usr/share/man \
    --libdir=/usr/lib \
    --includedir=/usr/include
}

build() {
  make
}

package() {
  make \
    DESTDIR="$SACD" \
    install
}
