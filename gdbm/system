ceras_prepare() {
  $RADULA_RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  $RADULA_RSYNC $CERD/binutils/config.guess build-aux
  $RADULA_RSYNC $CERD/binutils/config.rpath build-aux
  $RADULA_RSYNC $CERD/binutils/config.sub build-aux
}

ceras_configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --enable-libgdbm-compat \
    --disable-static \
    --disable-nls \
    --disable-rpath \
    --with-pic
}

ceras_build() {
  $MAKE
}

ceras_check() {
  :
}

ceras_install() {
  $MAKE \
    DESTDIR=$SACD \
    install-strip

  install -dv $SACD/usr/include/$nom
  ln -sfnv ../dbm.h $SACD/usr/include/$nom/dbm.h
  ln -sfnv ../$nom.h $SACD/usr/include/$nom/$nom.h
  ln -sfnv ../ndbm.h $SACD/usr/include/$nom/ndbm.h
}
