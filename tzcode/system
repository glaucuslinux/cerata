ceras_prepare() {
  $RADULA_RSYNC $SRCD/$nom $TSRC --delete \
    --exclude $nom$ver.tar.gz
  $RADULA_RSYNC $SRCD/tzdata/ $TSRC/$nom \
    --exclude $nom$ver.tar.gz
  cd $TSRC/$nom
}

ceras_configure() {
  $RADULA_PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-disable-static.patch
}

ceras_build() {
  $MAKE \
    CC=$CC \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS" \
    tzselect \
    zdump \
    zic
}

ceras_check() {
  :
}

ceras_install() {
  $RADULA_RSYNC tzselect $SACD/usr/bin
  $RADULA_RSYNC zdump $SACD/usr/bin
  $RADULA_RSYNC zic $SACD/usr/bin

  $RADULA_RSYNC tzselect.8 $SACD/usr/share/man/man8
  $RADULA_RSYNC zdump.8 $SACD/usr/share/man/man8
  $RADULA_RSYNC zic.8 $SACD/usr/share/man/man8

  install -dv $SACD/usr/share/zoneinfo/posix
  install -dv $SACD/usr/share/zoneinfo/right
}
