prepare() {
  $RSYNC $SRCD/$nom $XSRC --delete \
    --exclude $nom$ver.tar.gz
  $RSYNC $SRCD/tzdata/ $XSRC/$nom \
    --exclude $nom$ver.tar.gz
  cd $XSRC/$nom
}

configure() {
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-remove-sbin.patch
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0002-disable-static.patch
}

build() {
  $MAKE \
    CC=$CC \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS" \
    tzselect \
    zdump \
    zic
}

check() {
  :
}

install() {
  $RSYNC tzselect $CRSD/usr/bin
  $RSYNC zdump $CRSD/usr/bin
  $RSYNC zic $CRSD/usr/bin

  $RSYNC tzselect.8 $CRSD/usr/share/man/man8
  $RSYNC zdump.8 $CRSD/usr/share/man/man8
  $RSYNC zic.8 $CRSD/usr/share/man/man8

  $MKDIR $CRSD/usr/share/zoneinfo/posix
  $MKDIR $CRSD/usr/share/zoneinfo/right
}
