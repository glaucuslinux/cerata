prepare() {
  $RSYNC $SRCD/$nom $XSRC --delete \
    --exclude $nom$ver.tar.gz
  cd $XSRC/$nom
}

configure() {
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-remove-sbin.patch
}

build() {
  $MAKE cc="${CC:-gcc}" CFLAGS="$CFLAGS -DHAVE_STDINT_H=1"
  TZDIR="/usr/share/zoneinfo"
}

check() {
  :
}

install() {
  $RSYNC zic zdump $CRSD/usr/bin

  $RSYNC zic.8 zdump.8 $CRSD/usr/share/man/man8

  $MKDIR $CRSD/usr/share/zoneinfo/posix
  $MKDIR $CRSD/usr/share/zoneinfo/right
}
