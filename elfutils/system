prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  $RSYNC $CERD/binutils/config.guess config
  $RSYNC $CERD/binutils/config.rpath config
  $RSYNC $CERD/binutils/config.sub config

  $PATCH -p1 -i $CERD/$nom/patches/alpine/fix-uninitialized.patch
  $PATCH -p1 -i $CERD/$nom/patches/alpine/musl-macros.patch
}

configure() {
  CFLAGS="$CFLAGS -Wno-error" \
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --enable-deterministic-archives \
    --enable-install-elfh \
    --disable-symbol-versioning \
    --disable-nls \
    --disable-rpath \
    --disable-libdebuginfod \
    --disable-debuginfod \
    --with-zlib \
    --with-bzlib \
    --with-lzma \
    --with-zstd
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SACD \
    install-strip
}
