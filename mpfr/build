prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --enable-thread-safe \
    --enable-shared-cache \
    --enable-decimal-float=bid \
    --enable-float128 \
    --disable-static \
    --enable-pic
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
