prepare() {
  cd $TBLD/gcc
}

configure() {
  :
}

build() {
  $MAKE \
    all-target-$nom
}

check() {
  :
}

install() {
  $MAKE \
    install-strip-target-$nom

  # Remove libtool archive (.la) files
  $RM $TLCD/usr/$TGT/lib/libstdc++.la
  $RM $TLCD/usr/$TGT/lib/libstdc++fs.la
  $RM $TLCD/usr/$TGT/lib/libsupc++.la

  # Manually remove the static libraries
  $RM $TLCD/usr/$TGT/lib/libstdc++.a
  $RM $TLCD/usr/$TGT/lib/libstdc++fs.a
  $RM $TLCD/usr/$TGT/lib/libsupc++.a
}
