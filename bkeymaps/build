package() {
  make \
    DESTDIR="$SACD" \
    install

  mkdir -pv "$SACD"/usr/share/$nom/colemak
  cp -afv "$CERD"/$nom/files/en-latin9.bmap "$SACD"/usr/share/$nom/colemak
}
