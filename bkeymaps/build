package() {
  make \
    DESTDIR="$SACD" \
    install

  mkdir -p "$SACD"/usr/share/$nom/colemak
  cp -fPp "$CERD"/$nom/files/en-latin9.bmap "$SACD"/usr/share/$nom/colemak
}
