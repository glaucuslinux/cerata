prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom
}

configure() {
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-disable-static.patch
}

build() {
  $MAKE \
    LINKER_PATH=/lib/ld-musl-$MLARCH.so.1 \
    LOADER_NAME=ld-linux$GARCH \
    WITH_LIBUCONTEXT=1 \
    WITH_OBSTACK=musl-obstack
}

check() {
  :
}

install() {
  $MAKE \
    LINKER_PATH=/lib/ld-musl-$MLARCH.so.1 \
    LOADER_NAME=ld-linux$GARCH \
    WITH_LIBUCONTEXT=1 \
    WITH_OBSTACK=musl-obstack \
    DESTDIR=$SCER/$nom/sac \
    install
}
