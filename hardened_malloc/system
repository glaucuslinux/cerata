prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom
}

configure() {
  :
}

build() {
  $MAKE

  $MAKE \
    VARIANT=light
}

check() {
  :
}

install() {
  $MKDIR $VNMD/$nom/sac/usr/lib
  $RSYNC out/libhardened_malloc.so $VNMD/$nom/sac/usr/lib
  $RSYNC out/libhardened_malloc-light.so $VNMD/$nom/sac/usr/lib
}
