prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

configure() {
  :
}

build() {
  $MAKE

  $MAKE \
    VARIANT=light
}

check() {
  :
}

install() {
  install -dv $SACD/usr/lib
  $RSYNC out/libhardened_malloc.so $SACD/usr/lib
  $RSYNC out-light/libhardened_malloc-light.so $SACD/usr/lib
}
