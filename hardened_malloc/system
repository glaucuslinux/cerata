ceras_prepare() {
  rsync $RADULA_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

ceras_configure() {
  :
}

ceras_build() {
  make

  make \
    VARIANT=light
}

ceras_check() {
  :
}

ceras_install() {
  install -dv $SACD/usr/lib
  rsync $RADULA_RSYNC_FLAGS out/libhardened_malloc.so $SACD/usr/lib
  rsync $RADULA_RSYNC_FLAGS out-light/libhardened_malloc-light.so $SACD/usr/lib
}
