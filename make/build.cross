prepare() {
  autoreconf -vfis
}

configure() {
  "$CERD"/autoconf/glaucus-configure \
    --build=$BLD \
    --host=$TGT \
    --disable-nls \
    --disable-rpath \
    --without-guile
}

build() {
  $nom
}

package() {
  $nom \
    DESTDIR="$CRSD" \
    install-strip
}
