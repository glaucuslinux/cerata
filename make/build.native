prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --disable-nls \
    --disable-rpath \
    --without-guile
}

build() {
  $nom
}

check() {
  $nom \
    check
}

package() {
  $nom \
    DESTDIR="$SACD" \
    install-strip

  ln -fnrsv $nom "$SACD"/usr/bin/g$nom
}
