prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --with-regex=pcre2
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  # Compatibility symlink
  ln -fnsv $nom "$SACD"/usr/bin/more
}
