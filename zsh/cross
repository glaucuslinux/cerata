ceras_prepare() {
  rsync $RADULA_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  rsync $RADULA_RSYNC_FLAGS $CERD/binutils/config.guess .
  rsync $RADULA_RSYNC_FLAGS $CERD/binutils/config.sub .
}

ceras_configure() {
  LIBS='-lnsss -lskarnet' \
  ./configure \
    --build=$BLD \
    --host=$TGT \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --enable-pcre \
    --enable-cap \
    --enable-multibyte \
    --enable-libc-musl
}

ceras_build() {
  $MAKE
}

ceras_check() {
  :
}

ceras_install() {
  $MAKE \
    DESTDIR=$CRSD \
    install-strip

  ln -sfnv $nom $CRSD/usr/bin/sh
}
