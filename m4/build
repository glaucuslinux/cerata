prepare() {
  ./bootstrap \
    --skip-git \
    --skip-po
}

configure() {
  glaucus-configure \
    --enable-threads=posix \
    --disable-rpath \
    --enable-changeword \
    --disable-nls \
    --without-included-regex \
    --with-packager="$PRETTY_NAME" \
    --with-packager-bug-reports=https://github.com/glaucuslinux/glaucus/issues
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
