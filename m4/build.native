prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --enable-threads=posix \
    --disable-rpath \
    --enable-changeword \
    --disable-nls \
    --without-included-regex \
    --with-packager="$PRETTY_NAME" \
    --with-packager-bug-reports=https://github.com/glaucuslinux/glaucus/issues
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  ln -fnrsv $nom "$SACD"/usr/bin/g$nom

  ln -fnrsv $nom.1 "$SACD"/usr/share/man/man1/g$nom.1
}
