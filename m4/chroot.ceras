prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $CSRC/$nom --delete &&
  cd $CSRC/$nom &&

  $SCRD/gnu guess build-aux &&
  $SCRD/gnu rpath build-aux &&
  $SCRD/gnu sub build-aux &&

  $MKDIR $CBLD/$nom &&
  cd $CBLD/$nom
} &&

configure() {
  $CSRC/$nom/configure \
    --host=$XTGT \
    --prefix=$TLCD \
    --enable-threads=posix \
    --disable-rpath \
    --with-packager=glaucus \
    --with-packager-bug-reports=https://github.com/glaucuslinux/glaucus/issues
} &&

build() {
  $MAKE
} &&

install() {
  $MAKE \
    install-strip &&

  $LN $nom $TLCD/bin/g$nom
}
