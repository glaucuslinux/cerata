prepare() {
  patch \
    -i "$CERD"/$nom/patches/glaucus/0001-customize-login-defaults.patch \
    -p 0
  patch \
    -i "$CERD"/$nom/patches/glaucus/0002-customize-useradd-defaults.patch \
    -p 0

  autoreconf -vfis
}

configure() {
  LIBS=-lutmps \
  shadow_cv_utmpdir=/run/utmps \
  glaucus-configure \
    --disable-static \
    --enable-pic \
    --enable-lastlog \
    --disable-logind \
    --disable-nls \
    --disable-rpath \
    --without-audit \
    --without-libpam \
    --without-selinux \
    --with-acl \
    --with-attr \
    --without-tcb \
    --with-yescrypt \
    --without-nscd \
    --without-su \
    --without-libbsd \
    --with-fcaps
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
