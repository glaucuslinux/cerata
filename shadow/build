prepare() {
  patch -p0 -i "$CERD"/$nom/patches/glaucus/0001-customize-login-defaults.patch
  patch -p0 -i "$CERD"/$nom/patches/glaucus/0002-customize-useradd-defaults.patch

  autoreconf -vfis
}

configure() {
  LIBS=-lutmps \
  shadow_cv_utmpdir=/run/utmps \
  glaucus-configure \
    --disable-static \
    --enable-pic \
    --enable-lastlog \
    --disable-logind \
    --disable-nls \
    --disable-rpath \
    --without-audit \
    --without-libpam \
    --without-selinux \
    --with-acl \
    --with-attr \
    --without-tcb \
    --with-yescrypt \
    --without-nscd \
    --without-su \
    --without-libbsd \
    --with-fcaps
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
