prepare() {
  patch -p0 -i "$CERD"/$nom/patches/glaucus/0001-customize-login-defaults.patch
}

configure() {
  LIBS="-lnsss -lutmps" \
  shadow_cv_utmpdir=/run/utmps \
  "$CERD"/autoconf/glaucus-configure \
    --build=$BLD \
    --host=$TGT \
    --disable-static \
    --enable-pic \
    --enable-lastlog \
    --disable-logind \
    --disable-nls \
    --disable-rpath \
    --without-audit \
    --without-libpam \
    --without-selinux \
    --with-acl \
    --with-attr \
    --without-tcb \
    --with-yescrypt \
    --without-nscd \
    --without-su \
    --without-libbsd
}

build() {
  make
}

check() {
  :
}

package() {
  make \
    DESTDIR="$CRSD" \
    install-strip

  # Remove libtool archive
  rm -fv "$CRSD"/usr/lib/libsubid.la
}
