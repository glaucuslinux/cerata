prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --disable-static \
    --enable-pic \
    --with-pkg-config-dir=/usr/lib/${nom}ig \
    --with-system-libdir=/usr/lib \
    --with-system-includedir=/usr/include
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  # Compatibility symlinks
  for i in pkg-config $TGT-$nom $TGT-pkg-config; do
    ln -fnsv $nom "$SACD"/usr/bin/$i
  done
}
