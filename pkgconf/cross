prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  $RSYNC $CERD/binutils/config.guess .
  $RSYNC $CERD/binutils/config.sub .
}

configure() {
  ./configure \
    --build=$BLD \
    --host=$TGT \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --disable-static \
    --with-pic \
    --with-pkg-config-dir=/usr/lib/${nom}ig \
    --with-system-libdir=/usr/lib \
    --with-system-includedir=/usr/include
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    install-strip

  # Compatibility symlinks
  $LN $nom $CRSD/usr/bin/pkg-config
  $LN $nom $CRSD/usr/bin/$TGT-$nom
  $LN $nom $CRSD/usr/bin/$TGT-pkg-config

  # Remove libtool archive (.la) file
  $RM $CRSD/usr/lib/lib$nom.la

  $LN pkg.m4 $CRSD/usr/share/aclocal/$nom.m4
  $LN $nom.1 $CRSD/usr/share/man/man1/pkg-config.1
}
