build() {
  make \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS"
}

check() {
  make \
    tests
}

package() {
  mkdir -pv "$SACD"/usr/bin
  mv -fv $nom "$SACD"/usr/bin
  ln -fnsv $nom "$SACD"/usr/bin/gzip
  ln -fnsv $nom "$SACD"/usr/bin/un$nom
}
