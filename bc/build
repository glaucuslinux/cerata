configure() {
  ./configure.sh \
    --enable-editline \
    --disable-generated-tests \
    --disable-man-pages \
    --disable-nls \
    --prefix=/usr \
    --bindir=/usr/bin \
    --libdir=/usr/lib
}

build() {
  make
}

check() {
  make \
    test
}

package() {
  make \
    DESTDIR="$SACD" \
    install
}
