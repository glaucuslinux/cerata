prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom
}

configure() {
  ./configure.sh \
    --disable-generated-tests \
    --disable-man-pages \
    --disable-nls \
    --prefix=/usr \
    --bindir=/usr/bin \
    --includedir=/usr/include \
    --libdir=/usr/lib
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install
}
