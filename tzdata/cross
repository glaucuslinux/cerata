prepare() {
  $RSYNC $SRCD/$nom $XSRC --delete \
    --exclude $nom$ver.tar.gz
  cd $XSRC/$nom
}

configure() {
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-remove-sbin.patch
}

build() {
  :
}

check() {
  :
}

install() {
  zic -b fat -d $CRSD/usr/share/zoneinfo africa antarctica asia australasia \
    backward backzone etcetera europe factory northamerica southamerica
  zic -b fat -d $CRSD/usr/share/zoneinfo/posix africa antarctica asia \
    australasia backward backzone etcetera europe factory northamerica \
    southamerica
  zic -b fat -d $CRSD/usr/share/zoneinfo/right africa antarctica asia \
    australasia backward backzone etcetera europe factory northamerica \
    southamerica -L leapseconds

  zic -d $CRSD/usr/share/zoneinfo -p Asia/Damascus

  $RSYNC iso3166.tab zone1970.tab zone.tab $CRSD/usr/share/zoneinfo

  $LN $CRSD/usr/share/zoneinfo/Asia/Damascus $CRSD/etc/localtime
}
