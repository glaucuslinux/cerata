prepare() {
  $RSYNC $SRCD/$nom $XSRC --delete
  cd $XSRC/$nom

  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-remove-sbin.patch
}

configure() {
  :
}

build() {
  :
}

check() {
  :
}

install() {
  $MKDIR $CRSD/usr/share/zoneinfo/posix
  $MKDIR $CRSD/usr/share/zoneinfo/right
}
