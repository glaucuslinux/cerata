prepare() {
  $RSYNC $SRCD/$nom $SSRC --delete \
    --exclude $nom$ver.tar.gz
  cd $SSRC/$nom
}

configure() {
  :
}

build() {
  :
}

check() {
  :
}

install() {
  # Don't run `make install` as it builds and installs unnecessary stuff
  $LN $VNMD/$nom/sac/usr/share/zoneinfo/Asia/Damascus $VNMD/$nom/sac/etc/localtime

  zic -b fat -d $VNMD/$nom/sac/usr/share/zoneinfo africa antarctica asia australasia \
    backward backzone etcetera europe factory northamerica southamerica
  zic -b fat -d $VNMD/$nom/sac/usr/share/zoneinfo/posix africa antarctica asia \
    australasia backward backzone etcetera europe factory northamerica \
    southamerica
  zic -b fat -d $VNMD/$nom/sac/usr/share/zoneinfo/right africa antarctica asia \
    australasia backward backzone etcetera europe factory northamerica \
    southamerica -L leapseconds

  zic -d $VNMD/$nom/sac/usr/share/zoneinfo -p Asia/Damascus

  $RSYNC iso3166.tab $VNMD/$nom/sac/usr/share/zoneinfo
  $RSYNC leap-seconds.list $VNMD/$nom/sac/usr/share/zoneinfo
  $RSYNC zone1970.tab $VNMD/$nom/sac/usr/share/zoneinfo
  $RSYNC zone.tab $VNMD/$nom/sac/usr/share/zoneinfo
}
