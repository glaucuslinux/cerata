prepare() {
  autoreconf -vfis
}

configure() {
  "$CERD"/autoconf/glaucus-configure \
    --build=$BLD \
    --host=$TGT \
    --with-libedit
}

build() {
  make
}

check() {
  :
}

package() {
  make \
    DESTDIR="$CRSD" \
    install-strip

  ln -fnsv $nom "$CRSD"/usr/bin/sh
  ln -fnsv $nom "$CRSD"/usr/bin/yash
}
