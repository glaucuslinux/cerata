prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $CSRC/$nom --delete
  cd $CSRC/$nom

  rad_behave_patch 0 $nom upstream 0001-fix-libedit-fno-common
}

configure() {
  ./configure \
    --host=$TUPL \
    --prefix=$TLCD \
    --disable-static \
    --with-libedit
}

build() {
  $MAKE
}

install() {
  $MAKE \
    install-strip

  $LN $nom $TLCD/bin/sh
}
