prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --enable-glob \
    --with-libedit
}

build() {
  make
}

check() {
  make \
    check

  ./src/$nom -c 'echo ok'
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  ln -fnsv $nom "$SACD"/usr/bin/sh
}
