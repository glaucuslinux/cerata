prepare() {
  autoreconf -vfis
}

configure() {
  LIBS=-lnsss \
  glaucus-configure \
    --with-libedit
}

build() {
  make
}

check() {
  make \
    check

  ./src/$nom -c 'echo ok'
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
