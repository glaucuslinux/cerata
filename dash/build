prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --with-libedit
}

build() {
  make
}

check() {
  make \
    check

  ./src/$nom -c 'echo ok'
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  ln -fs $nom "$SACD"/usr/bin/sh
}
