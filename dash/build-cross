prepare() {
  autoreconf -vfis
}

configure() {
  "$CERD"/autoconf/files/glaucus-configure \
    --build=$BLD \
    --host=$TGT \
    --with-libedit
}

build() {
  make
}

package() {
  make \
    DESTDIR="$CRSD" \
    install-strip

  ln -fs $nom "$CRSD"/usr/bin/sh
  ln -fs $nom "$CRSD"/usr/bin/yash
}
