prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom
}

configure() {
  ./configure \
    --prefix=/usr \
    --includedir=/usr/include \
    --libdir=/usr/lib \
    --libdevdir=/usr/lib \
    --mandir=/usr/share/man \
    --datadir=/usr/share
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$VNMD/$nom/sac \
    install
}
