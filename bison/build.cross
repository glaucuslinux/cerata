prepare() {
  autoreconf -vfis

  touch \
    doc/$nom.1.tmp \
    doc/$nom.info
}

configure() {
  "$CERD"/autoconf/glaucus-configure \
    --build=$BLD \
    --host=$TGT \
    --enable-threads=posix \
    --disable-rpath \
    --disable-nls
}

build() {
  make
}

check() {
  :
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
