ceras_prepare() {
  # vim doesn't build out of tree
  rsync $RADULA_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

ceras_configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sharedir=/usr/share \
    --docdir=/usr/share/doc/$nom \
    --mandir=/usr/share/man \
    --disable-selinux \
    --enable-acl \
    --disable-help
}

ceras_build() {
  make
}

ceras_check() {
  :
}

ceras_install() {
  make \
    DESTDIR=$SACD \
    install
}
