prepare() {
  $MKDIR $TBLD/$nom

  cd $SRCD/$nom/$nom-$ver
}

configure() {
  glaucus-muon \
    -Dlibwacom=false \
    -Ddebug-gui=false \
    -Dtests=false \
    -Dzshcompletiondir=no \
    $TBLD/$nom
}

build() {
  samu \
    -C $TBLD/$nom
}

check() {
  :
}

install() {
  DESTDIR=$SACD \
  muon \
    -C $TBLD/$nom \
    install
}
