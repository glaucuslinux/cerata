prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom

  $PATCH -p1 -i $CERD/$nom/patches/gentoo/$nom-$ver-gcc10.patch

  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-default-to-less.patch

  $PATCH -p1 -i $CERD/$nom/patches/upstream/empty-tbl-null-deref.patch
  $PATCH -p1 -i $CERD/$nom/patches/upstream/tbl-colwidth-oob.patch
}

configure() {
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0002-fix-configure.patch
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0003-remove-sbin.patch
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0004-fix-paths.patch

  echo "MANPATH_BASE=/usr/share/man
MANPATH_DEFAULT=/usr/share/man
OSENUM=MANDOC_OS_OTHER
OSNAME='glaucus $ARCH $(date +%d%m%Y)'
UTF8_LOCALE=C.UTF-8

CC=$CC
CFLAGS='$CFLAGSFATNOCOMMON'
LDFLAGS='$LDFLAGS'

BUILD_CATMAN=1

HAVE_CMSG=1
HAVE_CMSG_XPG42=0
HAVE_DIRENT_NAMLEN=0
HAVE_ENDIAN=1
HAVE_EFTYPE=0
HAVE_ERR=1
HAVE_FTS=0
HAVE_FTS_COMPARE_CONST=0
HAVE_GETLINE=1
HAVE_GETSUBOPT=1
HAVE_ISBLANK=1
HAVE_LESS_T=1
HAVE_MKDTEMP=1
HAVE_NTOHL=1
HAVE_O_DIRECTORY=1
HAVE_OHASH=0
HAVE_PATH_MAX=1
HAVE_PLEDGE=0
HAVE_PROGNAME=0
HAVE_REALLOCARRAY=1
HAVE_RECALLOCARRAY=0
HAVE_REWB_BSD=0
HAVE_REWB_SYSV=1
HAVE_SANDBOX_INIT=0
HAVE_STRCASESTR=1
HAVE_STRINGLIST=0
HAVE_STRLCAT=1
HAVE_STRLCPY=1
HAVE_STRNDUP=1
HAVE_STRPTIME=1
HAVE_STRSEP=1
HAVE_STRTONUM=0
HAVE_SYS_ENDIAN=0
HAVE_VASPRINTF=1
HAVE_WCHAR=1

PREFIX=/usr
BINDIR=/usr/bin
MANDIR=/usr/share/man

LN='$LN'" > configure.local

  ./configure
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    install
}
