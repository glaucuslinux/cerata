prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom
}

configure() {
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-remove-sbin.patch
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0002-fix-paths.patch

  # Environment variables (e.g. CFLAGS) have to be explicitly specified.
  # INCLUDEDIR and LIBDIR are only needed when libmandoc.a is being installed.
  # LD_RECVMSG is used to prevent catman from linking against libsocket.
  echo "MANPATH_BASE=/usr/share/man
MANPATH_DEFAULT=/usr/share/man
OSENUM=MANDOC_OS_OTHER
OSNAME='glaucus $ARCH $(date +%d%m%Y)'
UTF8_LOCALE=C.UTF-8

AR=$AR
CC=$CC
CFLAGS='$CFLAGS'
LDADD=-lfts
LDFLAGS='$LDFLAGS'
LD_RECVMSG=' '

BUILD_CATMAN=1

HAVE_ATTRIBUTE=1
HAVE_CMSG=1
HAVE_CMSG_XPG42=0
HAVE_DIRENT_NAMLEN=0
HAVE_EFTYPE=0
HAVE_ENDIAN=1
HAVE_ERR=1
HAVE_FTS=1
HAVE_FTS_COMPARE_CONST=1
HAVE_GETLINE=1
HAVE_GETSUBOPT=1
HAVE_ISBLANK=1
HAVE_LESS_T=1
HAVE_MKDTEMP=1
HAVE_MKSTEMPS=1
HAVE_NANOSLEEP=1
HAVE_NTOHL=1
HAVE_O_DIRECTORY=1
HAVE_OHASH=0
HAVE_PATH_MAX=1
HAVE_PLEDGE=0
HAVE_PROGNAME=0
HAVE_REALLOCARRAY=1
HAVE_RECALLOCARRAY=0
HAVE_RECVMSG=1
HAVE_REWB_BSD=0
HAVE_REWB_SYSV=1
HAVE_SANDBOX_INIT=0
HAVE_STRCASESTR=1
HAVE_STRINGLIST=0
HAVE_STRLCAT=1
HAVE_STRLCPY=1
HAVE_STRNDUP=1
HAVE_STRPTIME=1
HAVE_STRSEP=1
HAVE_STRTONUM=0
HAVE_SYS_ENDIAN=0
HAVE_VASPRINTF=1
HAVE_WCHAR=1

PREFIX=/usr
BINDIR=/usr/bin
INCLUDEDIR=/usr/include
LIBDIR=/usr/lib
MANDIR=/usr/share/man

LN='$LN'" > configure.local

  ./configure
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    install
}
