prepare() {
  ./bootstrap
}

configure() {
  glaucus-configure \
    --enable-bios-cd \
    --enable-bios-pxe \
    --enable-bios \
    --enable-uefi-x86-64 \
    --enable-uefi-cd
}

build() {
  make
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
