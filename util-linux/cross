prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom

  $RSYNC $CERD/$nom/ttydefaults.h include

  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-fix-utmp-file-path.patch

  $PATCH -p1 -i $CERD/$nom/patches/alpine/irq-sort.patch

  ./autogen.sh

  $RSYNC $CERD/binutils/config.guess config
  $RSYNC $CERD/binutils/config.rpath config
  $RSYNC $CERD/binutils/config.sub config
}

configure() {
  LIBS='-lutmps -lskarnet' \
  ADJTIME_PATH=/var/lib/hwclock/adjtime \
  ./configure \
    --build=$BLD \
    --host=$TGT \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --disable-static \
    --disable-symvers \
    --disable-nls \
    --disable-rpath \
    --disable-asciidoc \
    --disable-raw \
    --disable-chfn-chsh \
    --disable-login \
    --disable-nologin \
    --disable-su \
    --disable-runuser \
    --disable-more \
    --disable-bash-completion \
    --disable-pylibmount \
    --enable-fs-paths-default=/usr/bin \
    --disable-use-tty-group \
    --enable-usrdir-path \
    --disable-makeinstall-chown \
    --with-pic \
    --with-readline \
    --without-systemd \
    --without-systemdsystemunitdir \
    --with-vendordir=/usr/lib \
    --without-python
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    usrsbin_execdir=/usr/bin \
    install-strip

  # Remove libtool archive (.la) files
  $RM $CRSD/usr/lib/libblkid.la
  $RM $CRSD/usr/lib/libfdisk.la
  $RM $CRSD/usr/lib/libmount.la
  $RM $CRSD/usr/lib/libsmartcols.la
  $RM $CRSD/usr/lib/libuuid.la
}
