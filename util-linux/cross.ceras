prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom

  radula_behave_gnu guess config
  radula_behave_gnu rpath config
  radula_behave_gnu sub config

  $MKDIR $CRSD/var/lib/hwclock
}

configure() {
  LIBS='-lutmps -lskarnet' \
  ADJTIME_PATH=/var/lib/hwclock/adjtime \
  ./configure \
    --build=$BLD \
    --host=$TGT \
    --prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/bin \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --libdir=/usr/lib \
    --disable-static \
    --disable-symvers \
    --disable-nls \
    --disable-rpath \
    --disable-setpriv \
    --disable-nologin \
    --disable-su \
    --disable-runuser \
    --disable-more \
    --disable-bash-completion \
    --disable-pylibmount \
    --disable-use-tty-group \
    --enable-usrdir-path \
    --disable-makeinstall-chown \
    --without-systemd \
    --without-systemdsystemunitdir \
    --without-python

  sed 's/${exec_prefix}\/sbin/\/usr\/bin/' \
    -i Makefile
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    install-strip

  $RM $CRSD/usr/lib/libblkid.la
  $RM $CRSD/usr/lib/libfdisk.la
  $RM $CRSD/usr/lib/libmount.la
  $RM $CRSD/usr/lib/libsmartcols.la
  $RM $CRSD/usr/lib/libuuid.la
}
