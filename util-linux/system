ceras_prepare() {
  $RADULA_RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  patch --no-backup-if-mismatch -p0 -i $CERD/$nom/patches/glaucus/0001-fix-adjtime-file-path.patch
  patch --no-backup-if-mismatch -p0 -i $CERD/$nom/patches/glaucus/0002-fix-utmp-file-path.patch

  ./autogen.sh

  $RADULA_RSYNC $CERD/binutils/config.guess config
  $RADULA_RSYNC $CERD/binutils/config.rpath config
  $RADULA_RSYNC $CERD/binutils/config.sub config
}

ceras_configure() {
  LIBS='-lutmps -lskarnet' \
  ADJTIME_PATH=/var/lib/hwclock/adjtime \
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --disable-static \
    --disable-symvers \
    --disable-nls \
    --disable-rpath \
    --disable-asciidoc \
    --disable-liblastlog2 \
    --disable-pam-lastlog2 \
    --disable-raw \
    --disable-chfn-chsh \
    --disable-login \
    --disable-nologin \
    --disable-su \
    --disable-runuser \
    --disable-more \
    --disable-bash-completion \
    --disable-pylibmount \
    --enable-fs-paths-default=/usr/bin \
    --disable-use-tty-group \
    --enable-usrdir-path \
    --disable-makeinstall-chown \
    --with-pic \
    --with-readline \
    --without-systemd \
    --without-systemdsystemunitdir \
    --with-vendordir=/usr/lib \
    --without-python
}

ceras_build() {
  $MAKE
}

ceras_check() {
  :
}

ceras_install() {
  $MAKE \
    DESTDIR=$SACD \
    usrsbin_execdir=/usr/bin \
    install-strip

  # Remove libtool archive (.la) files
  rm -frv \
    $SACD/usr/lib/libblkid.la \
    $SACD/usr/lib/libfdisk.la \
    $SACD/usr/lib/libmount.la \
    $SACD/usr/lib/libsmartcols.la \
    $SACD/usr/lib/libuuid.la
}
