configure() {
  glaucus-muon \
    -Dzsh-completions=false \
    -Dbash-completions=false \
    -Dfish-completions=false \
    -Dxwayland=disabled \
    -Dtray=enabled \
    -Dgdk-pixbuf=enabled \
    -Dman-pages=disabled \
    -Dsd-bus-provider=basu \
    build
}

build() {
  samu \
    -C build
}

check() {
  muon \
    test \
    -R \
    -C build
}

package() {
  DESTDIR="$SACD" \
  muon \
    -C build \
    install
}
