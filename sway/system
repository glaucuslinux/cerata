prepare() {
  $MKDIR $SBLD/$nom

  cd $SRCD/$nom/$nom-$ver
}

configure() {
  glaucus-muon \
    -Dzsh-completions=false \
    -Dbash-completions=false \
    -Dfish-completions=false \
    -Dswaybar=false \
    -Dswaynag=false \
    -Dxwayland=disabled \
    -Dtray=disabled \
    -Dsd-bus-provider=basu \
    $SBLD/$nom
}

build() {
  samu \
    -C $SBLD/$nom
}

check() {
  :
}

install() {
  DESTDIR=$SACD \
  muon \
    -C $SBLD/$nom \
    install
}
