prepare() {
  $MKDIR $XBLD/$nom
  cd $XBLD/$nom
}

configure() {
  :
}

build() {
  sh $SRCD/$nom/$nom/Build.sh \
    -r
}

install() {
  $MKDIR $XCER/$nom/sac/usr/bin
  $RSYNC $nom $XCER/$nom/sac/usr/bin/$nom

  $LN $nom $XCER/$nom/sac/usr/bin/ksh
  $LN $nom $XCER/$nom/sac/usr/bin/rksh
}
