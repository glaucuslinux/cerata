ceras_prepare() {
  install -dv $TBLD/$nom
  cd $TBLD/$nom
}

ceras_configure() {
  :
}

ceras_build() {
  sh $SRCD/$nom/$nom/Build.sh \
    -r
}

ceras_check() {
  :
}

ceras_install() {
  cp -afv $nom $SACD/usr/bin
  ln -sfnv $nom $SACD/usr/bin/ksh
  ln -sfnv $nom $SACD/usr/bin/rksh
}
