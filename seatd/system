prepare() {
  $MKDIR $SBLD/$nom

  cd $SRCD/$nom/$nom-$ver
}

configure() {
  glaucus-muon \
    -Dlibseat-logind=systemd \
    -Dman-pages=disabled \
    $SBLD/$nom
}

build() {
  samu \
    -C $SBLD/$nom
}

check() {
  :
}

install() {
  DESTDIR=$VNMD/$nom/sac \
  muon \
    -C $SBLD/$nom \
    install
}
