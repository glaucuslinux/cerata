prepare() {
  mkdir -pv build
}

configure() {
  glaucus-muon \
    -Dlibseat-logind=disabled \
    -Dlibseat-builtin=enabled \
    -Dman-pages=disabled \
    build
}

build() {
  samu \
    -C build
}

check() {
  muon \
    test \
    -R \
    -C build
}

package() {
  DESTDIR="$SACD" \
  muon \
    -C build \
    install
}
