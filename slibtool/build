prepare() {
  :
}

configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --mandir=/usr/share/man \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --disable-static
}

build() {
  make
}

check() {
  :
}

package() {
  make \
    DESTDIR="$SACD" \
    install

  ln -fnsv $nom "$SACD"/usr/bin/libtool
  # ln -fnsv "$SACD"/usr/share/$nom/$nom.sh "$SACD"/usr/bin/libtool
  cp -afv "$CERD"/$nom/libtoolize "$SACD"/usr/bin

  mkdir -pv \
    "$SACD"/usr/share/aclocal \
    "$SACD"/usr/share/libtool/build-aux

  cp -afv \
    "$CERD"/$nom/libtool.m4 \
    "$CERD"/$nom/ltargz.m4 \
    "$CERD"/$nom/ltdl.m4 \
    "$CERD"/$nom/lt~obsolete.m4 \
    "$CERD"/$nom/ltoptions.m4 \
    "$CERD"/$nom/ltsugar.m4 \
    "$CERD"/$nom/ltversion.m4 \
    "$SACD"/usr/share/aclocal

  cp -afv \
    "$CERD"/$nom/compile \
    "$CERD"/$nom/config.guess \
    "$CERD"/$nom/config.sub \
    "$CERD"/$nom/depcomp \
    "$CERD"/$nom/install-sh \
    "$CERD"/$nom/ltmain.sh \
    "$CERD"/$nom/missing \
    "$SACD"/usr/share/libtool/build-aux

  ln -fnsv ../$nom/$nom.m4 "$SACD"/usr/share/aclocal
}
