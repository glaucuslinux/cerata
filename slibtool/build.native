prepare() {
  :
}

configure() {
  glaucus-configure \
    --disable-static
}

build() {
  make
}

check() {
  :
}

package() {
  make \
    DESTDIR="$SACD" \
    install

  ln -fnrsv $nom "$SACD"/usr/bin/libtool
  # ln -fnrsv "$SACD"/usr/share/$nom/$nom.sh "$SACD"/usr/bin/libtool
  # cp -afv "$SACD"/$nom/libtoolize "$SACD"/usr/bin
  ln -fnrsv ${nom}ize "$SACD"/usr/bin/libtoolize

  mkdir -pv \
    "$SACD"/usr/share/aclocal \
    "$SACD"/usr/share/libtool/build-aux

  cp -afv \
    "$CERD"/$nom/libtool.m4 \
    "$CERD"/$nom/ltargz.m4 \
    "$CERD"/$nom/ltdl.m4 \
    "$CERD"/$nom/lt~obsolete.m4 \
    "$CERD"/$nom/ltoptions.m4 \
    "$CERD"/$nom/ltsugar.m4 \
    "$CERD"/$nom/ltversion.m4 \
    "$SACD"/usr/share/aclocal

  cp -afv \
    "$CERD"/$nom/compile \
    "$CERD"/$nom/config.guess \
    "$CERD"/$nom/config.sub \
    "$CERD"/$nom/depcomp \
    "$CERD"/$nom/install-sh \
    "$CERD"/$nom/ltmain.sh \
    "$CERD"/$nom/missing \
    "$SACD"/usr/share/libtool/build-aux

  # ln -fnrsv "$SACD"/usr/share/$nom/$nom.m4 "$SACD"/usr/share/aclocal
}
