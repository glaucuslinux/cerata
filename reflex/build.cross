prepare() {
  autoreconf -vfis
}

configure() {
  "$CERD"/autoconf/glaucus-configure \
    --build=$BLD \
    --host=$TGT \
    --without-man2html
}

build() {
  make
}

check() {
  :
}

package() {
  make \
    DESTDIR="$CRSD" \
    install

  # Compatibility symlinks
  for i in flex flex++ lex; do
    ln -fnsv $nom "$CRSD"/usr/bin/$i
  done
}
