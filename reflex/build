prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --without-man2html
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install

  # Compatibility symlinks
  for i in flex flex++ lex; do
    ln -fnsv $nom "$SACD"/usr/bin/$i
  done
}
