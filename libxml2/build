prepare() {
  NOCONFIGURE=yes \
  ./autogen.sh
}

configure() {
  glaucus-configure \
    --enable-pic \
    --without-debug \
    --with-history \
    --with-readline \
    --without-sax1 \
    --without-xinclude \
    --without-xpath \
    --without-xptr \
    --with-zlib \
    --with-tls
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
