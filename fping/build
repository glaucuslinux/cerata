prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  # Compatibility symlink
  ln -fs $nom "$SACD"/usr/bin/${nom}6

  cp -fPp "$CERD"/$nom/files/ping "$SACD"/usr/bin
}
