prepare() {
  mkdir -pv build
}

configure() {
  glaucus-muon \
    -Dsystem-bus-address=unix:path=/run/dbus/system_bus_socket \
    -Daudit=disabled \
    -Dlibcap=enabled \
    build
}

build() {
  samu \
    -C build
}

check() {
  muon \
    test \
    -R \
    -C build
}

package() {
  DESTDIR="$SACD" \
  muon \
    -C build \
    install
}
