prepare() {
  $RSYNC $SRCD/$nom $XSRC --delete
  cd $XSRC/$nom
}

configure() {
  ./configure \
    --prefix=/usr \
    --bindir=/usr/bin
}

build() {
  # This ceras does not support parallel build!
  MAKEFLAGS='-j1 -O V=1' \
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    install

  $LN $nom $CRSD/usr/bin/m4
  $LN $nom.1 $CRSD/usr/share/man/man1/m4.1
}
