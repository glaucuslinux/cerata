prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --without-boost-regex \
    --without-brotli \
    --without-bzip3 \
    --without-bash-completion-dir \
    --without-fish-completion-dir \
    --without-zsh-completion-dir
}

build() {
  make
}

check() {
  make \
    test
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  ln -fnsv $nom "$SACD"/usr/bin/grep
  ln -fnsv $nom "$SACD"/usr/bin/ug
  ln -fnsv $nom+ "$SACD"/usr/bin/ug+
}
