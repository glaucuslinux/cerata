prepare() {
  autoreconf -vfis
}

configure() {
  "$CERD"/autoconf/glaucus-configure \
    --build=$BLD \
    --host=$TGT \
    --without-pcre2 \
    --without-boost-regex \
    --without-zlib \
    --without-brotli \
    --without-bzip3 \
    --without-bash-completion-dir \
    --without-fish-completion-dir \
    --without-zsh-completion-dir
}

build() {
  make
}

check() {
  :
}

package() {
  make \
    DESTDIR="$CRSD" \
    install-strip

  ln -fnsv $nom "$SACD"/usr/bin/ug
  ln -fnsv $nom+ "$SACD"/usr/bin/ug+
}
