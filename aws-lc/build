configure() {
  glaucus-cmake \
    -B build \
    -DBUILD_SHARED_LIBS=ON \
    -DBUILD_TESTING=OFF \
    -DDISABLE_GO=ON
}

build() {
  make \
    -C build
}

package() {
  DESTDIR="$SACD" \
  make \
    -C build \
    install/strip
}
