prepare() {
  mkdir -pv build
}

configure() {
  glaucus-muon \
    -Dman-pages=disabled \
    -Dxwayland=disabled \
    -Dnls=disabled \
    build
}

build() {
  samu \
    -C build
}

check() {
  :
}

package() {
  DESTDIR="$SACD" \
  muon \
    -C build \
    install
}
