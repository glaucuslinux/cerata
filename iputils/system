prepare() {
  $MKDIR $SBLD/$nom

  cd $SRCD/$nom/$nom-$ver
}

configure() {
  glaucus-meson \
    -DUSE_IDN=false \
    -DBUILD_RARPD=true \
    -DBUILD_TFTPD=true \
    -DBUILD_TRACEROUTE6=true \
    -DBUILD_NINFOD=false \
    -DNINFOD_MESSAGES=false \
    -DBUILD_MANS=false \
    -DUSE_GETTEXT=false \
    $SBLD/$nom
}

build() {
  samu \
    -C $SBLD/$nom
}

check() {
  :
}

install() {
  DESTDIR=$SCER/$nom/sac \
  samu \
    -C $SBLD/$nom \
    install

  $LN ping $SCER/$nom/sac/usr/bin/ping6
  $LN tracepath $SCER/$nom/sac/usr/bin/tracepath6
  $LN traceroute6 $SCER/$nom/sac/usr/bin/traceroute
}
