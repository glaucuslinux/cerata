prepare() {
  $MKDIR $SBLD/$nom

  cd $SRCD/$nom/$nom-$ver
}

configure() {
  glaucus-muon \
    -DBUILD_MANS=false \
    -DUSE_GETTEXT=false \
    -DSKIP_TESTS=true \
    $SBLD/$nom
}

build() {
  samu \
    -C $SBLD/$nom
}

check() {
  :
}

install() {
  DESTDIR=$VNMD/$nom/sac \
  muon \
    -C $SBLD/$nom \
    install

  $LN ping $VNMD/$nom/sac/usr/bin/ping6
  $LN tracepath $VNMD/$nom/sac/usr/bin/tracepath6
}
