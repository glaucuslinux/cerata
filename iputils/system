prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom
}

configure() {
  $CERD/muon/glaucus-muon \
    -DUSE_IDN=false \
    -DUSE_GETTEXT=false \
    build
}

build() {
  samu \
    -C build
}

check() {
  :
}

install() {
  DESTDIR=$VNMD/$nom/sac \
  muon \
    -C build \
    install

  $LN ping $VNMD/$nom/sac/usr/bin/ping6
  $LN tracepath $VNMD/$nom/sac/usr/bin/tracepath6
}
