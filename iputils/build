prepare() {
  mkdir -pv build
}

configure() {
  glaucus-muon \
    -DBUILD_MANS=false \
    -DUSE_GETTEXT=false \
    -DSKIP_TESTS=true \
    build
}

build() {
  samu \
    -C build
}

check() {
  :
}

package() {
  DESTDIR="$SACD" \
  muon \
    -C build \
    install

  ln -fnsv ping "$SACD"/usr/bin/ping6
  ln -fnsv tracepath "$SACD"/usr/bin/tracepath6
}
