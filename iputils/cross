prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom
}

configure() {
  muon setup \
    --prefix=/usr \
    --bindir=/usr/bin \
    --datadir=/usr/share \
    --includedir=/usr/include \
    --infodir=/usr/share/info \
    --libdir=/usr/lib \
    --libexecdir=/usr/lib/$nom \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --sbindir=/usr/bin \
    --sharedstatedir=/var/lib \
    --sysconfdir=/etc \
    --backend=ninja \
    --buildtype=release \
    --stdsplit \
    --strip \
    --wrap-mode=nodownload \
    -Db_lto=true \
    -Db_lto_mode=thin \
    -Db_pie=true \
    -DUSE_IDN=false \
    -DUSE_GETTEXT=false \
    build
}

build() {
  samu \
    -C build
}

check() {
  :
}

install() {
  DESTDIR=$CRSD \
  muon \
    -C build \
    install

  $LN ping $CRSD/usr/bin/ping6
  $LN tracepath $CRSD/usr/bin/tracepath6
}
