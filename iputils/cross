prepare() {
  $MKDIR $XBLD/$nom

  cd $SRCD/$nom/$nom-$ver
}

configure() {
  $CERD/meson/glaucus-meson \
    --cross-file $CERD/meson/meson.cross \
    -DUSE_IDN=false \
    -DBUILD_MANS=false \
    -DUSE_GETTEXT=false \
    -DSKIP_TESTS=true \
    $XBLD/$nom
}

build() {
  samu \
    -C $XBLD/$nom
}

check() {
  :
}

install() {
  DESTDIR=$CRSD \
  samu \
    -C $XBLD/$nom \
    install

  $LN ping $CRSD/usr/bin/ping6
  $LN tracepath $CRSD/usr/bin/tracepath6
}
