prepare() {
  $MKDIR $XBLD/$nom

  cd $SRCD/$nom/$nom-$ver
}

configure() {
  $CERD/meson/glaucus-meson \
    --cross-file $CERD/meson/meson.cross.$ARCH \
    -DUSE_IDN=false \
    -DBUILD_RDISC=false \
    -DENABLE_RDISC_SERVER=false \
    -DBUILD_NINFOD=false \
    -DNINFOD_MESSAGES=false \
    -DBUILD_MANS=false \
    -DUSE_GETTEXT=false \
    $XBLD/$nom
}

build() {
  samu \
    -C $XBLD/$nom
}

check() {
  :
}

install() {
  DESTDIR=$CRSD \
  samu \
    -C $XBLD/$nom \
    install

  $LN ping $CRSD/usr/bin/ping6
  $LN tracepath $CRSD/usr/bin/tracepath6
}
