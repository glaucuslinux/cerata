prepare() {
  $RSYNC $SRCD/$nom/xxHash-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom
}

configure() {
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-disable-static.patch
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$VNMD/$nom/sac \
    PREFIX=/usr \
    install
}
