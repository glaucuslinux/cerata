prepare() {
  $RSYNC $SRCD/$nom/xxHash-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

configure() {
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-disable-static.patch
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SACD \
    PREFIX=/usr \
    install
}
