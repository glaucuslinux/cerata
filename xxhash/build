prepare() {
  cd "$TMPD"/$nom/xxHash-$ver

  patch -p0 -i "$CERD"/$nom/patches/glaucus/0001-disable-static.patch
}

build() {
  make \
    DISPATCH=1 \
    LIBXXH_DISPATCH=1
}

check() {
  make \
    check
}

package() {
  make \
    LIBXXH_DISPATCH=1 \
    DESTDIR="$SACD" \
    prefix=/usr \
    exec_prefix=/usr \
    libdir=/usr/lib \
    includedir=/usr/include \
    bindir=/usr/bin \
    datarootdir=/usr/share \
    mandir=/usr/share/man \
    man1dir=/usr/share/man/man1 \
    install
}
