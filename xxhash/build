prepare() {
  cd "$TMPD"/$nom/xxHash-$ver

  patch \
    -i "$CERD"/$nom/patches/glaucus/0001-disable-static.patch \
    -p 0
}

build() {
  make \
    DISPATCH=1 \
    LIBXXH_DISPATCH=1
}

check() {
  make \
    check
}

package() {
  make \
    LIBXXH_DISPATCH=1 \
    DESTDIR="$SACD" \
    prefix=/usr \
    libdir=/usr/lib \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    install
}
