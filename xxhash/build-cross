prepare() {
  cd "$TMPD"/$nom/xxHash-$ver

  patch \
    -i "$CERD"/$nom/patches/glaucus/0001-disable-static.patch \
    -p 0
}

build() {
  make \
    DISPATCH=1 \
    LIBXXH_DISPATCH=1
}

package() {
    make \
    LIBXXH_DISPATCH=1 \
    DESTDIR="$CRSD" \
    prefix=/usr \
    exec_prefix=/usr \
    libdir=/usr/lib \
    bindir=/usr/bin \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    install
}
