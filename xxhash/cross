ceras_prepare() {
  $RADULA_RSYNC $SRCD/$nom/xxHash-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

ceras_configure() {
  $RADULA_PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-disable-static.patch
}

ceras_build() {
  $MAKE
}

ceras_check() {
  :
}

ceras_install() {
  $MAKE \
    DESTDIR=$CRSD \
    PREFIX=/usr \
    install
}
