prepare() {
  rsync $RAD_RSYNC_FLAGS $SRCD/$nom/xxHash-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

configure() {
  patch --no-backup-if-mismatch -p0 -i $CERD/$nom/patches/glaucus/0001-disable-static.patch
}

build() {
  make
}

check() {
  :
}

package() {
  make \
    DESTDIR=$SACD \
    PREFIX=/usr \
    install
}
