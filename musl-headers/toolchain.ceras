install() {
  $MAKE \
    ARCH=$MARCH \
    prefix=/usr \
    DESTDIR=$CRSD \
    install-headers

  $RM $CRSD/usr/include/utmp.h
  $RM $CRSD/usr/include/utmpx.h
}
