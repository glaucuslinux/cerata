ceras_prepare() {
  $RADULA_RSYNC $SRCD/musl/musl-$ver/ $TSRC/musl --delete
  cd $TSRC/musl

  patch --no-backup-if-mismatch -p0 -i $CERD/musl/patches/glaucus/0001-fix-paths.patch
}

ceras_configure() {
  :
}

ceras_build() {
  :
}

ceras_check() {
  :
}

ceras_install() {
  # Order according to Makefile
  $MAKE \
    exec_prefix=/usr \
    bindir=/usr/bin \
    prefix=/usr \
    includedir=/usr/include \
    libdir=/usr/lib \
    syslibdir=/usr/lib \
    ARCH=x86_64 \
    DESTDIR=$CRSD \
    install-headers

  # BSD compatibility header
  $RADULA_RSYNC $CERD/musl/queue.h $CRSD/usr/include/sys

  # Use `utmpx.h` provided by cross `utmps`
  rm -frv $CRSD/usr/include/utmpx.h
}
