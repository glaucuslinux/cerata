prepare() {
  $RSYNC $SRCD/musl/musl-$ver/ $TSRC/musl --delete
  cd $TSRC/musl

  $PATCH -p1 -i $CERD/musl/patches/adelie/3001-make-real-lastlog-h.patch

  # Alpine uses upstream patches that will be applied in future `musl` releases
  $PATCH -p1 -i $CERD/musl/patches/alpine/0001-fix-TZ-parsing-logic-for-identifying-POSIX-form-stri.patch
  $PATCH -p1 -i $CERD/musl/patches/alpine/0001-riscv64-define-ELF_NFPREG.patch
  $PATCH -p1 -i $CERD/musl/patches/alpine/qsort_r.patch
  $PATCH -p1 -i $CERD/musl/patches/alpine/syscall-cp-epoll.patch

  # Custom Alpine patches
  $PATCH -p1 -i $CERD/musl/patches/alpine/eh-frame.patch
  $PATCH -p1 -i $CERD/musl/patches/alpine/handle-aux-at_base.patch

  $PATCH -p1 -i $CERD/musl/patches/gentoo/musl-$ver-gethostid.patch

  $PATCH -p0 -i $CERD/musl/patches/glaucus/0001-fix-paths.patch

  # Emoji wcwidth patch for musl
  $PATCH -p1 -i $CERD/musl/patches/noname/emoji.patch

  $PATCH -p0 -i $CERD/musl/patches/void/mo_lookup.patch
}

configure() {
  :
}

build() {
  :
}

check() {
  :
}

install() {
  # Order according to Makefile
  $MAKE \
    exec_prefix=/usr \
    bindir=/usr/bin \
    prefix=/usr \
    includedir=/usr/include \
    libdir=/usr/lib \
    ARCH=$MARCH \
    DESTDIR=$CRSD \
    install-headers

  # BSD compatibility headers
  $RSYNC $CERD/musl/cdefs.h $CRSD/usr/include/sys
  $RSYNC $CERD/musl/queue.h $CRSD/usr/include/sys
  $RSYNC $CERD/musl/tree.h $CRSD/usr/include/sys

  # Possible non-stub utmp backends in the future:
  # https://wiki.musl-libc.org/roadmap.html
  $RM $CRSD/usr/include/utmp.h
  $RM $CRSD/usr/include/utmpx.h
}
