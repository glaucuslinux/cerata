prepare() {
  $RSYNC $SRCD/musl/musl-$ver/ $TSRC/musl --delete
  cd $TSRC/musl

  $PATCH -p1 -i $CERD/musl/patches/adelie/realpath.patch

  $PATCH -p0 -i $CERD/musl/patches/glaucus/0001-fix-lastlog.patch
  $PATCH -p0 -i $CERD/musl/patches/glaucus/0002-fix-paths.patch

  # Remove upstream patches in following release
  $PATCH -p1 -i $CERD/musl/patches/upstream/0001-relr.patch
  $PATCH -p1 -i $CERD/musl/patches/upstream/0002-relr.patch
  $PATCH -p1 -i $CERD/musl/patches/upstream/0003-relr.patch
  $PATCH -p1 -i $CERD/musl/patches/upstream/0004-relr.patch
}

configure() {
  :
}

build() {
  :
}

check() {
  :
}

install() {
  # Order according to Makefile
  $MAKE \
    exec_prefix=/usr \
    bindir=/usr/bin \
    prefix=/usr \
    includedir=/usr/include \
    libdir=/usr/lib \
    syslibdir=/usr/lib \
    ARCH=$MARCH \
    DESTDIR=$CRSD \
    install-headers

  # BSD compatibility headers
  $RSYNC $CERD/musl/cdefs.h $CRSD/usr/include/sys
  $RSYNC $CERD/musl/queue.h $CRSD/usr/include/sys
  $RSYNC $CERD/musl/tree.h $CRSD/usr/include/sys

  # Possible non-stub utmp backends in the future:
  # https://wiki.musl-libc.org/roadmap.html
  $RM $CRSD/usr/include/utmp.h
  $RM $CRSD/usr/include/utmpx.h
}
