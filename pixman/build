configure() {
  glaucus-muon \
    -Dloongson-mmi=disabled \
    -Dmmx=enabled \
    -Dsse2=enabled \
    -Dssse3=enabled \
    -Dvmx=disabled \
    -Darm-simd=disabled \
    -Dneon=disabled \
    -Da64-neon=disabled \
    -Dmips-dspr2=disabled \
    -Drvv=disabled \
    -Dgnu-inline-asm=enabled \
    -Dtls=enabled \
    -Dopenmp=disabled \
    -Dgtk=disabled \
    -Dlibpng=enabled \
    -Dtests=disabled \
    -Ddemos=disabled \
    build
}

build() {
  samu \
    -C build
}

package() {
  DESTDIR="$SACD" \
  muon \
    -C build \
    install
}
