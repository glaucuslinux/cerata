prepare() {
  install -dv $TBLD/$nom

  cd $SRCD/$nom/$nom-$ver
}

configure() {
  glaucus-muon \
    -Dloongson-mmi=disabled \
    -Dvmx=disabled \
    -Darm-simd=disabled \
    -Dneon=disabled \
    -Da64-neon=disabled \
    -Diwmmxt=disabled \
    -Diwmmxt2=false \
    -Dmips-dspr2=disabled \
    -Dtls=enabled \
    -Dopenmp=disabled \
    -Dgtk=disabled \
    -Dtests=disabled \
    -Ddemos=disabled \
    $TBLD/$nom
}

build() {
  samu \
    -C $TBLD/$nom
}

check() {
  :
}

install() {
  DESTDIR=$SACD \
  muon \
    -C $TBLD/$nom \
    install
}
