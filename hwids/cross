prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom
}

configure() {
  :
}

build() {
  :
}

check() {
  :
}

install() {
  # `GZIP` should be explicitly disabled to stop the installation of `.gz` files
  $MAKE \
    GZIP=no \
    UDEV=yes \
    MISCDATA=/usr/share/hwdata \
    DESTDIR=$CRSD \
    install

  $RSYNC $CERD/$nom/pnp.ids $CRSD/usr/share/hwdata
  $RSYNC $SRCD/$nom/$nom-$ver/sdio.ids $CRSD/usr/share/hwdata
}
