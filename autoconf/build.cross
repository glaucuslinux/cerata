prepare() {
  autoreconf -vfis
}

configure() {
  "$CERD"/$nom/glaucus-configure \
    --build=$BLD \
    --host=$TGT
}

build() {
  touch \
    man/$nom.1.t \
    man/autoheader.1.t \
    man/autom4te.1.t \
    man/autoreconf.1.t \
    man/autoscan.1.t \
    man/autoupdate.1.t \
    man/ifnames.1.t

  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$CRSD" \
    install-strip

  cp -afv "$CERD"/$nom/glaucus-configure "$CRSD"/usr/bin
}
