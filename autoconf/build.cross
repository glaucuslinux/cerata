prepare() {
  autoreconf -vfis
}

configure() {
  "$CERD"/$nom/glaucus-configure \
    --build=$BLD \
    --host=$TGT
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$CRSD" \
    install-strip

  cp -afv "$CERD"/$nom/glaucus-configure "$CRSD"/usr/bin
}
