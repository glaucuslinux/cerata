prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  radula_behave_gnu guess build-aux
  radula_behave_gnu sub build-aux

  radula_behave_patch 0 $nom lfs $nom-$ver-consolidated_fixes-1
}

configure() {
  ./configure \
    --prefix=/usr
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install-strip
}
