prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  if [ $BOOTSTRAP = yes ]; then
    make \
      install-strip
  fi

  make \
    DESTDIR="$SACD" \
    install-strip

  rm -frv "$SACD"/usr/share/info
}
