prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure
}

build() {
  touch \
    man/$nom.1.t \
    man/autoheader.1.t \
    man/autom4te.1.t \
    man/autoreconf.1.t \
    man/autoscan.1.t \
    man/autoupdate.1.t \
    man/ifnames.1.t

  make
}

check() {
  :
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  cp -afv "$CERD"/$nom/glaucus-configure "$SACD"/usr/bin
}
