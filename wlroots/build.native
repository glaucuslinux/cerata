prepare() {
  install -dv $TBLD/$nom

  cd $SRCD/$nom/$nom-$ver
}

configure() {
  glaucus-muon \
    -Dxcb-errors=disabled \
    -Dxwayland=disabled \
    -Dexamples=false \
    -Drenderers=gles2,vulkan \
    -Dbackends=drm,libinput \
    -Dallocators=gbm \
    $TBLD/$nom
}

build() {
  samu \
    -C $TBLD/$nom
}

check() {
  :
}

package() {
  DESTDIR=$SACD \
  muon \
    -C $TBLD/$nom \
    install
}
