prepare() {
  mkdir -pv build
}

configure() {
  glaucus-muon \
    -Dxcb-errors=disabled \
    -Dxwayland=disabled \
    -Dexamples=false \
    -Drenderers=gles2,vulkan \
    -Dbackends=drm,libinput \
    -Dallocators=gbm \
    -Dsession=enabled \
    -Dcolor-management=enabled \
    -Dlibliftoff=disabled \
    build
}

build() {
  samu \
    -C build
}

check() {
  muon \
    test \
    -R \
    -C build
}

package() {
  DESTDIR="$SACD" \
  muon \
    -C build \
    install
}
