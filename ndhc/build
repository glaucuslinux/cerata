prepare() {
  patch -p0 -i "$CERD"/$nom/patches/glaucus/0001-fix-CFLAGS-and-LDFLAGS.patch
}

configure() {
  :
}

build() {
  make
}

check() {
  :
}

package() {
  mkdir -pv "$SACD"/usr/bin
  cp -afv $nom "$SACD"/usr/bin
}
