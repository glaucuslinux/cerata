prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom
  cd $XSRC/$nom

  rad_behave_patch 0 $nom glaucus 0001-disable-static
}

configure() {
  :
}

build() {
  $MAKE \
    PREFIX=/usr
}

install() {
  $MAKE \
    PREFIX=/usr \
    DESTDIR=$CRSD \
    install
}
