build() {
  make \
    PREFIX=/usr \
    LIBDIR=/usr/lib \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    libudev.so.1

  $CC $CFLAGS $LDFLAGS contrib/helper.c -o $nom-helper
}

package() {
  make \
    PREFIX=/usr \
    LIBDIR=/usr/lib \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    DESTDIR="$CRSD" \
    install-shared

  mv -f $nom-helper "$CRSD"/usr/bin
}
