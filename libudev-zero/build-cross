build() {
  make \
    PREFIX=/usr \
    libudev.so.1

  $CC $CFLAGS $LDFLAGS contrib/helper.c -o $nom-helper
}

package() {
  make \
    PREFIX=/usr \
    DESTDIR="$CRSD" \
    install-shared

  mv -f $nom-helper "$CRSD"/usr/bin
}
