ceras_prepare() {
  rsync $RADULA_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

ceras_configure() {
  :
}

ceras_build() {
  make \
    PREFIX=/usr \
    LIBDIR=/usr/lib \
    INCLUDEDIR=/usr/include \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    libudev.so.1

  $CC $CFLAGS $LDFLAGS contrib/helper.c -o $nom-helper
}

ceras_check() {
  :
}

ceras_install() {
  make \
    PREFIX=/usr \
    LIBDIR=/usr/lib \
    INCLUDEDIR=/usr/include \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    DESTDIR=$SACD \
    install-shared

  cp -afv $nom-helper $CRSD/usr/bin
}
