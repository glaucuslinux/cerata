prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom
  cd $SSRC/$nom
}

configure() {
  :
}

build() {
  $MAKE \
    PREFIX=/usr \
    LIBDIR=/usr/lib \
    INCLUDEDIR=/usr/include \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    libudev.so.1

  $CC $CFLAGS $LDFLAGS contrib/helper.c -o $nom-helper
}

check() {
  :
}

install() {
  $MAKE \
    PREFIX=/usr \
    LIBDIR=/usr/lib \
    INCLUDEDIR=/usr/include \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    DESTDIR=$VNMD/$nom/sac \
    install-shared

  $RSYNC $nom-helper $CRSD/usr/bin
}
