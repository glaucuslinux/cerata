build() {
  make \
    PREFIX=/usr \
    LIBDIR=/usr/lib \
    INCLUDEDIR=/usr/include \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    libudev.so.1

  $CC $CFLAGS $LDFLAGS contrib/helper.c -o $nom-helper
}

package() {
  make \
    PREFIX=/usr \
    LIBDIR=/usr/lib \
    INCLUDEDIR=/usr/include \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    DESTDIR="$SACD" \
    install-shared

  mkdir -pv "$SACD"/usr/bin
  mv -fv $nom-helper "$SACD"/usr/bin
}
