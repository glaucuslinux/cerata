prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom
  cd $XSRC/$nom
}

configure() {
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-disable-static.patch
}

build() {
  $MAKE \
    PREFIX=/usr \
    LIBDIR=/usr/lib \
    INCLUDEDIR=/usr/include \
    PKGCONFIGDIR=/usr/lib/pkgconfig
}

check() {
  :
}

install() {
  $MAKE \
    PREFIX=/usr \
    LIBDIR=/usr/lib \
    INCLUDEDIR=/usr/include \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    DESTDIR=$CRSD \
    install
}
