prepare() {
  mkdir -p "$TMPD"/$nom
  cd "$TMPD"/$nom
}

build() {
  $CC $CFLAGS $LDFLAGS "$CERD"/musl/gencat.c -o gencat
  $CC $CFLAGS $LDFLAGS "$CERD"/musl/getent.c -o getent
}

package() {
  mv -f \
    gencat \
    getent \
    "$CRSD"/usr/bin

  for i in a2x asciidoc gtkdocize help2man ldconfig makeinfo po4a texi2dvi; do
    cp -fPp "$CERD"/musl/true "$CRSD"/usr/bin/$i
  done
}
