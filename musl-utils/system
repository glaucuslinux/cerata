ceras_prepare() {
  install -dv $TBLD/$nom
  cd $TBLD/$nom
}

ceras_configure() {
  :
}

ceras_build() {
  $CC $CFLAGS $LDFLAGS $CERD/musl/gencat.c -o gencat
  $CC $CFLAGS $LDFLAGS $CERD/musl/getent.c -o getent
}

ceras_check() {
  :
}

ceras_install() {
  install -dv $SACD/usr/bin
  $RADULA_RSYNC gencat $SACD/usr/bin
  $RADULA_RSYNC getent $SACD/usr/bin

  install -dv $SACD/usr/share/man/man1
  $RADULA_RSYNC $CERD/musl/gencat.1 $SACD/usr/share/man/man1
  $RADULA_RSYNC $CERD/musl/getent.1 $SACD/usr/share/man/man1
}
