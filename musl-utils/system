prepare() {
  $MKDIR $SBLD/$nom
  cd $SBLD/$nom
}

configure() {
  :
}

build() {
  $CC $CFLAGS $LDFLAGS $CERD/musl/gencat.c -o gencat
  $CC $CFLAGS $LDFLAGS $CERD/musl/getent.c -o getent
}

check() {
  :
}

install() {
  $MKDIR $VNMD/$nom/sac/usr/bin
  $RSYNC gencat $VNMD/$nom/sac/usr/bin
  $RSYNC getent $VNMD/$nom/sac/usr/bin

  $MKDIR $VNMD/$nom/sac/usr/share/man/man1
  $RSYNC $CERD/musl/gencat.1 $VNMD/$nom/sac/usr/share/man/man1
  $RSYNC $CERD/musl/getent.1 $VNMD/$nom/sac/usr/share/man/man1
}
