ceras_prepare() {
  install -dv $TBLD/$nom
  cd $TBLD/$nom
}

ceras_configure() {
  :
}

ceras_build() {
  $CC $CFLAGS $LDFLAGS $CERD/musl/gencat.c -o gencat
  $CC $CFLAGS $LDFLAGS $CERD/musl/getent.c -o getent
}

ceras_check() {
  :
}

ceras_install() {
  rsync $RADULA_RSYNC_FLAGS gencat $CRSD/usr/bin
  rsync $RADULA_RSYNC_FLAGS getent $CRSD/usr/bin

  ln -sfnv true $CRSD/usr/bin/ldconfig

  install -dv $CRSD/usr/share/man/man1
  rsync $RADULA_RSYNC_FLAGS $CERD/musl/gencat.1 $CRSD/usr/share/man/man1
  rsync $RADULA_RSYNC_FLAGS $CERD/musl/getent.1 $CRSD/usr/share/man/man1
}
