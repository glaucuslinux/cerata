prepare() {
  patch -p1 -i "$CERD"/$nom/patches/alpine/fix-uninitialized.patch
  patch -p0 -i "$CERD"/$nom/patches/glaucus/0001-disable-sample-file.patch

  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --without-x
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install
}
