prepare() {
  patch -p1 -i "$CERD"/$nom/patches/alpine/rowhammer.patch
  patch -p0 -i "$CERD"/$nom/patches/glaucus/0001-remove-chown.patch
}

configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --datadir=/usr/share \
    --mandir=/usr/share/man \
    --sysconfdir=/etc \
    --without-pam \
    --with-timestamp
}

build() {
  make
}

package() {
  make \
    DESTDIR="$SACD" \
    install

  ln -fnsv doas "$SACD"/usr/bin/$nom
  ln -fnsv doas "$SACD"/usr/bin/sudo
}
