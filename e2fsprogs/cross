ceras_prepare() {
  $RADULA_RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  $RADULA_RSYNC $CERD/binutils/config.guess config
  $RADULA_RSYNC $CERD/binutils/config.rpath config
  $RADULA_RSYNC $CERD/binutils/config.sub config

  patch --no-backup-if-mismatch -p1 -i $CERD/$nom/patches/alpine/lfs64.patch

  # `INSTALL` documentation recommends building out of tree
  install -dv $TBLD/$nom
  cd $TBLD/$nom
}

ceras_configure() {
  $TSRC/$nom/configure \
    --build=$BLD \
    --host=$TGT \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --enable-symlink-install \
    --enable-relative-symlinks \
    --enable-symlink-build \
    --enable-elf-shlibs \
    --disable-bsd-shlibs \
    --disable-libuuid \
    --disable-libblkid \
    --disable-fsck \
    --disable-uuidd \
    --disable-nls \
    --disable-rpath \
    --enable-lto \
    --without-udev-rules-dir \
    --without-systemd-unit-dir
}

ceras_build() {
  # Disable parallel build!
  MAKEFLAGS=-j1 \
  $MAKE
}

ceras_check() {
  :
}

ceras_install() {
  $MAKE \
    DESTDIR=$CRSD \
    install-strip \
    install-libs

  mv -fv $CRSD/usr/lib/e2initrd_helper $CRSD/usr/bin

  rm -frv \
    $CRSD/usr/lib/libcom_err.a \
    $CRSD/usr/lib/libe2p.a \
    $CRSD/usr/lib/libext2fs.a \
    $CRSD/usr/lib/libss.a
}
