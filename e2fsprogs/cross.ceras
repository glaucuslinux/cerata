prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom

  rad_behave_gnu guess config
  rad_behave_gnu rpath config
  rad_behave_gnu sub config

  $MKDIR $XBLD/$nom
  cd $XBLD/$nom
}

configure() {
  $XSRC/$nom/configure \
    --build=$BLD \
    --host=$TGT \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --sysconfdir=/etc \
    --enable-symlink-install \
    --enable-elf-shlibs \
    --disable-bsd-shlibs \
    --disable-libuuid \
    --disable-libblkid \
    --disable-fsck \
    --disable-uuidd \
    --disable-nls \
    --enable-threads=posix \
    --disable-rpath \
    --enable-lto \
    --without-included-gettext
}

build() {
  $MAKE
}

install() {
  $MAKE \
    DESTDIR=$XCER/$nom/sac \
    install-strip
  
  $MAKE \
    DESTDIR=$XCER/$nom/sac \
    install-libs

  find $XCER/$nom/sac/usr/lib -name *.a -type f -exec $CHMOD u+w {} \;
}
