prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom

  radula_behave_gnu guess config
  radula_behave_gnu rpath config
  radula_behave_gnu sub config

  $MKDIR $XBLD/$nom
  cd $XBLD/$nom
}

configure() {
  $XSRC/$nom/configure \
    --build=$BLD \
    --host=$TGT \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --enable-symlink-install \
    --enable-elf-shlibs \
    --disable-bsd-shlibs \
    --disable-libuuid \
    --disable-libblkid \
    --disable-fsck \
    --disable-uuidd \
    --disable-nls \
    --enable-threads=posix \
    --disable-rpath \
    --enable-lto \
    --without-included-gettext
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    install-strip

  $MAKE \
    DESTDIR=$CRSD \
    install-libs

  $MV $CRSD/usr/lib/e2initrd_helper $CRSD/usr/bin

  $CHMOD u+w $CRSD/usr/lib/libcom_err.a
  $CHMOD u+w $CRSD/usr/lib/libe2p.a
  $CHMOD u+w $CRSD/usr/lib/libext2fs.a
  $CHMOD u+w $CRSD/usr/lib/libss.a
}
