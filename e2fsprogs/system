prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  $RSYNC $CERD/binutils/config.guess config
  $RSYNC $CERD/binutils/config.rpath config
  $RSYNC $CERD/binutils/config.sub config

  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-remove-sbin.patch
}

configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --enable-symlink-install \
    --enable-relative-symlinks \
    --enable-symlink-build \
    --enable-elf-shlibs \
    --disable-bsd-shlibs \
    --disable-libuuid \
    --disable-libblkid \
    --disable-fsck \
    --disable-uuidd \
    --disable-nls \
    --disable-rpath \
    --enable-lto
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install-strip

  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install-libs

  $MV $SCER/$nom/sac/usr/lib/e2initrd_helper $SCER/$nom/sac/usr/bin

  $CHMOD u+w $SCER/$nom/sac/usr/lib/libcom_err.a
  $CHMOD u+w $SCER/$nom/sac/usr/lib/libe2p.a
  $CHMOD u+w $SCER/$nom/sac/usr/lib/libext2fs.a
  $CHMOD u+w $SCER/$nom/sac/usr/lib/libss.a
}
