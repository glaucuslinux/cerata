prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  $RSYNC $CERD/binutils/config.guess config
  $RSYNC $CERD/binutils/config.rpath config
  $RSYNC $CERD/binutils/config.sub config

  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-remove-sbin.patch

  $PATCH -p1 -i $CERD/$nom/patches/upstream/libext2fs-add-sanity-check-to-extent-manipulation.patch

  $PATCH -p0 -i $CERD/$nom/patches/void/cross.patch

  # `INSTALL` documentation recommends building out of tree
  $MKDIR $SBLD/$nom
  cd $SBLD/$nom
}

configure() {
  $SSRC/$nom/configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --enable-symlink-install \
    --enable-relative-symlinks \
    --enable-symlink-build \
    --enable-elf-shlibs \
    --disable-bsd-shlibs \
    --disable-libuuid \
    --disable-libblkid \
    --disable-fsck \
    --disable-uuidd \
    --disable-nls \
    --disable-rpath \
    --enable-lto \
    --with-udev-rules-dir=/usr/lib/udev/rules.d
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install-strip \
    install-libs

  $MV $SCER/$nom/sac/usr/lib/e2initrd_helper $SCER/$nom/sac/usr/bin

  $RM $SCER/$nom/sac/usr/lib/libcom_err.a
  $RM $SCER/$nom/sac/usr/lib/libe2p.a
  $RM $SCER/$nom/sac/usr/lib/libext2fs.a
  $RM $SCER/$nom/sac/usr/lib/libss.a
}
