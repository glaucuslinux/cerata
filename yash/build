prepare() {
  patch \
    -i "$CERD"/$nom/patches/glaucus/0001-configure-$nom.patch \
    -p 0
}

configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --enable-array \
    --enable-dirstack \
    --enable-double-bracket \
    --enable-help \
    --enable-history \
    --enable-lineedit \
    --disable-nls \
    --enable-printf \
    --enable-socket \
    --enable-test \
    --enable-ulimit
}

build() {
  make
}

check() {
  make \
    test
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
