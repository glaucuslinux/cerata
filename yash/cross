ceras_prepare() {
  $RADULA_RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  $RADULA_PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-remove-introduction.patch
  $RADULA_PATCH -p0 -i $CERD/$nom/patches/glaucus/0002-sample-profile-${nom}rc.patch
}

ceras_configure() {
  $RADULA_PATCH -p0 -i $CERD/$nom/patches/glaucus/0003-fix-cross-compile.patch

  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --enable-array \
    --enable-dirstack \
    --enable-double-bracket \
    --enable-help \
    --enable-history \
    --enable-lineedit \
    --disable-nls \
    --enable-printf \
    --enable-socket \
    --enable-test \
    --enable-ulimit
}

ceras_build() {
  # Build `makesignum` using host's compiler
  $MAKE \
    CC=$HOSTCC \
    makesignum

  $MAKE
}

ceras_check() {
  :
}

ceras_install() {
  $MAKE \
    DESTDIR=$CRSD \
    install-strip

  $RADULA_RSYNC $CERD/$nom/${nom}rc $CRSD/etc
}
