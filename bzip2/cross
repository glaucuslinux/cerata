ceras_prepare() {
  rsync $RADULA_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

ceras_configure() {
  patch --no-backup-if-mismatch -p1 -i $CERD/$nom/patches/void/soname.patch
}

ceras_build() {
  make \
    -f Makefile-libbz2_so
}

ceras_check() {
  :
}

ceras_install() {
  rsync $RADULA_RSYNC_FLAGS bzlib.h $CRSD/usr/include

  rsync $RADULA_RSYNC_FLAGS libbz2.so.$ver $CRSD/usr/lib
  ln -sfnv libbz2.so.$ver $CRSD/usr/lib/libbz2.so
  ln -sfnv libbz2.so.$ver $CRSD/usr/lib/libbz2.so.1
  ln -sfnv libbz2.so.$ver $CRSD/usr/lib/libbz2.so.1.0

  rsync $RADULA_RSYNC_FLAGS $CERD/$nom/$nom.pc $PKG_CONFIG_LIBDIR
  ln -sfnv $nom.pc $PKG_CONFIG_LIBDIR/libbz2.pc
}
