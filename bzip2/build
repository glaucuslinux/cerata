prepare() {
  patch -p1 -i "$CERD"/$nom/patches/void/soname.patch
}

configure() {
  :
}

build() {
  make \
    -f Makefile-libbz2_so
}

check() {
  :
}

package() {
  mkdir -pv "$SACD"/usr/include
  cp -afv bzlib.h "$SACD"/usr/include

  mkdir -pv "$SACD"/usr/lib
  cp -afv libbz2.so.$ver "$SACD"/usr/lib
  ln -fnsv libbz2.so.$ver "$SACD"/usr/lib/libbz2.so
  ln -fnsv libbz2.so.$ver "$SACD"/usr/lib/libbz2.so.1
  ln -fnsv libbz2.so.$ver "$SACD"/usr/lib/libbz2.so.1.0

  mkdir -pv "$SACD"/usr/lib/pkgconfig
  cp -afv "$CERD"/$nom/$nom.pc "$SACD"/usr/lib/pkgconfig
}
