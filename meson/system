prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom
}

configure() {
  :
}

build() {
  python3 setup.py \
    build
}

check() {
  :
}

install() {
  python3 setup.py \
    install \
    --root=$SACD \
    --optimize=2 \
    --force \
    --skip-build

  $RSYNC $CERD/$nom/glaucus-$nom $SACD/usr/bin
}
