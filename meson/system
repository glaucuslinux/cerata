ceras_prepare() {
  rsync $RADULA_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

ceras_configure() {
  :
}

ceras_build() {
  python3 setup.py \
    build
}

ceras_check() {
  :
}

ceras_install() {
  python3 setup.py \
    install \
    --root=$SACD \
    --optimize=2 \
    --force \
    --skip-build

  cp -afv $CERD/$nom/glaucus-$nom $SACD/usr/bin
}
