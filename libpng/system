ceras_prepare() {
  rsync $RADULA_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  rsync $RADULA_RSYNC_FLAGS $CERD/binutils/config.guess .
  rsync $RADULA_RSYNC_FLAGS $CERD/binutils/config.sub .

  patch --no-backup-if-mismatch -p1 -i $CERD/$nom/patches/upstream/$nom-$ver-apng.patch
}

ceras_configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --disable-static \
    --disable-tests \
    --with-pic
}

ceras_build() {
  make

  make \
    -C contrib/pngminus \
    png2pnm \
    pnm2png
}

ceras_check() {
  :
}

ceras_install() {
  make \
    DESTDIR=$SACD \
    install-strip

  # Remove libtool archives
  rm -frv \
    $SACD/usr/lib/$nom.la \
    $SACD/usr/lib/${nom}16.la

  rsync $RADULA_RSYNC_FLAGS contrib/pngminus/png2pnm $SACD/usr/bin
  rsync $RADULA_RSYNC_FLAGS contrib/pngminus/pnm2png $SACD/usr/bin
}
