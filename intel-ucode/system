ceras_prepare() {
  rsync $RADULA_RSYNC_FLAGS $SRCD/$nom/Intel-Linux-Processor-Microcode-Data-Files-microcode-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

ceras_configure() {
  install -dv kernel/x86/microcode
}

ceras_build() {
  iucode_tool \
    --write-earlyfw=$nom.img $nom/ $nom-with-caveats/ \
    --overwrite
}

ceras_check() {
  :
}

ceras_install() {
  install -dv $SACD/boot
  cp -afv $nom.img $SACD/boot
}
