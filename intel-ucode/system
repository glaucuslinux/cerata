prepare() {
  $RSYNC $SRCD/$nom/Intel-Linux-Processor-Microcode-Data-Files-microcode-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom
}

configure() {
  $MKDIR kernel/x86/microcode
}

build() {
  iucode_tool \
    --write-earlyfw=$nom.img $nom/ $nom-with-caveats/ \
    --overwrite
}

check() {
  :
}

install() {
  $MKDIR $SACD/boot
  $RSYNC $nom.img $SACD/boot
}
