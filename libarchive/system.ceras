prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  rad_behave_gnu guess build/autoconf
  rad_behave_gnu rpath build/autoconf
  rad_behave_gnu sub build/autoconf

  rad_behave_patch 0 $nom void filter-xz-enable-threads
}

configure() {
  ./configure \
    --prefix=/usr \
    --disable-static \
    --disable-rpath \
    --enable-xattr \
    --enable-acl \
    --without-cng \
    --without-nettle \
    --without-xml2
}

build() {
  $MAKE
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install-strip

  $LN bsdcpio $SCER/$nom/sac/usr/bin/cpio
  $LN bsdtar $SCER/$nom/sac/usr/bin/tar
}
