prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  radula_behave_gnu guess build/autoconf
  radula_behave_gnu rpath build/autoconf
  radula_behave_gnu sub build/autoconf

  radula_behave_patch 0 $nom void filter-xz-enable-threads
}

configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --disable-static \
    --disable-rpath \
    --enable-xattr \
    --enable-acl \
    --without-nettle \
    --without-xml2
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install-strip

  $LN bsdcpio $SCER/$nom/sac/usr/bin/cpio
  $LN bsdtar $SCER/$nom/sac/usr/bin/tar
}
