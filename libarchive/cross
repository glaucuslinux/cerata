ceras_prepare() {
  rsync $RADULA_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  rsync $RADULA_RSYNC_FLAGS $CERD/binutils/config.guess build/autoconf
  rsync $RADULA_RSYNC_FLAGS $CERD/binutils/config.rpath build/autoconf
  rsync $RADULA_RSYNC_FLAGS $CERD/binutils/config.sub build/autoconf

  patch --no-backup-if-mismatch -p0 -i $CERD/$nom/patches/glaucus/0001-fix-pkg-config-file.patch

  patch --no-backup-if-mismatch -p0 -i $CERD/$nom/patches/void/filter-xz-enable-threads.patch
}

ceras_configure() {
  ./configure \
    --build=$BLD \
    --host=$TGT \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --disable-static \
    --disable-rpath \
    --enable-xattr \
    --enable-acl \
    --with-pic \
    --without-nettle \
    --without-xml2
}

ceras_build() {
  $MAKE
}

ceras_check() {
  :
}

ceras_install() {
  $MAKE \
    DESTDIR=$CRSD \
    install-strip

  ln -sfnv bsdcpio $CRSD/usr/bin/cpio
  ln -sfnv bsdtar $CRSD/usr/bin/tar

  # Remove libtool archive (.la) file
  rm -frv $CRSD/usr/lib/$nom.la
}
