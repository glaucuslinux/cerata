prepare() {
  patch -p0 -i "$CERD"/$nom/patches/glaucus/0001-fix-pkg-config-file.patch
  patch -p1 -i "$CERD"/$nom/patches/void/filter-xz-enable-threads.patch

  ./build/autogen.sh
}

configure() {
  glaucus-configure \
    --disable-static \
    --enable-pic \
    --disable-bsdcpio \
    --disable-rpath \
    --enable-xattr \
    --enable-acl \
    --without-libb2 \
    --without-iconv \
    --without-cng \
    --without-xml2
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  # Compatibility symlink
  ln -fnsv bsdtar "$SACD"/usr/bin/tar
}
