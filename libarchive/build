prepare() {
  patch \
    -i "$CERD"/$nom/patches/glaucus/0001-fix-pkg-config-file.patch \
    -p 0
  patch \
    -i "$CERD"/$nom/patches/void/filter-xz-enable-threads.patch \
    -p 1

  ./build/autogen.sh
}

configure() {
  glaucus-configure \
    --disable-static \
    --enable-pic \
    --disable-bsdcpio \
    --disable-rpath \
    --enable-posix-regex-lib=libpcre2posix \
    --enable-xattr \
    --enable-acl \
    --without-libb2 \
    --without-iconv \
    --without-cng \
    --without-xml2
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  # Compatibility symlinks
  ln -fs bsdtar "$SACD"/usr/bin/tar
  ln -fs bsdunzip "$SACD"/usr/bin/unzip
}
