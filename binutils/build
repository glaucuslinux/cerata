prepare() {
  patch \
    -i "$CERD"/$nom/patches/alpine/$nom-ld-fix-static-linking.patch \
    -p 1

  mkdir -p build
  cd build
}

configure() {
  ../configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --libdir=/usr/lib \
    --disable-multilib \
    --enable-install-libiberty \
    --enable-plugins \
    --enable-targets=x86_64-pep \
    --enable-deterministic-archives \
    --enable-colored-disassembly \
    --disable-gprofng \
    --disable-compressed-debug-sections \
    --enable-new-dtags \
    --enable-relro \
    --disable-default-execstack \
    --enable-default-hash-style=gnu \
    --enable-initfini-array \
    --disable-werror \
    --disable-nls \
    --disable-rpath \
    --with-pic \
    --with-mmap \
    --with-lib-path=/usr/lib \
    --with-pkgversion="$PRETTY_NAME" \
    --with-bugurl=https://github.com/glaucuslinux/glaucus/issues \
    --without-debuginfod \
    --with-system-zlib \
    --with-zstd
}

build() {
  make \
    tooldir=/usr
}

check() {
  make \
    check
}

package() {
  make \
    tooldir=/usr \
    DESTDIR="$SACD" \
    install-strip

  ln -fs ld.bfd "$SACD"/usr/bin/ld

  # Remove static libraries
  rm -fv \
    "$SACD"/usr/lib/libbfd.a \
    "$SACD"/usr/lib/libctf.a \
    "$SACD"/usr/lib/libctf-nobfd.a \
    "$SACD"/usr/lib/libopcodes.a \
    "$SACD"/usr/lib/libsframe.a
}
