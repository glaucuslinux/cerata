prepare() {
  patch \
    -i "$CERD"/$nom/patches/alpine/$nom-ld-fix-static-linking.patch \
    -p 1

  mkdir -p build
  cd build
}

configure() {
  ../configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/bin \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --build=$BLD \
    --host=$TGT \
    --target=$TGT \
    --disable-multilib \
    --enable-install-libiberty \
    --enable-plugins \
    --enable-targets=x86_64-pep \
    --enable-deterministic-archives \
    --enable-colored-disassembly \
    --disable-gprofng \
    --disable-compressed-debug-sections \
    --enable-new-dtags \
    --enable-relro \
    --disable-default-execstack \
    --enable-default-hash-style=gnu \
    --disable-initfini-array \
    --disable-werror \
    --disable-nls \
    --disable-rpath \
    --with-pic \
    --with-mmap \
    --with-lib-path=/usr/lib \
    --with-pkgversion="$PRETTY_NAME" \
    --with-bugurl=https://github.com/glaucuslinux/glaucus/issues \
    --without-debuginfod \
    --with-system-zlib \
    --with-zstd
}

build() {
  make \
    tooldir=/usr
}

package() {
  make \
    tooldir=/usr \
    DESTDIR="$CRSD" \
    install-strip

  ln -fs ld.bfd "$CRSD"/usr/bin/ld

  # Remove static libraries
  rm -fv \
    "$CRSD"/usr/lib/libbfd.a \
    "$CRSD"/usr/lib/libctf.a \
    "$CRSD"/usr/lib/libctf-nobfd.a \
    "$CRSD"/usr/lib/libopcodes.a \
    "$CRSD"/usr/lib/libsframe.a

  # Remove libtool archives
  rm -fv \
    "$CRSD"/usr/lib/libbfd.la \
    "$CRSD"/usr/lib/libctf.la \
    "$CRSD"/usr/lib/libctf-nobfd.la \
    "$CRSD"/usr/lib/libopcodes.la \
    "$CRSD"/usr/lib/libsframe.la
}
