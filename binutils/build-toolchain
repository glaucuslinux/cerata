prepare() {
  patch \
    -i "$CERD"/$nom/patches/alpine/$nom-ld-fix-static-linking.patch \
    -p 1

  mkdir -p build
  cd build
}

configure() {
  ../configure \
    --prefix="$TLCD"/usr \
    --sysconfdir="$TLCD"/etc \
    --sharedstatedir="$TLCD"/var/lib \
    --localstatedir="$TLCD"/var \
    --build=$BLD \
    --host=$BLD \
    --target=$TGT \
    --disable-multilib \
    --enable-plugins \
    --enable-targets=x86_64-pep \
    --enable-deterministic-archives \
    --enable-colored-disassembly \
    --disable-gprofng \
    --disable-compressed-debug-sections \
    --enable-new-dtags \
    --enable-relro \
    --disable-default-execstack \
    --enable-default-hash-style=gnu \
    --enable-initfini-array \
    --disable-werror \
    --disable-nls \
    --disable-rpath \
    --with-pic \
    --with-mmap \
    --with-sysroot="$CRSD" \
    --with-pkgversion="$PRETTY_NAME" \
    --with-bugurl=https://github.com/glaucuslinux/glaucus/issues \
    --without-debuginfod \
    --with-system-zlib \
    --with-zstd
}

build() {
  make \
    all-$nom \
    all-gas \
    all-ld
}

package() {
  make \
    install-strip-$nom \
    install-strip-gas \
    install-strip-ld

  ln -fs $TGT-ld.bfd "$TLCD"/usr/bin/$TGT-ld

  for i in ar as ld ld.bfd nm objcopy objdump ranlib readelf strip; do
    ln -fs ../../bin/$TGT-$i "$TLCD"/usr/$TGT/bin/$i
  done
}
