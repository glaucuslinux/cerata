prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  $RSYNC $CERD/$nom/config.guess .
  $RSYNC $CERD/$nom/config.rpath .
  $RSYNC $CERD/$nom/config.sub .

  $PATCH -p1 -i $CERD/$nom/patches/alpine/0001-Revert-PR25882-.gnu.attributes-are-not-checked-for-s.patch
  $PATCH -p1 -i $CERD/$nom/patches/alpine/$nom-ld-fix-static-linking.patch
  $PATCH -p1 -i $CERD/$nom/patches/alpine/CVE-2022-38533.patch

  $MKDIR $TBLD/$nom
  cd $TBLD/$nom
}

configure() {
  $TSRC/$nom/configure \
    --build=$BLD \
    --host=$BLD \
    --target=$TGT \
    --prefix=$TLCD \
    --exec-prefix=$TLCD \
    --bindir=$TLCD/usr/bin \
    --sbindir=$TLCD/usr/bin \
    --libexecdir=$TLCD/usr/lib/$nom \
    --sysconfdir=$TLCD/etc \
    --sharedstatedir=$TLCD/var/lib \
    --localstatedir=$TLCD/var \
    --libdir=$TLCD/usr/lib \
    --includedir=$TLCD/usr/include \
    --datarootdir=$TLCD/usr/share \
    --datadir=$TLCD/usr/share \
    --infodir=$TLCD/usr/share/info \
    --localedir=$TLCD/usr/share/locale \
    --mandir=$TLCD/usr/share/man \
    --docdir=$TLCD/usr/share/doc/$nom \
    --disable-multilib \
    --disable-static \
    --enable-plugins \
    $([ $ARCH = x86-64 ] && echo --enable-targets=${LARCH}-pep) \
    --enable-deterministic-archives \
    --disable-compressed-debug-sections \
    --enable-new-dtags \
    --enable-relro \
    --disable-default-execstack \
    --enable-default-hash-style=gnu \
    --disable-werror \
    --disable-nls \
    --disable-rpath \
    --disable-initfini-array \
    --disable-gprofng \
    --with-mmap \
    --with-sysroot=$CRSD \
    --with-pkgversion="glaucus $ARCH $(date +%d%m%Y)" \
    --with-bugurl=https://github.com/glaucuslinux/glaucus/issues \
    --without-debuginfod \
    --with-system-zlib
}

build() {
  $MAKE \
    all-$nom \
    all-gas \
    all-ld
}

check() {
  :
}

install() {
  $MAKE \
    install-strip-$nom \
    install-strip-gas \
    install-strip-ld

  $LN $TGT-ld.bfd $TLCD/usr/bin/$TGT-ld

  $LN ../../usr/bin/$TGT-ar $TLCD/$TGT/bin/ar
  $LN ../../usr/bin/$TGT-as $TLCD/$TGT/bin/as
  $LN ../../usr/bin/$TGT-ld $TLCD/$TGT/bin/ld
  $LN ../../usr/bin/$TGT-ld.bfd $TLCD/$TGT/bin/ld.bfd
  $LN ../../usr/bin/$TGT-nm $TLCD/$TGT/bin/nm
  $LN ../../usr/bin/$TGT-objcopy $TLCD/$TGT/bin/objcopy
  $LN ../../usr/bin/$TGT-objdump $TLCD/$TGT/bin/objdump
  $LN ../../usr/bin/$TGT-ranlib $TLCD/$TGT/bin/ranlib
  $LN ../../usr/bin/$TGT-readelf $TLCD/$TGT/bin/readelf
  $LN ../../usr/bin/$TGT-strip $TLCD/$TGT/bin/strip

  # Remove unnecessary manpages
  $RM $TLCD/usr/share/man/man1/$TGT-dlltool.1
  $RM $TLCD/usr/share/man/man1/$TGT-windmc.1
  $RM $TLCD/usr/share/man/man1/$TGT-windres.1
}
