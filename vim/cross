prepare() {
  # vim doesn't build out of tree
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom
}

configure() {
  LIBS=-lterminfo \
  ac_cv_sizeof_int=4 \
  ac_cv_small_wchar_t=no \
  vim_cv_bcopy_handles_overlap=yes \
  vim_cv_getcwd_broken=no \
  vim_cv_memcpy_handles_overlap=yes \
  vim_cv_memmove_handles_overlap=yes \
  vim_cv_stat_ignores_slash=yes \
  vim_cv_tgetent=zero \
  vim_cv_terminfo=yes \
  vim_cv_toupper_broken=no \
  ./configure \
    --build=$BLD \
    --host=$TGT \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --disable-darwin \
    --disable-smack \
    --disable-selinux \
    --disable-xsmp \
    --disable-xsmp-interact \
    --disable-luainterp \
    --disable-mzschemeinterp \
    --disable-perlinterp \
    --disable-pythoninterp \
    --disable-python3interp \
    --disable-tclinterp \
    --disable-rubyinterp \
    --enable-cscope \
    --disable-netbeans \
    --enable-terminal \
    --enable-multibyte \
    --disable-gui \
    --disable-canberra \
    --disable-libsodium \
    --disable-gpm \
    --disable-sysmouse \
    --disable-nls \
    --with-modified-by="glaucus $ARCH $(date +%d%m%Y)" \
    --with-compiledby="glaucus $ARCH $(date +%d%m%Y)" \
    --without-x \
    --with-tlib=ncursesw
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    install

  $RSYNC $CERD/$nom/${nom}rc $CRSD/etc

  $LN $nom $CRSD/usr/bin/vi
}
