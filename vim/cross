ceras_prepare() {
  # vim doesn't build out of tree
  rsync $RADULA_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

ceras_configure() {
  LIBS=-lterminfo \
  ac_cv_sizeof_int=4 \
  ac_cv_small_wchar_t=no \
  vim_cv_bcopy_handles_overlap=yes \
  vim_cv_getcwd_broken=no \
  vim_cv_memcpy_handles_overlap=yes \
  vim_cv_memmove_handles_overlap=yes \
  vim_cv_stat_ignores_slash=yes \
  vim_cv_terminfo=yes \
  vim_cv_tgetent=zero \
  vim_cv_timer_create=yes \
  vim_cv_toupper_broken=no \
  ./configure \
    --build=$BLD \
    --host=$TGT \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --disable-darwin \
    --disable-smack \
    --disable-selinux \
    --disable-xsmp \
    --disable-xsmp-interact \
    --disable-luainterp \
    --disable-mzschemeinterp \
    --disable-perlinterp \
    --disable-pythoninterp \
    --disable-python3interp \
    --disable-tclinterp \
    --disable-rubyinterp \
    --enable-cscope \
    --disable-netbeans \
    --enable-terminal \
    --enable-multibyte \
    --disable-gui \
    --disable-gtktest \
    --disable-canberra \
    --disable-libsodium \
    --disable-gpm \
    --disable-sysmouse \
    --disable-nls \
    --with-modified-by="$PRETTY_NAME" \
    --with-compiledby="$PRETTY_NAME" \
    --without-x \
    --without-gnome \
    --with-tlib=ncursesw
}

ceras_build() {
  $MAKE
}

ceras_check() {
  :
}

ceras_install() {
  $MAKE \
    DESTDIR=$CRSD \
    install

  rsync $RADULA_RSYNC_FLAGS $CERD/$nom/${nom}rc $CRSD/etc

  ln -sfnv $nom $CRSD/usr/bin/vi
}
