prepare() {
  ./buildconf.sh
}

configure() {
  glaucus-configure \
    --disable-static \
    --enable-pic \
    --without-xmlwf \
    --without-examples \
    --without-tests \
    --without-docbook
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
