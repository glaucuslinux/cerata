prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  $PATCH -p1 -i $CERD/$nom/patches/alpine/CVE-2021-30218.patch
  $PATCH -p1 -i $CERD/$nom/patches/alpine/CVE-2021-30219.patch
}

configure() {
  :
}

build() {
  $MAKE \
    BINDIR=/usr/bin \
    MANDIR=/usr/share/man
}

check() {
  :
}

install() {
  $MAKE \
    PREFIX=/usr \
    BINDIR=/usr/bin \
    MANDIR=/usr/share/man \
    DESTDIR=$CRSD \
    install

  ln -sfnv samu $CRSD/usr/bin/ninja

  ln -sfnv samu.1 $CRSD/usr/share/man/man1/ninja.1
}
