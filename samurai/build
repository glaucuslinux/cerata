prepare() {
  patch -p1 -i "$CERD"/$nom/patches/alpine/CVE-2021-30218.patch
  patch -p1 -i "$CERD"/$nom/patches/alpine/CVE-2021-30219.patch
}

configure() {
  :
}

build() {
  make \
    BINDIR=/usr/bin \
    MANDIR=/usr/share/man
}

check() {
  :
}

package() {
  make \
    PREFIX=/usr \
    BINDIR=/usr/bin \
    MANDIR=/usr/share/man \
    DESTDIR="$SACD" \
    install

  # Compatibility symlink
  ln -fnsv samu "$SACD"/usr/bin/ninja
}
