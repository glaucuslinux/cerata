prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-remove-sbin.patch
}

configure() {
  :
}

build() {
  # Disable support for compressed ids
  $MAKE \
    ZLIB=no \
    DNS=yes \
    SHARED=yes \
    LIBKMOD=yes \
    HWDB=yes \
    PREFIX=/usr \
    BINDIR=/usr/bin \
    SHAREDIR=/usr/share/hwdata \
    MANDIR=/usr/share/man \
    INCDIR=/usr/include \
    LIBDIR=/usr/lib \
    PCI_IDS=pci.ids \
    PCI_COMPRESSED_IDS=0
}

check() {
  :
}

install() {
  $MAKE \
    ZLIB=no \
    DNS=yes \
    SHARED=yes \
    LIBKMOD=yes \
    HWDB=yes \
    PREFIX=/usr \
    BINDIR=/usr/bin \
    SHAREDIR=/usr/share/hwdata \
    MANDIR=/usr/share/man \
    INCDIR=/usr/include \
    LIBDIR=/usr/lib \
    PCI_IDS=pci.ids \
    PCI_COMPRESSED_IDS=0 \
    DESTDIR=$SACD \
    install \
    install-lib

  # Fix library permissions
  $CHMOD 0755 $SACD/usr/lib/libpci.so.$ver

  # ids are provided by the `hwdata` ceras
  $RM $SACD/usr/share/hwdata
}
