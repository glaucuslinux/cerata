build() {
  make \
    OPT="$CFLAGS" \
    ZLIB=no \
    DNS=yes \
    SHARED=yes \
    LIBKMOD=yes \
    HWDB=yes \
    PREFIX=/usr \
    BINDIR=/usr/bin \
    SBINDIR=/usr/bin \
    SHAREDIR=/usr/share/hwdata \
    MANDIR=/usr/share/man \
    INCDIR=/usr/include \
    LIBDIR=/usr/lib \
    PCI_IDS=pci.ids \
    PCI_COMPRESSED_IDS=0
}

package() {
  make \
    OPT="$CFLAGS" \
    ZLIB=no \
    DNS=yes \
    SHARED=yes \
    LIBKMOD=yes \
    HWDB=yes \
    PREFIX=/usr \
    BINDIR=/usr/bin \
    SBINDIR=/usr/bin \
    SHAREDIR=/usr/share/hwdata \
    MANDIR=/usr/share/man \
    INCDIR=/usr/include \
    LIBDIR=/usr/lib \
    PCI_IDS=pci.ids \
    PCI_COMPRESSED_IDS=0 \
    DESTDIR="$SACD" \
    install \
    install-lib

  # ids are provided by the `hwdata` ceras
  rm -fRv \
    "$SACD"/usr/bin/update-pciids \
    "$SACD"/usr/share/hwdata

  # Fix library permissions
  chmod 755 "$SACD"/usr/lib/libpci.so.$ver
}
