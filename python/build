prepare() {
  cd "$TMPD"/$nom/Python-$ver

  patch -p0 -i "$CERD"/$nom/patches/openbsd/Modules__hashopenssl_c.patch
  patch -p0 -i "$CERD"/$nom/patches/openbsd/Modules__ssl_c.patch

  rm -frv \
    Modules/_decimal/libmpdec \
    Modules/expat
}

configure() {
  ax_cv_c_float_words_bigendian=no \
  glaucus-configure \
    --enable-shared \
    --enable-optimizations \
    --enable-loadable-sqlite-extensions \
    --enable-ipv6 \
    --disable-test-modules \
    --without-static-libpython \
    --with-lto \
    --with-system-expat \
    --with-system-libmpdec \
    --with-dbmliborder=gdbm:ndbm \
    --without-doc-strings \
    --with-mimalloc \
    --with-pymalloc \
    --with-computed-gotos \
    --without-ensurepip
}

build() {
  make
}

check() {
  :
}

package() {
  make \
    DESTDIR="$SACD" \
    install

  ln -fnsv ${nom}3 "$SACD"/usr/bin/$nom
  ln -fnsv ${nom}3-config "$SACD"/usr/bin/$nom-config
}
