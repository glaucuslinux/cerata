prepare() {
  $RSYNC $SRCD/$nom/Python-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  $RSYNC $CERD/binutils/config.guess .
  $RSYNC $CERD/binutils/config.sub .

  $PATCH -p1 -i $CERD/$nom/patches/clear/0001-Fix-$nom-path-for-linux.patch

  # Force use the system copy of various libraries
  rm -frv \
    Modules/_ctypes/darwin \
    Modules/_ctypes/libffi_osx \
    Modules/_decimal/libmpdec \
    Modules/expat
}

configure() {
  ax_cv_c_float_words_bigendian=no \
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --enable-shared \
    --enable-optimizations \
    --enable-loadable-sqlite-extensions \
    --enable-ipv6 \
    --without-static-libpython \
    --with-lto \
    --with-tzpath=/usr/share/zoneinfo \
    --with-system-expat \
    --with-system-ffi \
    --with-system-libmpdec \
    --with-dbmliborder=gdbm:ndbm \
    --without-doc-strings \
    --with-pymalloc \
    --with-computed-gotos \
    --without-ensurepip
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SACD \
    install

  $LN ${nom}3 $SACD/usr/bin/$nom
  $LN ${nom}3-config $SACD/usr/bin/$nom-config
}
