prepare() {
  mkdir -pv build
}

configure() {
  glaucus-cmake \
    -B build \
    -DALLOW_EXTERNAL_SPIRV_TOOLS=ON \
    -DBUILD_EXTERNAL=OFF \
    -DBUILD_SHARED_LIBS=ON \
    -DGLSLANG_TESTS=OFF
}

build() {
  samu \
    -C build
}

check() {
  muon \
    test \
    -R \
    -C build
}

package() {
  DESTDIR="$SACD" \
  samu \
    -C build \
    install/strip
}
