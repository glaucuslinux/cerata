prepare() {
  cd "$TMPD"/$nom/$nom-vulkan-sdk-$ver
}

configure() {
  glaucus-cmake \
    -B build \
    -DALLOW_EXTERNAL_SPIRV_TOOLS=ON \
    -DBUILD_EXTERNAL=OFF \
    -DBUILD_SHARED_LIBS=ON \
    -DGLSLANG_TESTS=OFF
}

build() {
  make \
    -C build
}

package() {
  DESTDIR="$SACD" \
  make \
    -C build \
    install/strip

  ln -fs $nom "$SACD"/usr/bin/${nom}Validator
}
