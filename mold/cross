prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom

  $PATCH -p1 -i $CERD/$nom/patches/gentoo/install-nopython.patch
}

configure() {
  :
}

build() {
  # This ceras does not support parallel build!
  $MAKE \
    PREFIX=/usr \
    BINDIR=/usr/bin \
    LIBDIR=/usr/lib \
    LIBEXECDIR=/usr/lib/$nom \
    LTO=1 \
    SYSTEM_MIMALLOC=1 \
    SYSTEM_TBB=1 \
    -j1
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    PREFIX=/usr \
    BINDIR=/usr/bin \
    LIBDIR=/usr/lib \
    LIBEXECDIR=/usr/lib/$nom \
    LTO=1 \
    SYSTEM_MIMALLOC=1 \
    SYSTEM_TBB=1 \
    install
}
