prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  $PATCH -p1 -i $CERD/$nom/patches/gentoo/install-nopython.patch
}

configure() {
  :
}

build() {
  # This ceras does not support parallel build!
  MAKEFLAGS='-j1 -O V=1' \
  $MAKE \
    PREFIX=$TLCD \
    LTO=1 \
    SYSTEM_MIMALLOC=1 \
    SYSTEM_TBB=1
}

check() {
  :
}

install() {
  $MAKE \
    PREFIX=$TLCD \
    LTO=1 \
    SYSTEM_MIMALLOC=1 \
    SYSTEM_TBB=1 \
    install
}
