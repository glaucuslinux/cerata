prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  $PATCH -p1 -i $CERD/$nom/patches/gentoo/install-nopython.patch
}

configure() {
  :
}

build() {
  # Use bundled `mimalloc`, `tbb` and `xxhash`
  $MAKE \
    PREFIX=$TLCD \
    BINDIR=$TLCD/bin \
    LIBDIR=$TLCD/lib \
    LTO=1
}

check() {
  :
}

install() {
  $MAKE \
    PREFIX=$TLCD \
    BINDIR=$TLCD/bin \
    LIBDIR=$TLCD/lib \
    LTO=1 \
    install
}
