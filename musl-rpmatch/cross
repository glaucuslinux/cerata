prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver-mk2/ $XSRC/$nom --delete
  cd $XSRC/$nom

  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-disable-static.patch
}

configure() {
  :
}

build() {
  $MAKE \
    PREFIX=/usr \
    BINDIR=/usr/bin \
    INCDIR=/usr/include \
    LIBDIR=/usr/lib
}

check() {
  :
}

install() {
  $MAKE \
    PREFIX=/usr \
    BINDIR=/usr/bin \
    INCDIR=/usr/include \
    LIBDIR=/usr/lib \
    DESTDIR=$CRSD \
    install

  $LN $nom.pc $PKG_CONFIG_LIBDIR/librpmatch.pc
}
