prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --build=$BLD \
    --host=$TGT \
    --without-man2html \
    --without-builtin-regex
}

build() {
  make
}

check() {
  :
}

package() {
  make \
    DESTDIR="$CRSD" \
    install

  ln -fnrsv $nom "$CRSD"/usr/bin/awk
  ln -fnrsv $nom "$CRSD"/usr/bin/gawk
}
