prepare() {
  :
}

configure() {
  glaucus-configure \
    --without-man2html \
    --without-builtin-regex
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install

  ln -fnsv $nom "$SACD"/usr/bin/awk
  ln -fnsv $nom "$SACD"/usr/bin/gawk
}
