configure() {
  "$CERD"/autoconf/files/glaucus-configure \
    --build=$BLD \
    --host=$TGT \
    --without-man2html \
    --without-builtin-regex
}

build() {
  make
}

package() {
  make \
    DESTDIR="$CRSD" \
    install

  # Compatibility symlinks
  ln -fs $nom "$CRSD"/usr/bin/awk
  ln -fs $nom "$CRSD"/usr/bin/gawk
}
