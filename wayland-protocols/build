prepare() {
  patch \
    -i "$CERD"/$nom/patches/glaucus/0001-fix-pkg-config-directory.patch \
    -p 0

  mkdir -p build
}

configure() {
  glaucus-muon \
    -Dtests=false \
    build
}

build() {
  samu \
    -C build
}

check() {
  muon \
    test \
    -R \
    -C build
}

package() {
  DESTDIR="$SACD" \
  muon \
    -C build \
    install
}
