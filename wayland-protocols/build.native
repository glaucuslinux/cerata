prepare() {
  patch -p0 -i "$CERD"/$nom/patches/glaucus/0001-fix-pkg-config-directory.patch

  mkdir -pv "$TBLD"/$nom
}

configure() {
  glaucus-muon \
    -Dtests=false \
    "$TBLD"/$nom
}

build() {
  samu \
    -C "$TBLD"/$nom
}

check() {
  :
}

package() {
  DESTDIR="$SACD" \
  muon \
    -C "$TBLD"/$nom \
    install
}
