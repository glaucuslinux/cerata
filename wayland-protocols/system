ceras_prepare() {
  rsync $RADULA_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  install -dv $TBLD/$nom
}

ceras_configure() {
  patch --no-backup-if-mismatch -p0 -i $CERD/$nom/patches/glaucus/0001-fix-pkg-config-directory.patch

  glaucus-muon \
    -Dtests=false \
    $TBLD/$nom
}

ceras_build() {
  samu \
    -C $TBLD/$nom
}

ceras_check() {
  :
}

ceras_install() {
  DESTDIR=$SACD \
  muon \
    -C $TBLD/$nom \
    install
}
