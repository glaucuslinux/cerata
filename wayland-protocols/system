prepare() {
  $MKDIR $SBLD/$nom

  cd $SRCD/$nom/$nom-$ver
}

configure() {
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-fix-pkg-config-directory.patch

  glaucus-muon \
    -Dtests=false \
    $SBLD/$nom
}

build() {
  samu \
    -C $SBLD/$nom
}

check() {
  :
}

install() {
  DESTDIR=$VNMD/$nom/sac \
  muon \
    -C $SBLD/$nom \
    install
}
