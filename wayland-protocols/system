prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  $MKDIR $TBLD/$nom
}

configure() {
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-fix-pkg-config-directory.patch

  glaucus-muon \
    -Dtests=false \
    $TBLD/$nom
}

build() {
  samu \
    -C $TBLD/$nom
}

check() {
  :
}

install() {
  DESTDIR=$SACD \
  muon \
    -C $TBLD/$nom \
    install
}
