prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --disable-debug \
    --enable-optimize \
    --disable-ares \
    --disable-static \
    --disable-ldap \
    --disable-ldaps \
    --disable-manual \
    --disable-docs \
    --enable-ipv6 \
    --disable-versioned-symbols \
    --enable-threaded-resolver \
    --enable-pthreads \
    --enable-unix-sockets \
    --enable-websockets \
    --with-openssl \
    --with-pic \
    --with-zlib \
    --without-brotli \
    --with-zstd \
    --with-ca-bundle=/etc/ssl/cert.pem \
    --with-ca-path=/etc/ssl/certs \
    --without-libpsl \
    --without-librtmp \
    --without-winidn \
    --without-apple-idn \
    --without-libidn2 \
    --without-ngtcp2 \
    --with-openssl-quic \
    --without-quiche \
    --without-msh3
}

build() {
  make
}

check() {
  :
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
