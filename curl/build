prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --disable-debug \
    --enable-optimize \
    --disable-curldebug \
    --disable-ares \
    --disable-static \
    --enable-pic \
    --disable-ldap \
    --disable-ldaps \
    --disable-manual \
    --disable-docs \
    --enable-ipv6 \
    --disable-versioned-symbols \
    --enable-threaded-resolver \
    --enable-unix-sockets \
    --enable-websockets \
    --with-openssl \
    --with-zlib \
    --without-brotli \
    --with-zstd \
    --with-ca-bundle=/etc/ssl/cert.pem \
    --with-ca-path=/etc/ssl/certs \
    --with-ca-embed=/etc/ssl/cert.pem \
    --without-libpsl \
    --without-libgsasl \
    --without-librtmp \
    --without-winidn \
    --without-apple-idn \
    --without-libidn2 \
    --without-nghttp2 \
    --without-ngtcp2 \
    --without-openssl-quic \
    --without-nghttp3 \
    --without-quiche \
    --without-msh3 \
    --without-libuv \
    --without-zsh-functions-dir \
    --without-fish-functions-dir
}

build() {
  make
}

check() {
  make \
    test
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
