ceras_install() {
  install -dv $SACD/var/lib/rad/clusters
  rsync $RAD_RSYNC_FLAGS $CERD/ $SACD/var/lib/rad/clusters/glaucus --exclude .$ver \
    --exclude .${ver}attributes \
    --exclude LICENSE \
    --exclude README.md \
    --delete
}
