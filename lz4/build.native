cerasPrepare() {
  rsync $RAD_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

cerasConfigure() {
  :
}

cerasBuild() {
  make \
    BUILD_STATIC=no \
    DESTDIR=$SACD \
    PREFIX=/usr \
    EXEC_PREFIX=/usr \
    BINDIR=/usr/bin \
    DATAROOTDIR=/usr/share \
    MANDIR=/usr/share/man \
    MAN1DIR=/usr/share/man/man1
}

cerasCheck() {
  :
}

cerasInstall() {
  make \
    BUILD_STATIC=no \
    DESTDIR=$SACD \
    PREFIX=/usr \
    EXEC_PREFIX=/usr \
    BINDIR=/usr/bin \
    DATAROOTDIR=/usr/share \
    MANDIR=/usr/share/man \
    MAN1DIR=/usr/share/man/man1 \
    install
}
