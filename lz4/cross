prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

configure() {
  :
}

build() {
  $MAKE \
    BUILD_STATIC=no \
    DESTDIR=$CRSD \
    PREFIX=/usr \
    EXEC_PREFIX=/usr \
    BINDIR=/usr/bin \
    DATAROOTDIR=/usr/share \
    MANDIR=/usr/share/man \
    MAN1DIR=/usr/share/man/man1
}

check() {
  :
}

install() {
  $MAKE \
    BUILD_STATIC=no \
    DESTDIR=$CRSD \
    PREFIX=/usr \
    EXEC_PREFIX=/usr \
    BINDIR=/usr/bin \
    DATAROOTDIR=/usr/share \
    MANDIR=/usr/share/man \
    MAN1DIR=/usr/share/man/man1 \
    install
}
