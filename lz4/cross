prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom

  $PATCH -p0 -i $CERD/$nom/patches/clear/0001-Makefile-propagate-CFLAGS.patch
  $PATCH -p0 -i $CERD/$nom/patches/clear/fix-make-install.patch
}

configure() {
  :
}

build() {
  $MAKE \
    BUILD_STATIC=no
}

check() {
  :
}

install() {
  $MAKE \
    BUILD_STATIC=no \
    PREFIX=/usr \
    DESTDIR=$CRSD \
    install
}
