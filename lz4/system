prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom
}

configure() {
  :
}

build() {
  $MAKE \
    BUILD_STATIC=no
}

check() {
  :
}

install() {
  $MAKE \
    BUILD_STATIC=no \
    DESTDIR=$SCER/$nom/sac \
    PREFIX=/usr \
    install
}
