build() {
  make \
    BUILD_STATIC=no \
    DESTDIR="$SACD" \
    PREFIX=/usr \
    PKGCONFIGDIR=/usr/lib/pkgconfig
}

check() {
  make \
    check
}

package() {
  make \
    BUILD_STATIC=no \
    DESTDIR="$SACD" \
    PREFIX=/usr \
    LIBDIR=/usr/lib \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    install
}
