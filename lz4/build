build() {
  make \
    BUILD_STATIC=no \
    DESTDIR="$SACD" \
    PREFIX=/usr \
    EXEC_PREFIX=/usr \
    BINDIR=/usr/bin \
    PKGCONFIGDIR=/usr/lib/pkgconfig
}

check() {
  make \
    check
}

package() {
  make \
    BUILD_STATIC=no \
    DESTDIR="$SACD" \
    PREFIX=/usr \
    EXEC_PREFIX=/usr \
    BINDIR=/usr/bin \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    install
}
