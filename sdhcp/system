ceras_prepare() {
  $RADULA_RSYNC $SRCD/$nom $TSRC --delete
  cd $TSRC/$nom

  $RADULA_PATCH -p0 -i $CERD/$nom/patches/smaclennan/0001-optimize-strlcpy.patch

  $RADULA_PATCH -p0 -i $CERD/$nom/patches/upstream/0001-statify-some-variables.patch

  $RADULA_PATCH -p1 -i $CERD/$nom/patches/zeppe-lin/0001-remove-congratz-message.patch
  $RADULA_PATCH -p1 -i $CERD/$nom/patches/zeppe-lin/0002-remove-unused-enprintf-function.patch
}

ceras_configure() {
  :
}

ceras_build() {
  $MAKE \
    PREFIX=/usr \
    MANPREFIX=/usr/share/man \
    CC=$CC \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS"
}

ceras_check() {
  :
}

ceras_install() {
  $MAKE \
    PREFIX=/usr \
    MANPREFIX=/usr/share/man \
    DESTDIR=$SACD \
    install
}
