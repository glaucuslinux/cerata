prepare() {
  patch \
    -i "$CERD"/$nom/patches/alpine/$nom-basename.patch \
    -p 1

  autoreconf -vfis
}

configure() {
  "$CERD"/autoconf/files/glaucus-configure \
    --build=$BLD \
    --host=$TGT \
    --disable-static \
    --enable-pic \
    --disable-nls \
    --disable-rpath
}

build() {
  make
}

package() {
  make \
    DESTDIR="$CRSD" \
    install-strip

  # Remove libtool archive
  rm -fv "$CRSD"/usr/lib/lib$nom.la
}
