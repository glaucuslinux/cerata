prepare() {
  patch -p1 -i "$CERD"/$nom/patches/alpine/$nom-basename.patch

  autoreconf -vfis
}

configure() {
  "$CERD"/autoconf/glaucus-configure \
    --build=$BLD \
    --host=$TGT \
    --disable-static \
    --enable-pic \
    --disable-nls \
    --disable-rpath
}

build() {
  make
}

check() {
  :
}

package() {
  make \
    DESTDIR="$CRSD" \
    install-strip

  # Remove libtool archive
  rm -fv "$CRSD"/usr/lib/lib$nom.la
}
