prepare() {
  patch \
    -i "$CERD"/$nom/patches/alpine/$nom-basename.patch \
    -p 1

  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --disable-static \
    --enable-pic \
    --disable-nls \
    --disable-rpath
}

build() {
  make
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
