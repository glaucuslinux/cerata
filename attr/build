prepare() {
  patch -p1 -i "$CERD"/$nom/patches/alpine/$nom-basename.patch

  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --disable-static \
    --enable-pic \
    --disable-nls \
    --disable-rpath
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
