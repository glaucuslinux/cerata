prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --disable-servers \
    --disable-libls \
    --disable-ftp \
    --disable-dnsdomainname \
    --disable-hostname \
    --disable-rcp \
    --disable-rexec \
    --disable-rlogin \
    --disable-rsh \
    --disable-logger \
    --disable-talk \
    --disable-telnet \
    --disable-tftp \
    --disable-whois \
    --disable-ifconfig \
    --enable-threads=posix \
    --disable-rpath \
    --without-wrap \
    --without-pam \
    --without-included-regex \
    --with-packager="$PRETTY_NAME" \
    --with-packager-bug-reports=https://github.com/glaucuslinux/glaucus/issues
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
