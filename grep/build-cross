prepare() {
  patch \
    -i "$CERD"/$nom/patches/clear/prime.patch \
    -p 1

  autoreconf -vfis
}

configure() {
  "$CERD"/autoconf/files/glaucus-configure \
    --build=$BLD \
    --host=$TGT \
    --enable-threads=posix \
    --disable-rpath \
    --disable-nls \
    --with-packager="$PRETTY_NAME" \
    --with-packager-bug-reports=https://github.com/glaucuslinux/glaucus/issues
}

build() {
  make
}

package() {
  make \
    DESTDIR="$CRSD" \
    install-strip
}
