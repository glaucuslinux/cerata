prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom
}

configure() {
  ./configure \
    --prefix=/usr \
    CXX=$CXX \
    CXXFLAGS="$CXXFLAGS"
}

build() {
  $MAKE
}

install() {
  $MAKE \
    DESTDIR=$XCER/$nom/sac \
    install-strip

  $LN $nom $XCER/$nom/sac/usr/bin/clzip
  $LN $nom $XCER/$nom/sac/usr/bin/lzip
  $LN $nom $XCER/$nom/sac/usr/bin/pdlzip
}
