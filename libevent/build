prepare() {
  cd "$TMPD"/$nom/$nom-$ver-stable

  ./autogen.sh
}

configure() {
  glaucus-configure \
    --disable-debug-mode \
    --disable-libevent-regress \
    --disable-samples \
    --disable-static \
    --enable-pic \
    --disable-doxygen-html
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
