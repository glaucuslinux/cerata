ceras_prepare() {
  rsync $RADULA_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  rsync $RADULA_RSYNC_FLAGS $CERD/binutils/config.guess .
  rsync $RADULA_RSYNC_FLAGS $CERD/binutils/config.sub .

  patch --no-backup-if-mismatch -p1 -i $CERD/$nom/patches/alpine/apply-disable.patch
}

ceras_configure() {
  ac_cv_prog_swig_found=no \
  ./configure \
    --build=$BLD \
    --host=$TGT \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --disable-static \
    --with-pic \
    --without-python \
    --without-python3
}

ceras_build() {
  make
}

ceras_check() {
  :
}

ceras_install() {
  make \
    DESTDIR=$CRSD \
    install-strip

  # Remove libtool archives
  rm -fv \
    $CRSD/usr/lib/$nom.la \
    $CRSD/usr/lib/libdrop_ambient.la
}
