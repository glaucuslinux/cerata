prepare() {
  $MKDIR $NBLD/$nom
  cd $NBLD/$nom
}

configure() {
  $TSRC/$nom/configure \
    --host=$TUPL \
    --target=$TUPL \
    --prefix=$TOOL \
    --bindir=$TOOL/bin/$nom \
    --disable-man \
    --without-bundled-zlib
}

build() {
  $MAKE
}

install() {
  $MAKE \
    install

  $LN $nom $TOOL/bin/$nom/c++
  $LN $nom $TOOL/bin/$nom/c89
  $LN $nom $TOOL/bin/$nom/c99
  $LN $nom $TOOL/bin/$nom/cc
  $LN $nom $TOOL/bin/$nom/cpp
  $LN $nom $TOOL/bin/$nom/g++
  $LN $nom $TOOL/bin/$nom/gcc
  $LN $nom $TOOL/bin/$nom/gcc-10.2.0
}
