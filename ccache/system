prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  $PATCH -p1 -i $CERD/$nom/patches/alpine/system-xxhash.patch
  $PATCH -p1 -i $CERD/$nom/patches/alpine/ioctl.patch

  $MKDIR $SBLD/$nom
}

configure() {
  cmake \
    -B $SBLD/$nom \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_BINDIR=/usr/bin \
    -DCMAKE_INSTALL_DATADIR=/usr/share \
    -DCMAKE_INSTALL_DATAROOTDIR=/usr/share \
    -DCMAKE_INSTALL_DOCDIR=/usr/share/doc/$nom \
    -DCMAKE_INSTALL_INCLUDEDIR=/usr/include \
    -DCMAKE_INSTALL_INFODIR=/usr/share/info \
    -DCMAKE_INSTALL_LIBDIR=/usr/lib \
    -DCMAKE_INSTALL_LIBEXECDIR=/usr/lib/$nom \
    -DCMAKE_INSTALL_LOCALEDIR=/usr/share/locale \
    -DCMAKE_INSTALL_LOCALSTATEDIR=/var \
    -DCMAKE_INSTALL_MANDIR=/usr/share/man \
    -DCMAKE_INSTALL_OLDINCLUDEDIR=/usr/include \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_RUNSTATEDIR=/run \
    -DCMAKE_INSTALL_SBINDIR=/usr/bin \
    -DCMAKE_INSTALL_SHAREDSTATEDIR=/var/lib \
    -DCMAKE_INSTALL_SYSCONFDIR=/etc \
    -DENABLE_IPO=ON \
    -DENABLE_TESTING=OFF \
    -DHIREDIS_FROM_INTERNET=OFF \
    -DREDIS_STORAGE_BACKEND=OFF \
    -DZSTD_FROM_INTERNET=OFF \
    -G Ninja
}

build() {
  samu \
    -C $SBLD/$nom
}

check() {
  :
}

install() {
  DESTDIR=$VNMD/$nom/sac \
  samu \
    -C $SBLD/$nom \
    install/strip

  # Hardcoded `gcc` version number
  $MKDIR $VNMD/$nom/sac/usr/lib/$nom
  $LN ../../bin/$nom $VNMD/$nom/sac/usr/lib/$nom/c++
  $LN ../../bin/$nom $VNMD/$nom/sac/usr/lib/$nom/c89
  $LN ../../bin/$nom $VNMD/$nom/sac/usr/lib/$nom/c99
  $LN ../../bin/$nom $VNMD/$nom/sac/usr/lib/$nom/cc
  $LN ../../bin/$nom $VNMD/$nom/sac/usr/lib/$nom/cpp
  $LN ../../bin/$nom $VNMD/$nom/sac/usr/lib/$nom/g++
  $LN ../../bin/$nom $VNMD/$nom/sac/usr/lib/$nom/gcc
  $LN ../../bin/$nom $VNMD/$nom/sac/usr/lib/$nom/gcc-13.2.0
  $LN ../../bin/$nom $VNMD/$nom/sac/usr/lib/$nom/$TGT-c++
  $LN ../../bin/$nom $VNMD/$nom/sac/usr/lib/$nom/$TGT-c89
  $LN ../../bin/$nom $VNMD/$nom/sac/usr/lib/$nom/$TGT-c99
  $LN ../../bin/$nom $VNMD/$nom/sac/usr/lib/$nom/$TGT-cc
  $LN ../../bin/$nom $VNMD/$nom/sac/usr/lib/$nom/$TGT-cpp
  $LN ../../bin/$nom $VNMD/$nom/sac/usr/lib/$nom/$TGT-g++
  $LN ../../bin/$nom $VNMD/$nom/sac/usr/lib/$nom/$TGT-gcc
  $LN ../../bin/$nom $VNMD/$nom/sac/usr/lib/$nom/$TGT-gcc-13.2.0
}
