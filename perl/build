prepare() {
  patch -p1 -i $CERD/$nom/patches/alpine/digest-sha-cflags.patch
}

configure() {
  BUILD_BZIP2=0 \
  BZIP2_LIB=/usr/lib \
  BZIP2_INCLUDE=/usr/include \
  BUILD_ZLIB=0 \
  USE_ZLIB_NG=1 \
  ./Configure \
    -des \
    -Darchlib=/usr/lib/${nom}5/core_$nom \
    -Dcc=$CC \
    -Dcf_by="$PRETTY_NAME" \
    -Dinc_version_list=none \
    -Dinstallusrbinperl \
    -Dman1dir=/usr/share/man/man1 \
    -Dman1ext=1p \
    -Dman3dir=/usr/share/man/man3 \
    -Dman3ext=3pm \
    -Doptimize="$CFLAGS" \
    -Dpager='/usr/bin/less -is' \
    -Dprefix=/usr \
    -Dprivlib=/usr/share/${nom}5/core_$nom \
    -Dscriptdir=/usr/bin \
    -Dsitearch=/usr/lib/${nom}5/site_$nom \
    -Dsitelib=/usr/share/${nom}5/site_$nom \
    -Dsiteprefix=/usr \
    -Dsitescript=/usr/bin \
    -Duseshrplib \
    -Dusethreads \
    -Dvendorarch=/usr/lib/${nom}5/vendor_$nom \
    -Dvendorlib=/usr/share/${nom}5/vendor_$nom \
    -Dvendorprefix=/usr \
    -Dvendorscript=/usr/bin
}

build() {
  make
}

check() {
  make \
    test_harness
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip

  ln -fnsv $nom "$SACD"/usr/bin/$nom$ver
  ln -fnsv ${nom}bug "$SACD"/usr/bin/${nom}thanks
}
