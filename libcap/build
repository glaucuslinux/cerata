prepare() {
  patch -p0 -i "$CERD"/$nom/patches/glaucus/0001-disable-static.patch
  patch -p0 -i "$CERD"/$nom/patches/glaucus/0002-enable-nsss.patch
}

configure() {
  :
}

build() {
  # `libcap` does not support parallel build!
  MAKEFLAGS=-j1 \
  make \
    DESTDIR="$SACD" \
    lib=lib \
    prefix=/usr \
    exec_prefix=/usr \
    lib_prefix=/usr \
    inc_prefix=/usr \
    man_prefix=/usr/share \
    MANDIR=/usr/share/man \
    BINDIR=/usr/bin \
    INCDIR=/usr/include \
    LIBDIR=/usr/lib \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    KERNEL_HEADERS=/usr/include \
    DEBUG=-g0 \
    SYSTEM_HEADERS=/usr/include \
    PAM_CAP=no \
    DYNAMIC=yes \
    GOLANG=no
}

check() {
  make \
    test
}

package() {
  make \
    DESTDIR="$SACD" \
    lib=lib \
    prefix=/usr \
    exec_prefix=/usr \
    lib_prefix=/usr \
    inc_prefix=/usr \
    man_prefix=/usr/share \
    MANDIR=/usr/share/man \
    BINDIR=/usr/bin \
    INCDIR=/usr/include \
    LIBDIR=/usr/lib \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    KERNEL_HEADERS=/usr/include \
    DEBUG=-g0 \
    SYSTEM_HEADERS=/usr/include \
    PAM_CAP=no \
    DYNAMIC=yes \
    GOLANG=no \
    install
}
