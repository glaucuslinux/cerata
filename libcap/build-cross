prepare() {
  patch \
    -i "$CERD"/$nom/patches/glaucus/0001-disable-static.patch \
    -p 0
}

build() {
  BUILD_CC=$HOSTCC \
  make \
    DESTDIR="$CRSD" \
    lib=lib \
    KERNEL_HEADERS="$CRSD"/usr/include \
    PAM_CAP=no \
    DYNAMIC=yes \
    GOLANG=no
}

package() {
  make \
    DESTDIR="$CRSD" \
    lib=lib \
    KERNEL_HEADERS="$CRSD"/usr/include \
    PAM_CAP=no \
    DYNAMIC=yes \
    GOLANG=no \
    install
}
