prepare() {
  patch \
    -i "$CERD"/$nom/patches/glaucus/0001-disable-static.patch \
    -p 0
}

build() {
  BUILD_CC=$HOSTCC \
  make \
    DESTDIR="$CRSD" \
    lib=lib \
    sbin=bin \
    sbindir=bin \
    prefix=/usr \
    exec_prefix=/usr \
    lib_prefix=/usr \
    inc_prefix=/usr \
    man_prefix=/usr/share \
    MANDIR=/usr/share/man \
    SBINDIR=/usr/bin \
    INCDIR=/usr/include \
    LIBDIR=/usr/lib \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    KERNEL_HEADERS="$CRSD"/usr/include \
    SYSTEM_HEADERS=/usr/include \
    PAM_CAP=no \
    DYNAMIC=yes \
    GOLANG=no
}

package() {
  make \
    DESTDIR="$CRSD" \
    lib=lib \
    sbin=bin \
    sbindir=bin \
    prefix=/usr \
    exec_prefix=/usr \
    lib_prefix=/usr \
    inc_prefix=/usr \
    man_prefix=/usr/share \
    MANDIR=/usr/share/man \
    SBINDIR=/usr/bin \
    INCDIR=/usr/include \
    LIBDIR=/usr/lib \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    KERNEL_HEADERS="$CRSD"/usr/include \
    SYSTEM_HEADERS=/usr/include \
    PAM_CAP=no \
    DYNAMIC=yes \
    GOLANG=no \
    install
}
