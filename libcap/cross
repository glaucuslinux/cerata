prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom

  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-remove-sbin.patch
}

configure() {
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0002-disable-static.patch
}

build() {
  # This ceras does not support parallel build!
  MAKEFLAGS=-j1 \
  $MAKE \
    DESTDIR=$CRSD \
    lib=lib \
    prefix=/usr \
    exec_prefix=/usr \
    lib_prefix=/usr \
    inc_prefix=/usr \
    BINDIR=/usr/bin \
    INCDIR=/usr/include \
    LIBDIR=/usr/lib \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    KERNEL_HEADERS=$CRSD/usr/include \
    DEBUG=-g0 \
    USE_GPERF=no \
    SYSTEM_HEADERS=/usr/include \
    PAM_CAP=no \
    DYNAMIC=yes \
    GOLANG=no
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    lib=lib \
    prefix=/usr \
    exec_prefix=/usr \
    lib_prefix=/usr \
    inc_prefix=/usr \
    BINDIR=/usr/bin \
    INCDIR=/usr/include \
    LIBDIR=/usr/lib \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    KERNEL_HEADERS=$CRSD/usr/include \
    DEBUG=-g0 \
    USE_GPERF=no \
    SYSTEM_HEADERS=/usr/include \
    PAM_CAP=no \
    DYNAMIC=yes \
    GOLANG=no \
    install
}
