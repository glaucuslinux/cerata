ceras_prepare() {
  $RADULA_RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

ceras_configure() {
  patch --no-backup-if-mismatch -p0 -i $CERD/$nom/patches/glaucus/0001-disable-static.patch
}

ceras_build() {
  # `libcap` does not support parallel build!
  BUILD_CC=gcc \
  MAKEFLAGS=-j1 \
  $MAKE \
    DESTDIR=$CRSD \
    lib=lib \
    prefix=/usr \
    exec_prefix=/usr \
    lib_prefix=/usr \
    inc_prefix=/usr \
    man_prefix=/usr/share \
    MANDIR=/usr/share/man \
    BINDIR=/usr/bin \
    INCDIR=/usr/include \
    LIBDIR=/usr/lib \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    KERNEL_HEADERS=$CRSD/usr/include \
    DEBUG=-g0 \
    SYSTEM_HEADERS=/usr/include \
    PAM_CAP=no \
    DYNAMIC=yes \
    GOLANG=no
}

ceras_check() {
  :
}

ceras_install() {
  $MAKE \
    DESTDIR=$CRSD \
    lib=lib \
    prefix=/usr \
    exec_prefix=/usr \
    lib_prefix=/usr \
    inc_prefix=/usr \
    man_prefix=/usr/share \
    MANDIR=/usr/share/man \
    BINDIR=/usr/bin \
    INCDIR=/usr/include \
    LIBDIR=/usr/lib \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    KERNEL_HEADERS=$CRSD/usr/include \
    DEBUG=-g0 \
    SYSTEM_HEADERS=/usr/include \
    PAM_CAP=no \
    DYNAMIC=yes \
    GOLANG=no \
    install
}
