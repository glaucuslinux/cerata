prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-remove-sbin.patch
}

configure() {
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0002-disable-static.patch
}

build() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    lib=lib \
    prefix=/usr \
    exec_prefix=/usr \
    lib_prefix=/usr \
    inc_prefix=/usr \
    BINDIR=/usr/bin \
    INCDIR=/usr/include \
    LIBDIR=/usr/lib \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    KERNEL_HEADERS=/usr/include \
    DEBUG=-g0 \
    BUILD_GPERF=no \
    SYSTEM_HEADERS=/usr/include \
    PAM_CAP=no \
    DYNAMIC=yes \
    GOLANG=no
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    lib=lib \
    prefix=/usr \
    exec_prefix=/usr \
    lib_prefix=/usr \
    inc_prefix=/usr \
    BINDIR=/usr/bin \
    INCDIR=/usr/include \
    LIBDIR=/usr/lib \
    PKGCONFIGDIR=/usr/lib/pkgconfig \
    KERNEL_HEADERS=/usr/include \
    DEBUG=-g0 \
    BUILD_GPERF=no \
    SYSTEM_HEADERS=/usr/include \
    PAM_CAP=no \
    DYNAMIC=yes \
    GOLANG=no \
    install

  $CHMOD 0755 $SCER/$nom/sac/usr/lib/$nom.so.$ver
  $CHMOD 0755 $SCER/$nom/sac/usr/lib/libpsx.so.$ver
}
