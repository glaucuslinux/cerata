prepare() {
  :
}

configure() {
  cp -afv "$CERD"/$nom/glaucus.config .config
}

build() {
  make \
    LDFLAGS="$LDFLAGS -lutmps"
}

check() {
  :
}

package() {
  mkdir -pv "$SACD"/usr/bin

  for i in $(./$nom); do
    ln -fnsv $nom "$SACD"/usr/bin/$i
  done

  mv -fv $nom "$SACD"/usr/bin
}
