ceras_prepare() {
  rsync $RAD_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

ceras_configure() {
  ./configure \
    --prefix=/usr \
    --datarootdir=/usr/share \
    --with-readline
}

ceras_build() {
  _build/oils.sh
}

ceras_check() {
  :
}

ceras_install() {
  DESTDIR=$SACD \
  ./install
}
