cerasPrepare() {
  rsync $RAD_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

cerasConfigure() {
  ./configure \
    --prefix=/usr \
    --datarootdir=/usr/share \
    --with-readline
}

cerasBuild() {
  _build/oils.sh
}

cerasCheck() {
  :
}

cerasInstall() {
  DESTDIR=$SACD \
  ./install
}
