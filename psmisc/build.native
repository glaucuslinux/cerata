cerasPrepare() {
  rsync $RAD_RSYNC_FLAGS $SRCD/$nom/$nom-v$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  ./autogen.sh

  cp -afv $CERD/binutils/config.guess .
  cp -afv $CERD/binutils/config.rpath .
  cp -afv $CERD/binutils/config.sub .
}

cerasConfigure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --oldincludedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --disable-harden-flags \
    --disable-nls \
    --disable-rpath
}

cerasBuild() {
  make
}

cerasCheck() {
  :
}

cerasInstall() {
  make \
    DESTDIR=$SACD \
    install-strip
}
