prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  $PATCH -p1 -i $CERD/$nom/patches/alpine/missing-sep.patch

  $PATCH -p1 -i $CERD/$nom/patches/arch/0001-make-$nom-fhs-compliant.patch

  $PATCH -p1 -i $CERD/$nom/patches/opensuse/add-explicit-typecast-to-avoid-gcc-warning.patch
}

configure() {
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-remove-sbin.patch
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0002-remove-arpd.patch

  ./configure
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    BINDIR=/usr/bin \
    DESTDIR=$VNMD/$nom/sac \
    install

  $RSYNC include/libnetlink.h $VNMD/$nom/sac/usr/include
}
