ceras_prepare() {
  $RADULA_RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  patch --no-backup-if-mismatch -p1 -i $CERD/$nom/patches/arch/0001-make-$nom-fhs-compliant.patch
}

ceras_configure() {
  patch --no-backup-if-mismatch -p0 -i $CERD/$nom/patches/glaucus/0001-remove-arpd.patch

  ./configure
}

ceras_build() {
  $MAKE
}

ceras_check() {
  :
}

ceras_install() {
  $MAKE \
    BINDIR=/usr/bin \
    DESTDIR=$SACD \
    install

  $RADULA_RSYNC include/libnetlink.h $SACD/usr/include
}
