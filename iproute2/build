prepare() {
  patch \
    -i "$CERD"/$nom/patches/glaucus/0001-remove-arpd.patch \
    -p 0
}

configure() {
  ./configure \
    --color=always \
    --libdir=/usr/lib \
    --libbpf_force=off \
    --prefix=/usr
}

build() {
  make
}

package() {
  make \
    SBINDIR=/usr/bin \
    DESTDIR="$SACD" \
    install
}
