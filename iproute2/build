prepare() {
  patch \
    -i "$CERD"/$nom/patches/glaucus/0001-remove-arpd.patch \
    -p 0
}

configure() {
  ./configure \
    --color always \
    --include_dir /usr/include
}

build() {
  make
}

package() {
  make \
    SBINDIR=/usr/bin \
    DESTDIR="$SACD" \
    install
}
