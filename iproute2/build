prepare() {
  patch -p1 -i "$CERD"/$nom/patches/alpine/0001-libnetlink-fix-build-with-musl-and-gcc-14.patch
  patch -p1 -i "$CERD"/$nom/patches/arch/0001-make-$nom-fhs-compliant.patch

  patch -p0 -i "$CERD"/$nom/patches/glaucus/0001-remove-arpd.patch
}

configure() {
  ./configure
}

build() {
  make
}

check() {
  :
}

package() {
  make \
    BINDIR=/usr/bin \
    DESTDIR="$SACD" \
    install
}
