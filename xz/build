prepare() {
  for i in default-threading io-size minor-optimization speedup; do
    patch \
      -i "$CERD"/$nom/patches/clear/$i.patch \
      -p 1
  done

  ./autogen.sh --no-po4a
}

configure() {
  glaucus-configure \
    --enable-threads=posix \
    --disable-doc \
    --disable-static \
    --enable-pic \
    --disable-symbol-versions \
    --disable-nls \
    --disable-rpath

  patch \
    -i "$CERD"/$nom/patches/alpine/0001-disable-rpath.patch \
    -p 0
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$SACD" \
    install-strip
}
