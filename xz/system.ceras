prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  radula_behave_patch 1 $nom clear default-threading
  radula_behave_patch 1 $nom clear io-size
  radula_behave_patch 1 $nom clear speedup
  radula_behave_patch 2 $nom clear add-pgo
}

configure() {
  $AUTORECONF

  ./configure \
    --prefix=/usr \
    --disable-doc \
    --disable-static \
    --disable-nls \
    --disable-rpath
}

build() {
  $MAKE \
    pgo-build
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install-strip
}
