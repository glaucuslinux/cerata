prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $XSRC/$nom --delete
  cd $XSRC/$nom

  $RSYNC $CERD/binutils/config.guess build-aux
  $RSYNC $CERD/binutils/config.rpath build-aux
  $RSYNC $CERD/binutils/config.sub build-aux

  $PATCH -p1 -i $CERD/$nom/patches/clear/default-threading.patch
  $PATCH -p1 -i $CERD/$nom/patches/clear/io-size.patch
  $PATCH -p1 -i $CERD/$nom/patches/clear/speedup.patch
}

configure() {
  $AUTORECONF

  ./configure \
    --build=$BLD \
    --host=$TGT \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --disable-doc \
    --disable-static \
    --disable-nls \
    --disable-rpath

  # Further disable rpath
  $PATCH -p0 -i $CERD/$nom/patches/alpine/0001-disable-rpath.patch
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$CRSD \
    install-strip

  $RM $CRSD/usr/lib/liblzma.la
}
