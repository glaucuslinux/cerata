ceras_prepare() {
  rsync $RADULA_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  patch --no-backup-if-mismatch -p1 -i $CERD/$nom/patches/clear/default-threading.patch
  patch --no-backup-if-mismatch -p1 -i $CERD/$nom/patches/clear/io-size.patch
  patch --no-backup-if-mismatch -p1 -i $CERD/$nom/patches/clear/speedup.patch

  autoreconf -vfis

  rsync $RADULA_RSYNC_FLAGS $CERD/binutils/config.guess build-aux
  rsync $RADULA_RSYNC_FLAGS $CERD/binutils/config.rpath build-aux
  rsync $RADULA_RSYNC_FLAGS $CERD/binutils/config.sub build-aux
}

ceras_configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --disable-doc \
    --disable-static \
    --disable-nls \
    --disable-rpath \
    --with-pic

  # Further disable rpath
  patch --no-backup-if-mismatch -p0 -i $CERD/$nom/patches/alpine/0001-disable-rpath.patch
}

ceras_build() {
  make
}

ceras_check() {
  :
}

ceras_install() {
  make \
    DESTDIR=$SACD \
    install-strip

  # Remove libtool archive
  rm -fv $SACD/usr/lib/liblzma.la
}
