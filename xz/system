prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  $PATCH -p1 -i $CERD/$nom/patches/clear/default-threading.patch
  $PATCH -p1 -i $CERD/$nom/patches/clear/io-size.patch
  $PATCH -p1 -i $CERD/$nom/patches/clear/minor-optimization.patch
  $PATCH -p1 -i $CERD/$nom/patches/clear/speedup.patch

  $AUTORECONF

  $RSYNC $CERD/binutils/config.guess build-aux
  $RSYNC $CERD/binutils/config.rpath build-aux
  $RSYNC $CERD/binutils/config.sub build-aux
}

configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --runstatedir=/run \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --datarootdir=/usr/share \
    --datadir=/usr/share \
    --infodir=/usr/share/info \
    --localedir=/usr/share/locale \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/$nom \
    --disable-doc \
    --disable-static \
    --disable-nls \
    --disable-rpath \
    --with-pic

  # Further disable rpath
  $PATCH -p0 -i $CERD/$nom/patches/alpine/0001-disable-rpath.patch
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$VNMD/$nom/sac \
    install-strip

  # Remove libtool archive (.la) file
  $RM $VNMD/$nom/sac/usr/lib/liblzma.la
}
