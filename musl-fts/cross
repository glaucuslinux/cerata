prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver-mk2/ $XSRC/$nom --delete
  cd $XSRC/$nom
}

configure() {
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-disable-static.patch
}

build() {
  $MAKE \
    PREFIX=/usr \
    BINDIR=/usr/bin \
    INCDIR=/usr/include \
    LIBDIR=/usr/lib \
    MANDIR=/usr/share/man/man3
}

check() {
  :
}

install() {
  $MAKE \
    PREFIX=/usr \
    BINDIR=/usr/bin \
    INCDIR=/usr/include \
    LIBDIR=/usr/lib \
    MANDIR=/usr/share/man/man3 \
    DESTDIR=$CRSD \
    install

  $LN fts.3 $CRSD/usr/share/man/man3/$nom.3
}
