ceras_prepare() {
  rsync $RADULA_RSYNC_FLAGS $SRCD/$nom/$nom-$ver-mk2/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

ceras_configure() {
  patch --no-backup-if-mismatch -p0 -i $CERD/$nom/patches/glaucus/0001-disable-static.patch
}

ceras_build() {
  $MAKE \
    PREFIX=/usr \
    BINDIR=/usr/bin \
    INCDIR=/usr/include \
    LIBDIR=/usr/lib \
    MANDIR=/usr/share/man/man3
}

ceras_check() {
  :
}

ceras_install() {
  $MAKE \
    PREFIX=/usr \
    BINDIR=/usr/bin \
    INCDIR=/usr/include \
    LIBDIR=/usr/lib \
    MANDIR=/usr/share/man/man3 \
    DESTDIR=$CRSD \
    install

  ln -sfnv fts.3 $CRSD/usr/share/man/man3/$nom.3
}
