build() {
  $CC $CFLAGS $LDFLAGS main_posix.c -o $nom
}

package() {
  mv -f $nom "$CRSD"/usr/bin

  # Compatibility symlinks
  for i in pkg-config $TGT-pkg-config; do
    ln -fs $nom "$CRSD"/usr/bin/$i
  done
}
