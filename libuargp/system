ceras_prepare() {
  $RADULA_RSYNC $SRCD/$nom $TSRC --delete
  cd $TSRC/$nom
}

ceras_configure() {
  $RADULA_PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-disable-static.patch
}

ceras_build() {
  $MAKE
}

ceras_check() {
  :
}

ceras_install() {
  $MAKE \
    prefix=/usr \
    bindir=/usr/bin \
    includedir=/usr/include \
    libdir=/usr/lib \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS" \
    DESTDIR=$SACD \
    install

  mv -fv $SACD/usr/lib/libargp.so $SACD/usr/lib/libargp.so.0.0.0
  ln -sfnv libargp.so.0.0.0 $SACD/usr/lib/libargp.so
  ln -sfnv libargp.so.0.0.0 $SACD/usr/lib/libargp.so.0
}
