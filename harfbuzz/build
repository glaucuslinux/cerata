configure() {
  glaucus-muon \
    -Dglib=enabled \
    -Dgobject=disabled \
    -Dcairo=disabled \
    -Dchafa=disabled \
    -Dicu=disabled \
    -Dfreetype=enabled \
    -Dtests=disabled \
    -Dintrospection=disabled \
    -Ddocs=disabled \
    build
}

build() {
  samu \
    -C build
}

package() {
  DESTDIR="$SACD" \
  muon \
    -C build \
    install
}
