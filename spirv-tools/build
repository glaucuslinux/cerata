prepare() {
  cd "$TMPD"/$nom/SPIRV-Tools-vulkan-sdk-$ver
}

configure() {
  glaucus-cmake \
    -B build \
    -DSPIRV-Headers_SOURCE_DIR=/usr \
    -DSPIRV_SKIP_TESTS=ON \
    -DSPIRV_TOOLS_BUILD_STATIC=OFF \
    -DSPIRV_WERROR=OFF
}

build() {
  make \
    -C build
}

package() {
  DESTDIR="$SACD" \
  make \
    -C build \
    install/strip
}
