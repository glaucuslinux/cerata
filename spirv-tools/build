prepare() {
  cd "$TMPD"/$nom/SPIRV-Tools-vulkan-sdk-$ver

  mkdir -pv build
}

configure() {
  glaucus-cmake \
    -B build \
    -DSPIRV-Headers_SOURCE_DIR=/usr \
    -DSPIRV_SKIP_TESTS=ON \
    -DSPIRV_TOOLS_BUILD_STATIC=OFF \
    -DSPIRV_WERROR=OFF
}

build() {
  samu \
    -C build
}

check() {
  muon \
    test \
    -R \
    -C build
}

package() {
  DESTDIR="$SACD" \
  samu \
    -C build \
    install/strip
}
