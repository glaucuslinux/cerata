prepare() {
  mkdir -pv build
}

configure() {
  glaucus-cmake \
    -B build \
    -DBUILD_APPS=OFF \
    -DBUILD_STATIC_LIBS=OFF \
    -DBUILD_TESTING=OFF \
    -DDISABLE_EXTRA_LIBS=ON \
    -DENABLE_RDRAND=ON \
    -DENABLE_THREADING=ON
}

build() {
  samu \
    -C build
}

check() {
  muon \
    test \
    -R \
    -C build
}

package() {
  DESTDIR="$SACD" \
  samu \
    -C build \
    install/strip
}
