prepare() {
  mkdir -p build
}

configure() {
  glaucus-cmake \
    -B build \
    -DBUILD_APPS=OFF \
    -DBUILD_STATIC_LIBS=OFF \
    -DBUILD_TESTING=OFF \
    -DDISABLE_EXTRA_LIBS=ON \
    -DENABLE_RDRAND=ON \
    -DENABLE_THREADING=ON
}

build() {
  make \
    -C build
}

package() {
  DESTDIR="$SACD" \
  make \
    -C build \
    install-strip
}
