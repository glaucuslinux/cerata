prepare() {
  patch -p0 -i "$CERD"/$nom/patches/glaucus/0001-use-gnu-hash-style.patch
}

configure() {
  ./configure \
    --prefix=/usr \
    --dynlibdir=/usr/lib \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --sysconfdir=/etc \
    --sysdepdir=/usr/lib/$nom/sysdeps \
    --disable-static
}

build() {
  make \
    strip
}

package() {
  make \
    DESTDIR="$SACD" \
    install

  mkdir -pv "$SACD"/usr/lib/pkgconfig
  cp -afv "$CERD"/$nom/files/$nom.pc "$SACD"/usr/lib/pkgconfig
}
