prepare() {
  patch \
    -i "$CERD"/$nom/patches/glaucus/0001-use-gnu-hash-style.patch \
    -p 0
}

configure() {
  ./configure \
    --prefix=/usr \
    --dynlibdir=/usr/lib \
    --libdir=/usr/lib \
    --sysconfdir=/etc \
    --sysdepdir=/usr/lib/$nom/sysdeps \
    --disable-static
}

build() {
  make \
    strip
}

package() {
  make \
    DESTDIR="$SACD" \
    install

  mkdir -p "$SACD"/usr/lib/pkgconfig
  cp -fPp "$CERD"/$nom/files/$nom.pc "$SACD"/usr/lib/pkgconfig
}
