ceras_prepare() {
  rsync $RADULA_RSYNC_FLAGS $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

ceras_configure() {
  patch --no-backup-if-mismatch -p0 -i $CERD/$nom/patches/glaucus/0001-use-gnu-hash-style.patch

  ./configure \
    --prefix=/usr \
    --dynlibdir=/usr/lib \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --sysconfdir=/etc \
    --sysdepdir=/usr/lib/$nom/sysdeps \
    --disable-static
}

ceras_build() {
  make \
    strip
}

ceras_check() {
  :
}

ceras_install() {
  make \
    DESTDIR=$SACD \
    install

  install -dv $SACD/usr/lib/pkgconfig
  rsync $RADULA_RSYNC_FLAGS $CERD/$nom/$nom.pc $SACD/usr/lib/pkgconfig
}
