ceras_prepare() {
  $RADULA_RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom
}

ceras_configure() {
  patch --no-backup-if-mismatch -p0 -i $CERD/$nom/patches/glaucus/0001-use-gnu-hash-style.patch

  ./configure \
    --host=$TGT \
    --prefix=/usr \
    --dynlibdir=/usr/lib \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --datadir=/etc \
    --sysdepdir=/usr/lib/$nom/sysdeps \
    --with-include=$CRSD/usr/include \
    --with-lib=$CRSD/usr/lib \
    --with-dynlib=$CRSD/usr/lib \
    --disable-static \
    --with-sysdep-devurandom=yes \
    --with-sysdep-posixspawnearlyreturn=no
}

ceras_build() {
  $MAKE \
    strip
}

ceras_check() {
  :
}

ceras_install() {
  $MAKE \
    DESTDIR=$CRSD \
    install

  $RADULA_RSYNC $CERD/$nom/$nom.pc $PKG_CONFIG_LIBDIR
}
