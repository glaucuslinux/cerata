prepare() {
  $MKDIR $XBLD/$nom
  cd $XBLD/$nom
}

configure() {
  :
}

build() {
  CFLAGS="$CFLAGS -DMKSH_BINSHPOSIX -DMKSH_BINSHREDUCED" \
  sh $SRCD/$nom/$nom-$ver/Build.sh \
    -L \
    -r
}

install() {
  $MKDIR $XCER/$nom/sac/usr/bin
  $RSYNC $nom $XCER/$nom/sac/usr/bin/$nom
}
