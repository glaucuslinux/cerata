prepare() {
  $MKDIR $SBLD/$nom
  cd $SBLD/$nom
}

configure() {
  :
}

build() {
  CFLAGS="$CFLAGS -DMKSH_BINSHPOSIX -DMKSH_BINSHREDUCED" \
  sh $SRCD/mksh/mksh/Build.sh \
    -L \
    -r
}

check() {
  :
}

install() {
  $RSYNC $nom $SCER/$nom/sac/usr/bin
}
