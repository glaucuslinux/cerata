ceras_prepare() {
  install -dv $TBLD/$nom
  cd $TBLD/$nom
}

ceras_configure() {
  :
}

ceras_build() {
  CFLAGS="$CFLAGS -DMKSH_BINSHPOSIX -DMKSH_BINSHREDUCED" \
  sh $SRCD/mksh/mksh/Build.sh \
    -L \
    -r
}

ceras_check() {
  :
}

ceras_install() {
  $RADULA_RSYNC $nom $SACD/usr/bin
}
