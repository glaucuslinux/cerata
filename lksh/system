prepare() {
  install -dv $TBLD/$nom
  cd $TBLD/$nom
}

configure() {
  :
}

build() {
  CFLAGS="$CFLAGS -DMKSH_BINSHPOSIX -DMKSH_BINSHREDUCED" \
  sh $SRCD/mksh/mksh/Build.sh \
    -L \
    -r
}

check() {
  :
}

install() {
  $RSYNC $nom $SACD/usr/bin
}
