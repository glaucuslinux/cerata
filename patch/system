prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  $RSYNC $CERD/binutils/config.guess build-aux
  $RSYNC $CERD/binutils/config.sub build-aux

  $PATCH -p1 -i $CERD/$nom/patches/upstream/0001-Avoid-set_file_attributes-sign-conversion-warnings.patch
  $PATCH -p1 -i $CERD/$nom/patches/upstream/0002-Test-suite-compatibility-fixes.patch
  $PATCH -p1 -i $CERD/$nom/patches/upstream/0003-Test-suite-fix-Korn-shell-incompatibility.patch
  $PATCH -p1 -i $CERD/$nom/patches/upstream/0004-Fix-segfault-with-mangled-rename-$nom.patch
  $PATCH -p1 -i $CERD/$nom/patches/upstream/0005-Allow-input-files-to-be-missing-for-ed-style-${nom}es.patch
  $PATCH -p1 -i $CERD/$nom/patches/upstream/0006-Fix-arbitrary-command-execution-in-ed-style-${nom}es-.patch
  $PATCH -p1 -i $CERD/$nom/patches/upstream/0007-Invoke-ed-directly-instead-of-using-the-shell.patch
  $PATCH -p1 -i $CERD/$nom/patches/upstream/0011-Fix-check-of-return-value-of-fwrite.patch
  $PATCH -p1 -i $CERD/$nom/patches/upstream/0012-Fix-ed-style-test-failure.patch

  $PATCH -p1 -i $CERD/$nom/patches/gentoo/$nom-2.7.6-CVE-2018-1000156-fix1.patch

  $PATCH -p1 -i $CERD/$nom/patches/0015-Don-t-leak-temporary-file-on-failed-multi-file-ed-st.patch
  $PATCH -p1 -i $CERD/$nom/patches/0016-Make-the-debug-2-output-more-useful.patch
  $PATCH -p1 -i $CERD/$nom/patches/0017-Fix-swapping-fake-lines-in-pch_swap.patch
  $PATCH -p1 -i $CERD/$nom/patches/0018-Improve-support-for-memory-leak-detection.patch
  $PATCH -p1 -i $CERD/$nom/patches/0019-Skip-ed-test-when-the-ed-utility-is-not-installed.patch
  $PATCH -p1 -i $CERD/$nom/patches/0020-Abort-when-cleaning-up-fails.patch
  $PATCH -p1 -i $CERD/$nom/patches/0021-Don-t-crash-when-RLIMIT_NOFILE-is-set-to-RLIM_INFINI.patch
  $PATCH -p1 -i $CERD/$nom/patches/0022-Don-t-follow-symlinks-unless-follow-symlinks-is-give.patch
  $PATCH -p1 -i $CERD/$nom/patches/0023-Avoid-invalid-memory-access-in-context-format-diffs.patch
  $PATCH -p1 -i $CERD/$nom/patches/0024-Fix-failed-assertion-outstate-after_newline.patch
  $PATCH -p1 -i $CERD/$nom/patches/0025-Add-missing-section-tests-to-context-format-test-cas.patch
  $PATCH -p1 -i $CERD/$nom/patches/0026-Fix-test-for-presence-of-BASH_LINENO.patch
}

configure() {
  $AUTORECONF

  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/$nom \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --libdir=/usr/lib \
    --includedir=/usr/include
}

build() {
  $MAKE
}

check() {
  :
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install-strip
}
