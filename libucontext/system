prepare() {
  # Source directory has $nom twice in it
  $RSYNC $SRCD/$nom/$nom-$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom
}

configure() {
  $PATCH -p0 -i $CERD/$nom/patches/glaucus/0001-disable-static.patch
}

build() {
  # First LIBDIR is for the path inside libucontext.pc
  $MAKE \
    ARCH=$UARCH \
    LIBDIR=/usr/lib \
    INCLUDEDIR=/usr/include
}

check() {
  :
}

install() {
  # Second LIBDIR is for the final installation path
  $MAKE \
    ARCH=$UARCH \
    LIBDIR=/usr/lib \
    INCLUDEDIR=/usr/include \
    DESTDIR=$SCER/$nom/sac \
    install

  # Don't depend on `scdoc` for documentation
  $MKDIR $SCER/$nom/sac/usr/share/man/man3
  $RSYNC $CERD/$nom/$nom.3 $SCER/$nom/sac/usr/share/man/man3
  $LN $nom.3 $SCER/$nom/sac/usr/share/man/man3/${nom}_getcontext.3
  $LN $nom.3 $SCER/$nom/sac/usr/share/man/man3/${nom}_makecontext.3
  $LN $nom.3 $SCER/$nom/sac/usr/share/man/man3/${nom}_setcontext.3
  $LN $nom.3 $SCER/$nom/sac/usr/share/man/man3/${nom}_swapcontext.3
}
