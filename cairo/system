ceras_prepare() {
  $RADULA_RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete
  cd $TSRC/$nom

  patch --no-backup-if-mismatch -p1 -i $CERD/$nom/patches/glaucus/musl-stacksize.patch

  install -dv $TBLD/$nom
}

ceras_configure() {
  glaucus-muon \
    -Dpng=enabled \
    -Dtests=disabled \
    $TBLD/$nom
}

ceras_build() {
  samu \
    -C $TBLD/$nom
}

ceras_check() {
  :
}

ceras_install() {
  DESTDIR=$SACD \
  muon \
    -C $TBLD/$nom \
    install
}
