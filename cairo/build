prepare() {
  patch \
    -i "$CERD"/$nom/patches/alpine/musl-stacksize.patch \
    -p 1

  mkdir -p build
}

configure() {
  glaucus-muon \
    -Ddwrite=disabled \
    -Dfontconfig=enabled \
    -Dfreetype=enabled \
    -Dpng=enabled \
    -Dquartz=disabled \
    -Dtee=enabled \
    -Dxcb=disabled \
    -Dxlib=disabled \
    -Dzlib=enabled \
    -Dtests=disabled \
    -Dlzo=disabled \
    -Dglib=enabled \
    -Dspectre=disabled \
    -Dsymbol-lookup=disabled \
    build
}

build() {
  samu \
    -C build
}

check() {
  muon \
    test \
    -R \
    -C build
}

package() {
  DESTDIR="$SACD" \
  muon \
    -C build \
    install
}
